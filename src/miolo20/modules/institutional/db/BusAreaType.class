/**
 * Class to manipulate the insAreaType table
 **/
class BusinessInstitutionalBusAreaType extends sBusiness
{
    /**
     * List all records from the table handled by the class
     *
     * @param: None
     *
     * @returns (array): Return an array with the entire table
     *
     **/
    public function listAreaType()
    {
        $sql = 'SELECT areaTypeId,
                       description
                  FROM insAreaType
              ORDER BY description';

        $ret = $this->getDatabase()->query($sql);

        return $ret;
    }

    /**
     * Return a specific record from the database
     *
     * @param $areaTypeId (integer): Primary key of the record to be retrieved
     *
     * @return (object): Return an object of the type handled by the class
     *
     **/
    public function getAreaType($areaTypeId)
    {
        $sql = 'SELECT A.areaTypeId,
                       A.description,
                       A.userName,
                       TO_CHAR(A.dateTime,\'' . SAGU::getParameter('BASIC', 'MASK_TIMESTAMP') . '\'),
                       A.ipAddress
                  FROM insAreaType A
                 WHERE A.areaTypeId = ?';

        $result = $this->getDatabase()->query(SAGU::prepare($sql, $areaTypeId));

        $areaType = new InsAreaType();

        list ( $areaType->areaTypeId,
               $areaType->description,
               $areaType->userName,
               $areaType->dateTime,
               $areaType->ipAddress ) = $result[0];

        return $areaType;
    }

    /**
     * Do a search on the database table handled by the class
     *
     * @param $filters (object): Search filters
     *
     * @return (array): An array containing the search results
     **/
    public function searchAreaType($filters)
    {
        $sql = 'SELECT A.areaTypeId,
                       A.description,
                       A.userName,
                       TO_CHAR(A.dateTime,\'' . SAGU::getParameter('BASIC', 'MASK_TIMESTAMP') . '\'),
                       A.ipAddress
                  FROM insAreaType A';

        if ( strlen($filters->areaTypeId) > 0 )
        {
            $where .= ' AND A.areaTypeId = ?';
            $args[] = $filters->areaTypeId;
        }
        if ( strlen($filters->description) > 0 )
        {
            $where .= ' AND UNACCENT(A.description) ILIKE UNACCENT(?)';
            $args[] = $filters->description . '%';
        }

        unset($result);
        if ( strlen($where) > 0 )
        {
            $sql .= ' WHERE ' . substr($where, 4) . '
                   ORDER BY A.description';

            $result = $this->getDatabase()->query(SAGU::prepare($sql, $args));
        }

        return $result;
    }

    /**
     * Insert a new record
     *
     * @param $data (object): An object of the type handled by the class
     *
     * @return True if succed, otherwise False
     *
     **/
    public function insertAreaType($data)
    {
        $sql = 'INSERT INTO insAreaType
                            (description)
                     VALUES (?)';

        $args[] = $data->description;

        $result = $this->getDatabase()->execute(SAGU::prepare($sql, $args));

        return $result;
    }

    /**
     * Update data from a specific record
     *
     * @param $data (object): Data which will replace the old record data
     *
     * @return (boolean): True if succeed, otherwise False
     *
     **/
    public function updateAreaType($data)
    {
        $sql = 'UPDATE insAreaType
                   SET description   = ?
                 WHERE areaTypeId = ?';

        $args = array(
                       $data->description,
                       $data->areaTypeId
                     );

        $sqls = SAGU::prepare($sql, $args);

        for ( $i=0; $i<count($sqls); $i++ )
        {
            $result = $this->getDatabase()->execute($sqls[$i]);
        }

        return $result;
    }

    /**
     * Delete a record
     *
     * @param $areaTypeId (string): Primary key for deletion
     *
     * @return (boolean): True if succeed, otherwise False
     *
     **/
    public function deleteAreaType($areaTypeId)
    {
        $sql = 'DELETE FROM insAreaType
                      WHERE areaTypeId = ?';

        $result = $this->getDatabase()->execute(SAGU::prepare($sql, $areaTypeId));

        return $result;
    }
}
