class GrdImages extends SGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();

        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */
        $columns = array( 
                          new MGridColumn('image', 'left', true, null, false, null, true),
                          new MGridColumn( _M('Miniatura', $module), 'left', true, null, true, null, true ),
                          new MGridColumn( _M('Nome da imagem', $module), 'left', true, null, true, null, true ),
                          new MGridColumn( _M('Módulo', $module), 'left', true, null, true, SModules::getList(), true ),
                          new MGridColumn( _M('Caminho', $module), 'left',  false, null, true, null, true ),
                          new MGridColumn('extension', 'left', true, null, false, null, true )
                        );

        parent::__construct($filters, $columns, 'GrdImages');
        
        $lnkDelete = $MIOLO->getActionURL( $module, $home, null, array('function'=>'deleteImage','image'=>'%0%') );
        $this->setLinkType('hyperlink');
        $this->addActionIcon( _M('Excluir imagem', $module), 'button_drop.png', $lnkDelete );
        
        $lnkDownload = $MIOLO->getActionURL( $module, $home, null, array('function'=>'download','image'=>'%0%','modulo'=>'%3%', 'extension' => '%5%') );
        $this->setLinkType('hyperlink');
        $this->addActionIcon( _M('Baixar arquivo', $module), 'save-20x20.png', $lnkDownload );
        
    }
}
?>
