/**
 * Grid used by form to display search results
 **/
class GrdReports extends SGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        
        //$groups = MIOLO::getInstance()->getBusiness('admin','group');
        $busTransaction = new BusinessAdminTransaction();
        $sreport = new SReport();

        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */
        $columns = array( 
                          new MGridColumn( 'report', 'left', false, null, false, null, true ),
                          new MGridColumn( _M('Título', $module), 'left', false, null, true, null, true ),
                          new MGridColumn( _M('Descrição', $module), 'left', false, null, true, null, true ),
                          new MGridColumn( _M('Módulo', $module), 'center', false, null, true, SModules::getList(), true ),
                          //new MGridColumn( _M('Permissão', $module), 'left',  false, null, true, $groups->listGroups(), true ),
                          new MGridColumn( _M('Permissão', $module), 'center',  false, null, true, $busTransaction->getListTransactions(), true ),
                          new MGridColumn( _M('Tipo', $module), 'center',  false, null, true, $sreport->listTypes(), true ),
                          new MGridColumn( _M('Origem', $module), 'center',  false, null, true, null, true ),
                          new MGridColumn( _M('Arquivo', $module), 'left',  false, null, true, null, true ),                          
                          //new MGridColumn( _M('Caminho', $module), 'left',  false, null, true, null, true )
                        );

        $primaryKey = array('report' => '%0%','modulo'=>'%3%');

        parent::__construct($filters, $columns, 'GrdReports', $primaryKey);
        
        $lnkDownload = $MIOLO->getActionURL( $module, $home, null, array('function'=>'download','report'=>'%0%','modulo'=>'%3%') );
        $this->setLinkType('hyperlink');
        $this->addActionIcon( _M('Baixar arquivo', $module), 'save-20x20.png', $lnkDownload );
        
        $lnkGenerate = $MIOLO->getActionURL( $module, 'main:report:generateReport', null, $primaryKey );
        $this->addActionIcon( _M('Gerar relatório', $module), 'print-20x20.png', $lnkGenerate );
        
        $this->setRowMethod('GrdReports', 'rowMethod');
    }
    
    public function rowMethod($i, $row, $actions, $columns)
    {
        // Se for relatório do sistema, não permite excluir.
        if ( $row[6] == 'SISTEMA' )
        {
            $actions[1]->enabled = FALSE;
            $actions[1]->alt = _M('Não é possível excluir um relatório do sistema.', $module);
        }
        else
        {
            $actions[1]->enabled = TRUE;
        }
        
        // Se for um sub-relatório, não permite editar.
        if ( $row[2] == 'SUBREPORT' )
        {
            $actions[0]->enabled = FALSE;
            $actions[0]->alt = _M('Não é possível editar um sub-relatório.', $module);
        }
        else
        {
            $actions[0]->enabled = TRUE;
        }
    }
}
