/**
 * Class to manipulate the basLegalPersonType table
 **/
class BusinessBasicBusLegalPersonType extends sBusiness
{
    /**
     * List all records from the table handled by the class
     *
     * @param: None
     *
     * @returns (array): Return an array with the entire table
     *
     **/
    public function listLegalPersonType()
    {
        $db  = $this->getDatabase();
        $sql = 'SELECT legalPersonTypeId,
                       description
                  FROM basLegalPersonType
              ORDER BY description';
        $ret = $db->query($sql);
        
        return $ret;
    }
    
    /**
     * Return a specific record from the database
     *
     * @param $legalPersonTypeId (integer): Primary key of the record to be retrieved
     *
     * @return (object): Return an object of the type handled by the class
     *
     **/
    public function getLegalPersonType($legalPersonTypeId)
    {
        $sql = 'SELECT legalPersonTypeId,
                       description,
                       userName,
                       TO_CHAR(dateTime,\'' . SAGU::getParameter('BASIC', 'MASK_TIMESTAMP') . '\'),
                       ipAddress
                  FROM basLegalPersonType
                 WHERE legalPersonTypeId = ?';

        $db     = $this->getDatabase();
        $result = $db->query(SAGU::prepare($sql, $legalPersonTypeId));
        

        $legalPersonType = new basLegalPersonType();
        list ( $legalPersonType->legalPersonTypeId,
               $legalPersonType->description,
               $legalPersonType->userName,
               $legalPersonType->dateTime,
               $legalPersonType->ipAddress ) = $result[0];

        return $legalPersonType; 
    }
    
    /**
     * Do a search on the database table handled by the class
     *
     * @param $filters (object): Search filters
     *
     * @return (array): An array containing the search results
     **/
    public function searchLegalPersonType($filters)
    {
        $sql= 'SELECT legalPersonTypeId,
                      description
                 FROM basLegalPersonType ';

        if ( strlen($filters->legalPersonTypeId) > 0 )
        {
            $where .= ' AND legalPersonTypeId = ? ';
            $args[] = $filters->legalPersonTypeId;
        }
        if ( strlen($filters->description) > 0 )
        {
            $where .= ' AND UNACCENT(description) ILIKE UNACCENT(?) ';
            $args[] = $filters->description . '%';
        }

        unset($result);
        if ( strlen($where) > 0 )
        {
            $sql .= ' WHERE ' . substr($where, 4) . ' ORDER BY description';
            $db = $this->getDatabase();
            $result = $db->query(SAGU::prepare($sql, $args));
            
        }

        return $result;
    }

    /**
     * Insert a new record
     *
     * @param $data (object): An object of the type handled by the class
     *
     * @return True if succed, otherwise False
     *
     **/
    public function insertLegalPersonType($data)
    {
        $sql = 'INSERT INTO basLegalPersonType
                            (description)
                     VALUES (?)';

        $db     = $this->getDatabase();
        $result = $db->execute(SAGU::prepare($sql, $data->description));
        

        return $result;
    }

    /**
     * Update data from a specific record
     *
     * @param $data (object): Data which will replace the old record data
     *
     * @return (boolean): True if succeed, otherwise False
     *
     **/
   public function updateLegalPersonType($data)
    {
        $sql = 'UPDATE basLegalPersonType
                   SET description       = ?
                 WHERE legalPersonTypeId = ?';

        $args = array( $data->description,
                       $data->legalPersonTypeId );

        $db   = $this->getDatabase();
        $sqls = SAGU::prepare($sql, $args);

        for ( $i=0; $i<count($sqls); $i++ )
        {
            $result = $db->execute($sqls[$i]);
        }

        

        return $result;
    }

    /**
     * Delete a record
     *
     * @param $legalPersonTypeId (string): Primary key for deletion
     *
     * @return (boolean): True if succeed, otherwise False
     *
     **/
   public function deleteLegalPersonType($legalPersonTypeId)
    {
        $sql = 'DELETE FROM basLegalPersonType
                      WHERE legalPersonTypeId = ?';

        $db     = $this->getDatabase();
        $result = $db->execute(SAGU::prepare($sql, $legalPersonTypeId));
        

        return $result;
    }

}

