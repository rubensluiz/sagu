class FrmUnificarCidade extends SForm
{    
    /**
     * Class constructor
     **/
    public function __construct()
    {
        parent::__construct(_M('Unificar cidade'), null, null);
        
        $this->toolbar->disableButton(MToolBar::BUTTON_SAVE);
        $this->toolbar->disableButton(MToolBar::BUTTON_SEARCH);
        $this->toolbar->disableButton(MToolBar::BUTTON_PRINT);
        $this->toolbar->disableButton(MToolBar::BUTTON_DELETE);
    }

    /**
     * Default method to define fields
     **/
    public function defineFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = $MIOLO->getCurrentModule();
        
        $cidadeQueFica = new SLookupContainer('cidadeQueFica', null, array(
            'module' => 'basic',
            'item' => 'City',
            'label' => _M('Cidade que permanece', $module),
            'descriptionHint' => _M('Cidade que irá permanecer no sistema', $module),
            'hint' => _M('Informe a cidade que irá permanecer do sistema', $module),
            'required' => true
        ));
        
        $cidadeQueSai = new SLookupContainer('cidadeQueSai', null, array(
            'module' => 'basic',
            'item' => 'City',
            'label' => _M('Cidade que sai', $module),
            'descriptionHint' => _M('Cidade que irá sair do sistema', $module),
            'hint' => _M('Informe a cidade que irá sair do sistema', $module),
            'required' => true
        ));
        
        
        $fields[] = $cidadeQueFica;
        $fields[] = $cidadeQueSai;
        $fields[] = new MSeparator();

        $button = new MButton('btnConfirmar', _M('Confirmar'));
        $divButton = new Mdiv('', $button);
        $fields[] = $divButton;
        
        //Validadores
        $validators[] = new MRequiredValidator('cidadeQueFica', _M('Cidade que permanece'));
        $validators[] = new MRequiredValidator('cidadeQueSai', _M('Cidade que ira sair do sistema'));
        
        parent::defineFields(array('fields' => $fields, 'validators' => $validators));
        
    }    
    
    /**
     * Ação de unificação da pessoa.
     * 
     * @param sdtClass $args
     * @return boolean
     */
    public function btnConfirmar_click($args = null)
    {
        $MIOLO  = MIOLO::getInstance();
        $module = $MIOLO->getCurrentModule();
        
        try
        {
            SDatabase::beginTransaction();
            
            $cidadeQueFica = $this->getFormValue('cidadeQueFica');
            $cidadeQueSai  = $this->getFormValue('cidadeQueSai');
            $busCidade = new BusinessBasicBusCity();
            
            if($cidadeQueFica == $cidadeQueSai)
            {
                throw new Exception(_M('Ops! Você selecionou a mesma cidade para ser unificada. <br>Verifique as cidades selecionadas.', $module));
            }
            
            if ( $busCidade->unificarCidade($cidadeQueSai, $cidadeQueFica) )
            {
                SDatabase::commit();
            }
            
            $MIOLO->information(_M("Cidade unificado com sucesso: {$cidadeQueFica}.", $module));
        }
        catch ( Exception $err )
        {
            SDatabase::rollback();
            $MIOLO->error($err->getMessage());
        }
    }
}
