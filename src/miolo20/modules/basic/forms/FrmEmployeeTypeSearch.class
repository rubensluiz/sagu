/**
 * Form to search the basEmployeeType table
 */
class FrmEmployeeTypeSearch extends SSearchForm
{

    /**
     * Class constructor
     */
    public function __construct()
    {
        parent::__construct(_M('Localizar', 'basic'), new BasEmployeeType(), array('employeeTypeId'), 'BusEmployeeType');
    }

    /**
     *  Default method to define fields
     */
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();
        
        //Field employee type
        $employeeTypeIdS = new MTextField('employeeTypeIdS', $this->employeeTypeIdS->value, _M('Código', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $employeeTypeIdS->setJsHint(_M('Informe o código do tipo de funcionário', $module));
        $validators[] = new MIntegerValidator('employeeTypeIdS', _M('Tipo de funcionário', $module), 'optional');
        $fields[] = $employeeTypeIdS;
        
        //Field employee type description
        $employeeTypeDescriptionS = new MTextField('descriptionS', $this->employeeTypeDescriptionS->value, _M('Descrição', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $employeeTypeDescriptionS->setJsHint(_M('Informe a descrição do tipo de funcionário', $module));
        $fields[] = $employeeTypeDescriptionS;
        
        parent::defineFields($fields, $module, 'GrdEmployeeTypeSearch');
    }
}

