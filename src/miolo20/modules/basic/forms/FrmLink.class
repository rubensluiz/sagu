/**
 * Form to manipulate a link
 **/
class FrmLink extends SManagementForm
{

    /**
     * Class constructor
     **/
    public function __construct()
    {
        parent::__construct(new BasLink(), array('linkId'), 'BusLink');
    }

    /**
     * Default method to define fields
     **/
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();
        $function = MIOLO::_request('function');

        if ( in_array($function,array(SForm::FUNCTION_UPDATE, SForm::FUNCTION_DELETE)) )
        {
            $pk = $this->getObjectPk();
            $fields[] = new MTextLabel('', $pk->linkId, _M('Código',$module));
            $fields[] = new MHiddenField('linkId', $pk->linkId);
            
            $data = $this->busObject->getLink($pk->linkId);
        }

        //Field description
        $data->description = $this->getFormValue('description', $data->description);
        $description = new MTextField('description', $data->description, _M('Descrição', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $description->setJsHint(_M('Informe a descrição do vínculo', $module));
        $validators[] = new MRequiredValidator('description', _M('Descrição', $module));
        $fields[] = $description;
        
        //Field level
        $data->level = $this->getFormValue('level', $data->level);
        $level = new MTextField('level', $data->level, _M('Nível de prioridade', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $level->setJsHint(_M('Informe o nível de prioridade', $module));
        $validators[] = new MRequiredValidator('level', _M('Nível de prioridade', $module));
        $validators[] = new MIntegerValidator('level');
        $fields[] = $level;
        
        $fields[] = new MCheckBox('isvisibletoperson', 't', _M('É visível para as pessoas', $module), $data->isVisibleToPerson=='t'?true:false);
        
        $fields[] = new MCheckBox('isoperator', 't', _M('É operador', $module), $data->isOperator=='t'?true:false);
        
        parent::defineFields($fields, $validators, $data);
    }
}
