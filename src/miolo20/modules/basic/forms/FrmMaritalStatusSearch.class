/**
 * Form to search the basMaritalStatus table
 */
class FrmMaritalStatusSearch extends SSearchForm
{
    private $module;

    /**
     * Class constructor
     */
    public function __construct()
    {
    	$module = MIOLO::getCurrentModule();
        parent::__construct(_M('Localizar', $module), new BasMaritalStatus(), array('maritalStatusId'), 'BusMaritalStatus');
    }

    /**
     *  Default method to define fields
     */
    public function defineFields()
    {
        $module = MIOLO::getCurrentModule();

        //Field marital status  acronym
        $maritalStatusIdS = new MTextField('maritalStatusIdS', $data->maritalStatusIdS, _M('Sigla',$module), 2, _M('Apenas UM caractere', $module));
        $maritalStatusIdS->setJsHint(_M('Informe a sigla do estado civil', $module));
        $fields[] = $maritalStatusIdS;

        //Field marital status description
        $maritalStatusDescription = new MTextField('descriptionS', $data->descriptionS, _M('Descrição',$module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $maritalStatusDescription->setJsHint(_M('Informe a descrição do estado civil',$module));
        $fields[] = $maritalStatusDescription;

        parent::defineFields($fields, $module, 'GrdMaritalStatusSearch');
    }

    public function getTypesData()
    {
        $data = parent::getTypesData();
        $fieldDescription = 'description';

        if ( strlen(MIOLO::_REQUEST($fieldDescription)) == 0 )
        {
            $fieldDescription .= 'S';
        }

        $data->description = MIOLO::_REQUEST($fieldDescription);

        return $data;
    }
}
