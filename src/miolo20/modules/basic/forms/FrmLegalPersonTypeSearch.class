class FrmLegalPersonTypeSearch extends SSearchForm
{

    /**
     * Class constructor
     */
    public function __construct()
    {
        parent::__construct(_M('Localizar', 'basic'), new BasLegalPersonType(), array('legalPersonTypeId'), 'BusLegalPersonType');
    }

    /**
     *  Default method to define fields
     */
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();
        
        //Field legal person type code
        $legalPersonTypeIdS = new MTextField('legalPersonTypeIdS', $this->legalPersonTypeIdS->value, _M('Código', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $legalPersonTypeIdS->setJsHint(_M('Informe o código do tipo de pessoa jurídica', $module));
        $fields[] = $legalPersonTypeIdS;
        $validators[] = new MIntegerValidator('legalPersonTypeIdS');
        
        //Field legal person description
        $legalPersonTypeDescriptionS = new MTextField('descriptionS', $this->descriptionS->value, _M('Descrição', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $legalPersonTypeDescriptionS->setJsHint(_M('Informe a descrição do tipo de pessoa jurídica', $module));
        $fields[] = $legalPersonTypeDescriptionS;
        
        parent::defineFields($fields, $module, 'GrdLegalPersonTypeSearch');
    }
}

