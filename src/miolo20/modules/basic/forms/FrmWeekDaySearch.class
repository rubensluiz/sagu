/**
 * Form to search the basWeekDay table
 */
class FrmWeekDaySearch extends SSearchForm
{
    /**
     * Class constructor
     */
    public function __construct($data)
    {
        parent::__construct(_M('Localizar', 'basic'), new BasWeekDay(), array('weekDayId'), 'BusWeekDay');
    }

    /**
     *  Default method to define fields
     */
    public function defineFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        // Week Day Id Field
        $weekDayIdS = new MTextField('weekDayIdS', $this->weekDayIdS->value, _M('Dia da semana',$module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $weekDayIdS->setJsHint(_M('Informe o código do dia da semana',$module));
        $fields[] = $weekDayIdS;
        $validators[] = new MIntegerValidator('weekDayIdS', '', 'optional');

        // Week Day Description Field
        $descriptionS = new MTextField('descriptionS', $this->descriptionS->value, _M('Descrição',$module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $descriptionS->setJsHint(_M('Informe a descrição do dia da semana',$module));
        $fields[] = $descriptionS;

        // Week Day Short Description Field
        $shortDescriptionS = new MTextField('shortDescriptionS', $this->shortDescriptionS->value, _M('Abreviatura',$module), 6, _M('Máximo de 3 caracteres', $module));
        $shortDescriptionS->setJsHint(_M('Informe a abreviatura do dia da semana',$module));
        $fields[] = $shortDescriptionS;

        parent::defineFields($fields, $module, 'GrdWeekDaySearch', $validators);
    }
}
