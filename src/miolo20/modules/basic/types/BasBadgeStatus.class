/**
 * Types do status de crachá
 */
class BasBadgeStatus extends SType
{
    /*
     * Table fields
     */

    /**
     * Código do status do crachá
     */
    private $badgeStatusId;

    /**
     * Descrição do status do crachá
     */
    private $description;

    /**
     * Flag que informa se é possível fazer o empréstimo deste crachá
     */
    private $allowLoan;

    /**
     * Construtor da classe
     *
     * @param (integer) $badgeStatusId Chave primária da tabela
     */
    public function __construct($badgeStatusId = null)
    {
        if ( !is_null($badgeStatusId) )
        {
            $this->badgeStatusId = $badgeStatusId;
            $this->populate();
        }
    }

    /**
     * Data logic
     */
    public function __get($name)
    {
        return $this->$name;
    }

    public function __set($name, $value)
    {
        $this->$name = $value;
    }


    /*
     * Common methods
     */

    /**
     * Detecta se o salvar deve inserir um novo (no caso de chave primária não definida)
     * ou se deve apenas atualizar um registro já existente (no caso de chave primária já definida)
     *
     * @return TRUE no caso de sucesso. Caso contrário, FALSE.
     */
    public function save()
    {
        // se chave primária não está definida, assume que deva ser feito insert
        if ( !(strlen($this->badgeStatusId) > 0) )
        {
            $retVal = $this->insert();
        }
        // se chave primária definida, assume que deva ser feito update
        else
        {
            $retVal = $this->update();
        }

        return $retVal;
    }

    /**
     * Exclui da base de dados o objeto atual
     *
     * @return TRUE no caso de sucesso. Caso contrário, FALSE.
     */
    public function delete()
    {
        $sql = 'DELETE FROM basBadgeStatus
                      WHERE badgeStatusId = ?';

        $args[] = $this->badgeStatusId;

        $result = SDatabase::execute($sql, $args);

        if ( $result)
        {
            $this->badgeStatusId = null;
        }

        return $result;
    }

    /**
     * Duplica o registro atual.
     *
     * @return TRUE no caso de sucesso. Caso contrário, FALSE.
     */
    public function duplicate()
    {
        $badge = clone($this);
        $badge->badgeStatusId = null;

        return $badge;
    }

    /**
     * Retorna uma lista de objetos do tipo desta classe com os resultados da busca.
     *
     * @param (stdClass) $filters Objeto contendo todos os campos pesquisáveis do objeto atual
     */
    public function search($filters)
    {
        $sql = 'SELECT badgeStatusId,
                       description,
                       allowLoan
                  FROM basBadgeStatus';

        $where = '';
        if ( $filters->badgeStatusId )
        {
            $where .= ' AND badgeStatusId = ?';
            $args[] = $filters->badgeStatusId;
        }
        elseif ( $filters->description )
        {
            $where .= ' AND description ILIKE UNACCENT(?)';
            $args[] = $filters->description . '%';
        }

        if ( $filters->allowLoan )
        {
            $where .= ' AND allowLoan = ?';
            $args[] = $filters->allowLoan;
        }

        if ( strlen($where) > 0 )
        {
            $sql .= ' WHERE ' . substr($where, 5);
        }

        $result = SDatabase::query($sql, $args);

        // Object
        $retVal = array();
        for ( $i=0; $i<count($result); $i++ )
        {
            $retVal[] = new BasBadgeStatus($result[$i][0]);
        }

        return $retVal;
    }

    /**
     * Retorna um array com os dados para a grid
     *
     * @param (stdClass) $filters Objeto contendo todos os campos pesquisáveis do objeto atual
     */
    public function searchGrid($filters = null)
    {
        if ( !is_null($filters) )
        {
            $sql = 'SELECT badgeStatusId,
                           description,
                           allowLoan
                      FROM basBadgeStatus';

            $where = '';
            if ( $filters->badgeStatusId )
            {
                $where .= ' AND badgeStatusId = ?';
                $args[] = $filters->badgeStatusId;
            }
            elseif ( $filters->description )
            {
                $where .= ' AND description ILIKE UNACCENT(?)';
                $args[] = $filters->description . '%';
            }

            if ( $filters->allowLoan )
            {
                $where .= ' AND allowLoan = ?';
                $args[] = $filters->allowLoan;
            }

            if ( strlen($where) > 0 )
            {
                $sql .= ' WHERE ' . substr($where, 5);
            }

            $result = SDatabase::query($sql, $args);
        }

        return $result;
    }

    /**
     * Retorna um array associativo com os dados para a grid
     */
    public function listBadgeStatus()
    {
        $sql = 'SELECT badgeStatusId,
                       description
                  FROM basBadgeStatus';

        $result = SDatabase::query($sql);

        foreach ( $result as $value )
        {
            $list[$value[0]] = $value[1];
        }

        return $list;
    }

    /*
     * Private methods
     */

    /**
     * Chamado pelo construtor, quando este recebe os dados de chave primária
     */
    private function populate()
    {
        $sql = 'SELECT badgeStatusId,
                       description,
                       username,
                       TO_CHAR(datetime, \'' . SAGU::getParameter('BASIC', 'MASK_TIMESTAMP') . '\'),
                       ipaddress,
                       allowLoan
                  FROM basBadgeStatus
                 WHERE badgeStatusId = ?';

        $args[] = $this->badgeStatusId;

        $result = SDatabase::query($sql, $args);

        if ( strlen($result[0][0]) <= 0 )
        {
            $module = SAGU::getFileModule(__FILE__);
            throw new Exception(_M('Status @1 inexistente.', $module, $this->badgeStatusId));
        }

        list ( $this->badgeStatusId,
               $this->description,
               $this->userName,
               $this->dateTime,
               $this->ipAddress,
               $this->allowLoan ) = $result[0];
    }

    /**
     * Insere um novo registro com base nas informações da classe
     */
    private function insert()
    {
        $sql = 'SELECT nextval(\'basBadgeStatus_badgeStatusId_seq\')';

        $result = SDatabase::query($sql);
        $newId = $result[0][0];

        $sql = 'INSERT INTO basBadgeStatus
                            ( badgeStatusId,
                              description,
                              allowLoan )
                     VALUES ( ?,
                              ?,
                              ? )';

        $args[] = $newId;
        $args[] = $this->description;
        $args[] = $this->allowLoan;

        $result = SDatabase::execute($sql, $args);

        if ( $result )
        {
            $this->badgeStatusId = $newId;
        }

        return $result;
    }

    /**
     * Atualiza um registro existente com base nas informações da classe
     */
    private function update()
    {
        $sql = 'UPDATE basBadgeStatus
                   SET description = ?,
                       allowLoan = ?
                 WHERE badgeStatusId = ?';

        $args[] = $this->description;
        $args[] = $this->allowLoan;
        $args[] = $this->badgeStatusId;

        return SDatabase::execute($sql, $args);
    }
}
