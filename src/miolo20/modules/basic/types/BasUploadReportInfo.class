class BasUploadReportInfo extends SType
{
    
    public $uploadReportInfoId;    
    public $report;    
    public $authenticationRequired;
    
    public function search($filters)
    {
        $MIOLO    = MIOLO::getInstance();
        $database = $MIOLO->getDatabase('basic');
        
        $msql = new MSQL();
        $msql->setColumns("uploadreportinfoid,report,authenticationrequired");
        
        $msql->setTables("basuploadreportinfo");
        
        if ( strlen($filters->report) > 0 )
        {
            $msql->setWhereAnd('report = ?');
            $parameter[] = $filters->report;
        }
        
        $sql = $msql->select($parameter);
        
        $result = $database->query($sql);
        
        $BasUploadReportInfo = new BasUploadReportInfo();
        list ($BasUploadReportInfo->uploadReportInfoId,
              $BasUploadReportInfo->report,
              $BasUploadReportInfo->authenticationRequired) = $result[0];
        
        return $BasUploadReportInfo;
    }
    
}

