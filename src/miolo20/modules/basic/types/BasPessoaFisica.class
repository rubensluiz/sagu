class BasPessoaFisica extends SType
{
    public $personid;
    public $persondv;
    public $personmask;
    public $name;
    public $shortname;
    public $zipcode;
    public $cityid;
    public $location;
    public $locationtypeid;
    public $locationtype;
    public $number;
    public $complement;
    public $neighborhood;
    public $email;
    public $emailalternative;
    public $url;
    public $miolousername;
    public $password;
    public $dateIn;
    
    protected $_tableName = 'basphysicalperson';
    
    protected $_fromOnly = true;
    
    public function getChoiceComponentSQL($argument = null, $id = null)
    {
        $sql = parent::getChoiceComponentSQL($argument, $id);

        $args = $this->getAjaxArgs();

        if ( strlen($args->ofertaturmaid) > 0 )
        {
            $sql->addInnerJoin('AcpInscricao', 'AcpInscricao.personid = baspessoafisica.personid');
            $sql->addInnerJoin('AcpInscricaoTurmaGrupo ', 'AcpInscricao.inscricaoid = AcpInscricaoTurmaGrupo.inscricaoid');
            $sql->addEqualCondition('AcpInscricaoTurmaGrupo.ofertaturmaid', $args->ofertaturmaid);
            
            if ( strlen($args->alunosNaoCancelados) > 0  )
            {
                $sql->setWhere("AcpInscricao.situacao != 'C' ");    
            }
        } 
        
        return $sql;
    }
    
    public static function verificaPessoa($personId)
    {
        $sql = " SELECT COUNT(*) > 0
              FROM ONLY basPhysicalPerson
                  WHERE personId = ? ";
        
        $args[] = $personId;
        
        $pessoa = SDatabase::query($sql, $args);
        
        return $pessoa[0][0];
    }
}
