class BasFilaDeEspera extends SType
{
    
    public $filaDeEsperaId;
    
    public $usuario;
    
    public $autenticadoEm;
    
    public $autorizadoEm;
    
    public function insertFilaDeEspera($data)
    {
        $sql = " INSERT INTO basFilaDeEspera
                             (usuario)
                      VALUES (?) ";
        
        $args[] = $data->usuario;
        
        $result = SDatabase::execute($sql, $args, false);
                
        return $result;
    }
        
    public function atualizaAutorizacaoFilaDeEspera($data)
    {
        $sql = " UPDATE basFilaDeEspera 
                    SET autorizadoEm = NOW()
                  WHERE usuario = ? ";
        
        $args[] = $data->usuario;
        
        $result = SDatabase::execute($sql, $args, false);
        
        return $result;
    }
    
    public function registroDeAtividadeFilaDeEspera($data)
    {
        $sql = " UPDATE basFilaDeEspera 
                    SET registroDeAtividade = NOW()
                  WHERE usuario = ? ";
        
        $args[] = $data->usuario;
        
        $result = SDatabase::execute($sql, $args, false);
        
        return $result;
    }
    
    public function searchFilaDeEspera($filters)
    {
        $sql = " SELECT filaDeEsperaId,
                        usuario,
                        TO_CHAR(autenticadoEm,'" . SAGU::getParameter('BASIC', 'MASK_TIMESTAMP') . "'),
                        TO_CHAR(autorizadoEm,'" . SAGU::getParameter('BASIC', 'MASK_TIMESTAMP') . "'),
                        TO_CHAR(registroDeAtividade,'" . SAGU::getParameter('BASIC', 'MASK_TIMESTAMP') . "')
                   FROM basFilaDeEspera ";
        
        $args = array();
        
        if ( strlen($filters->usuario) > 0 )
        {
            $sql .= " WHERE usuario = ? ";
            $args[] = $filters->usuario;   
        }
        
        $sql .= " ORDER BY autorizadoEm, usuario, autenticadoEm ";
        
        $result = SDatabase::query($sql, $args, false);
        
        return $result;
    }
        
    public function obtemFilaDeEspera($apenasAutorizados = false)
    {
        $sql = " SELECT filaDeEsperaId,
                        usuario,
                        autenticadoEm,
                        autorizadoEm,
                        registroDeAtividade
                   FROM basFilaDeEspera ";
        
        if ( $apenasAutorizados )
        {
            $sql .= " WHERE autenticadoEm IS NOT NULL ";
        }
        else
        {
            $sql .= " WHERE autorizadoEm IS NULL ";
            $sql .= " ORDER BY autenticadoEm ";
        }
        
        $result = SDatabase::query($sql, array(), false);
        
        return $result;
    }
    
    public function excluiUsuarioInativo($filaDeEsperaId)
    {
        return self::excluiUsuario(null, $filaDeEsperaId);
    }
    
    public static function excluiUsuarioFilaDeEspera($usuario)
    {
        return self::excluiUsuario($usuario);
    }
    
    public function excluiUsuario($usuario = null, $filaDeEsperaId = null)
    {
        $sql = " DELETE FROM basFilaDeEspera ";
        
        if ( strlen($usuario) > 0 )
        {
            $sql .= " WHERE usuario like ? ";
            $args[] = $usuario;
        }
        
        if ( strlen($filaDeEsperaId) > 0 )
        {
            $sql .= " WHERE filaDeEsperaId = ? ";
            $args[] = $filaDeEsperaId;
        }
        
        $result = false;
                
        if ( count($args) > 0 )
        {
            $result = SDatabase::execute($sql, $args, false);
        }
                
        return $result;
    }
    
    public function obtemUsuariosAutorizados()
    {
        $sql = " SELECT usuario
                   FROM basFilaDeEspera 
                  WHERE autorizadoEm IS NOT NULL ";
        
        $result = SDatabase::query($sql, array(), false);
        
        return $result;
    }
}

