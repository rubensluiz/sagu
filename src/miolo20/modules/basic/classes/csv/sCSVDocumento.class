class sCSVDocumento extends sCSVFileImporter
{
    public function getTitle()
    {
        $module = SAGU::getFileModule(__FILE__);
        return _M('Documentos', $module);
    }
    
    public function __construct()
    {
        $typeDefs = array('name', 'label', 'isRequired', 'type', 'replaceVars' );
        $defs = array(
            array( 'identifier', _M('Identificador'), true ),
            array( 'tipodocumento', _M('Tipo de documento'), true ),
            array( 'content', _M('Conteudo'), false ),
            array( 'cidade', _M('Cidade'), false ),
            array( 'cep', _M('Cidade'), false ),
            array( 'uf', _M('Cidade'), false ),
            array( 'pais', _M('Pais'), false ),
            array( 'organ', _M('Orgao'), false ),
            array( 'dateexpedition', _M('Data expedicao'), false, bCSVColumn::TYPE_DATE ),
            array( 'isdelivered', _M('Foi entregue'), false, bCSVColumn::TYPE_BOOLEAN ),
            array( 'isexcused', _M('E dispensado'), false, bCSVColumn::TYPE_BOOLEAN ),
            array( 'obs', _M('Observacao'), false ),
        );
        
        //$this->setIgnoreFirstLine(true);
        $this->setColumnsArray($typeDefs, $defs);
        
        parent::__construct();
    }
    
    public function importLine2($data)
    {
        $data->dateExpedition = $data->dateexpedition;
        $data->isDelivered = $data->isdelivered;
        $data->isExcused = $data->isexcused;
        $data->personId = $this->obterPessoaPeloIdentificador($data->identifier, true);
        $data->documentTypeId = $this->obterTipoDeDocumento($data->tipodocumento);
        $data->cityId = $this->obterCidade($data->cep, $data->cidade, $data->uf, $data->pais);
        
        $this->busDocument->insertOrUpdateDocument($data);
        
        parent::importLineEnd($data);
    }
}
