class sCSVHistoricoFuncional extends sCSVFileImporter
{
    public function getTitle()
    {
        $module = SAGU::getFileModule(__FILE__);
        return _M('Pessoas - Funcionário - Histórico Funcional', $module);
    }
    
    public function __construct()
    {
        $typeDefs = array('name', 'label', 'isRequired', 'type', 'replaceVars' );
        $defs = array(
            array( 'identifier', _M('Identificador'), true ),
            array( 'portaria', _M('Tipo de documento'), false ),
            array( 'data', _M('Data'), true, bCSVColumn::TYPE_DATE ),
            array( 'assunto', _M('Assunto'), true ),
            array( 'inicio', _M('Data Inicial'), true, bCSVColumn::TYPE_DATE ),
            array( 'fim', _M('Data Final'), false, bCSVColumn::TYPE_DATE ),
            array( 'observacao', _M('Histórico'), true ),
        );
        
        $this->setColumnsArray($typeDefs, $defs);
        
        parent::__construct();
    }
    
    public function importLine2($data)
    {
        $module = SAGU::getFileModule(__FILE__);
        $busHistoricoFuncional = new BasHistoricoFuncional();
        $busFuncionario = new BusinessBasicBusPhysicalPersonEmployee();
        
        $data->personId = $this->obterPessoaPeloIdentificador($data->identifier, true);
        $funcionario = $busFuncionario->getPhysicalPersonEmployee($data->personId);
        
        if ( $funcionario != NULL )
        {
            $busHistoricoFuncional->setData($data);
            $busHistoricoFuncional->save();
        }
        else
        {
            throw new Exception(_M('A pessoa @1 não está cadastrada como funcionário.', $module, $data->identifier));
        }
        
        parent::importLineEnd($data);
    }
}
