class SPeriodValidator extends MRegExpValidator
{
    /**
     * Enables contents like 444:59, representing 444 hours and 59 minutes. Optionally allows also the use of seconds.
     * 
     * @param $field (object) Field in which the validator will be applied.
     * @param $label (string) Label of the field being checked.
     * @param $type (string) Whether the field is required or optional.
     * @param $msgerr (string) Message, in case of validation error.
     * @param $seconds (boolean) Indicates whether the "seconds" part of the field will be enabled or not.
     * @param $secondsRequired (boolean) Indicates whether the "seconds" part of the field is required to be filled or not.
     * @param $negativeAndPositive (boolean) Indicates if the field allows a minus (-) or a plus (+) sign before its value.
     */
    public function __construct($field, $label='', $type ='optional', $msgerr='', $seconds = false, $secondsRequired = false, $negativeAndPositive = false )
    {
        // Regular expression to validate period of time like '999:59'
        $regexp = '^([0-9][0-9]*)(:([0-5][0-9]))';

        // Enable positive and negative values (plus and minus signs before value)
    	if ( $negativeAndPositive )
        {
            $regexp = '^([+-]?[0-9][0-9]*)(:([0-5][0-9]))';
        }
        // Enable the use of the "seconds" part of the time
        if ( $seconds )
        {
        	// If seconds must be filled or are optional
            $regexp = $regexp . ($secondsRequired ? '{2}$' : '{1,2}$') ;
        }
        else
        {
            $regexp = $regexp . '$';
        }

        // parent MRegExpValidator
        parent::__construct($field, $label, $regexp, $type, $msgerr);
    }
}
