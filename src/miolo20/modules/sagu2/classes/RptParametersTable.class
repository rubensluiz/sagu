/**
 * PDF extension to generate report
 */
class RptParametersTable
{
    /**
     * Method to generate the report
     */
    public function RptParametersTable($data=null)
    {
        $MIOLO       = MIOLO::getInstance();
        $module      = MIOLO::getCurrentModule();

        // Generating PDF file
        $pdf = new PDF();
        $pdf->aliasNbPages();
        
        $MIOLO->getClass($module, 'documentation');
        DOCUMENTATION::generateStartPage($pdf, _M('Tabela de parâmetros', $module));
        
        // First page
        $pdf->addPage('P', 'mm', 'A4');
        $pdf->ln(10);

        if ( count($data) > 0 )
        {
            $modules['ACCOUNTANCY']      = _M('Contábil', $module);
            $modules['ACADEMIC']         = _M('Acadêmico', $module);
            $modules['BASIC']            = _M('Básico', $module);
            $modules['CONTROLCOPIES']    = _M('Controle de cópias', $module);
            $modules['FINANCE']          = _M('Financeiro', $module);
            $modules['INSTITUTIONAL']    = _M('Institucional', $module);
            $modules['PROTOCOL']         = _M('Protocolo', $module);
            $modules['RESEARCH']         = _M('Questionário', $module);
            $modules['SELECTIVEPROCESS'] = _M('Processo seletivo', $module);

            $x = 1;
            foreach ( $data as $row )
            {

                list ( $module_,
                       $parameter,
                       $description,
                       $type ) = $row;

                //nome do modulo
                if ( $module_ != $module__ )
                {
                    if ( $x++ != 1 )
                    {
                        $pdf->ln(20);
                    }
                    $pdf->setFont(SAGU::getParameter('BASIC', 'DEFAULT_REPORT_FONT'), 'B', 16);
                    $msg = $modules[$module_];
                    //width, heinght, string, border, break, align (a4 210 290)
                    $pdf->cell(190, 10, $msg, 0, 0, 'C');
                    $pdf->ln(10);
                    $module__ = $module_;
                }

                $pdf->ln(2);

                //nome da tabela
                $pdf->setFont(SAGU::getParameter('BASIC', 'DEFAULT_REPORT_FONT'), 'B', 11);
                $pdf->cell(190, 5, $parameter . ' (' . $type . '):', 0, 0, 'L');
                $pdf->ln(5);
                $pdf->setFont(SAGU::getParameter('BASIC', 'DEFAULT_REPORT_FONT'), 'I', 11);
                $pdf->cell(10, 5, '', 0, 0, 'L');
                $pdf->multiCell(180, 5, $description, 0, 'L');
            }
        }
        //Close and generate the document        
        $pdf->close();
        $pdf->output();
    }
}

