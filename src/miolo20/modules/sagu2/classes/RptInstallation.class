/**
 * PDF extension to generate report
 */
class RptInstallation
{
    /**
     * Method to generate the report
     */
    public function RptInstallation($data=null, $distro=null)
    {
        $MIOLO       = MIOLO::getInstance();
        $module      = MIOLO::getCurrentModule();

        // Generating PDF file
        $pdf = new PDF();
        $pdf->aliasNbPages();

        $MIOLO->getClass($module, 'documentation');
        DOCUMENTATION::generateStartPage($pdf, _M('Instalação', $module), $distro);

        // First page
        $pdf->addPage('P', 'mm', 'A4');
        $pdf->ln(10);

        if ( strlen($data) > 0 )
        {
            $pdf->setFont(SAGU::getParameter('BASIC', 'DEFAULT_REPORT_FONT'), '', 12);
            $pdf->multiCell(190, 5, $data, 0, 'L');
        }
        //Close and generate the document        
        $pdf->close();
        $pdf->output();
    }
}

