class DOCUMENTATION
{

    /** 
     * Generate a start page of documentation
     *
     * @param: $number (float): pdf handler and title
     *
     * @returns (varchar): Returns the the page
     *
     */
     public function generateStartPage($pdf, $title, $subtitle=null)
     {
        $MIOLO       = MIOLO::getInstance();
        $module      = MIOLO::getCurrentModule();
        
        $pdf->addPage('P', 'mm', 'A4');
        $pdf->ln(15);

        $pdf->cell(190, 0, '', 1, 1, 'C');
        $pdf->ln(1);
        $pdf->cell(190, 0, '', 1, 1, 'C');
        $pdf->ln(3);
        $pdf->setFont(SAGU::getParameter('BASIC', 'DEFAULT_REPORT_FONT'), 'B', 32);
        $pdf->cell(190, 5, _M('SAGU::Documentação', $module), 0, 0, 'C');
        $pdf->ln(7);
        $pdf->cell(190, 0, '', 1, 1, 'C');
        $pdf->ln(1);
        $pdf->cell(190, 0, '', 1, 1, 'C');
        
        $pdf->ln(30);
                
        $pdf->setFont(SAGU::getParameter('BASIC', 'DEFAULT_REPORT_FONT'), 'B', 28);
        $pdf->cell(190, 5, $title, 0, 0, 'C');

        $pdf->ln(20);
        if ( strlen($subtitle) > 0 )
        {
            $pdf->setFont(SAGU::getParameter('BASIC', 'DEFAULT_REPORT_FONT'), 'B', 20);
            $pdf->cell(190, 5, $subtitle, 0, 0, 'C');
        }
    
        $pdf->image(SAGUFile::getFilePath(SAGU::getParameter('BASIC', 'LOGO_SAGU_FILE_ID')), 63, 107, 0, 0, SAGU::getParameter('BASIC', 'PHOTO_FORMAT'));
        
        $pdf->ln(180);
        $pdf->setFont(SAGU::getParameter('BASIC', 'DEFAULT_REPORT_FONT'), 'B', 16);
        $pdf->cell(190, 5, _M('Equipe de Desenvolvedores SAGU', $module), 0, 0, 'C');
        $pdf->ln(7);
        $pdf->cell(190, 0, '', 1, 1, 'C');
    }
    
}
