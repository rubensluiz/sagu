/**
 * Form to generate the parameters table description
 **/
class FrmInstallation extends MForm
{
    private $home;

    /**
     * Class constructor
     **/
    public function __construct($data)
    {

        $module     = MIOLO::getCurrentModule();
        $this->home = $data->home;
        parent::__construct(_M('Instalação', $module));

        $this->eventHandler();
    }

    /**
     * Default method to define fields
     **/
    public function createFields()
    {
        $MIOLO    = MIOLO::getInstance();
        $module   = MIOLO::getCurrentModule();
        $action   = MIOLO::getCurrentAction();

        $business = new BusinessSagu2BusDatabase();
        $files = $business->getInstallationFiles();
        
        if ( count($files) > 0 )
        {
            foreach ($files as $key => $file)
            {
                $distros[] = array ($key, $key);
            }
        }

        $distro = new MSelection('distro', $this->getFormValue('distro'), _M('Distribuição Linux', $module), $distros);
        $distro->setAutoSubmit(true);
        $fields[]   = $distro;
        
        $fields[] = new Separator();
        
        $distro = $this->getFormValue('distro');

        if ( strlen($distro) > 0 )
        {

            $result = file_get_contents($files[$distro]);
            $MIOLO->getClass('sagu2', 'RptInstallation');
            new RptInstallation($result, $distro);

        }
        else
        {
            $msg     = _M('Erro executando a operação solicitada.',$module);
            $goto    = $MIOLO->getActionURL($module,substr($this->home,0,strrpos($this->home,':')));
            $caption = _M('Erro',$module);
            //$MIOLO->error( $msg, $goto, $caption );
        }
        
        $this->setFields($fields);
        $this->setLabelWidth(SAGU::getParameter('BASIC', 'FIELD_LABEL_SIZE'));
        $this->setShowPostButton(false);
        $this->setClose($MIOLO->getActionURL($module, substr($this->home, 0, strrpos($this->home, ':'))));
    }

}

