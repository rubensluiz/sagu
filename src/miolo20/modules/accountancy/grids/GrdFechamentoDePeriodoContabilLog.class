class GrdFechamentoDePeriodoContabilLog extends SGrid
{
    
    public function __construct($filters)
    {
        $MIOLO  = MIOLO::getInstance();
        $module = $MIOLO->getCurrentModule();
                
        $columns = array( 
            new MGridColumn(_M('Usuário', $module), 'right', false, 0, true),
            new MGridColumn(_M('Nome', $module), 'right', false, 0, true),
            new MGridColumn(_M('Alteração feita em', $module), 'right', false, 0, true),
            new MGridColumn(_M('Está fechado', $module), 'right', false, 0, true, SAGU::listYesNo()),
            );                

        $primaryKey = array('fechamentoDePeriodoContabilLogId' => '%0%');
        parent::__construct($data, $columns, __CLASS__, $primaryKey);

        $this->disableExports();
        $this->clearActions();
        $this->disablePagination();
    }
    
}