/**
 * Grid used by form to display search results
 **/
class GrdDefineAccountingProjects extends SGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = $MIOLO->getCurrentModule();
        $home   = 'main:process:accounting:defineAccountingProjects';

        $columns = array( 
                          new MGridColumn( _M('Código da operação', $module),      'center', true, null, true, null, true ),
                          new MGridColumn( _M('Tipo de operação', $module), 'center', true, null, true, null, true ),
                          new MGridColumn( _M('Descrição', $module),       'left' ,  true, null, true, null, true )
                          );
        
        $pkey = array( 'operationId'=>'%0%' );
        parent::__construct( $filters, $columns, 'gridDefineAccountingProjects', $pkey );
        
        $this->clearActions();

        $hrefEntry          = $MIOLO->getActionURL( $module, "main:process:accounting:entryIntegration",          null, $pkey );
        $hrefIncomeForecast = $MIOLO->getActionURL( $module, "main:process:accounting:incomeForecastIntegration", null, $pkey );

        $this->addActionIcon(_M('Definir contabilização de operação de lançamentos', $module),          'entry.png',          $hrefEntry);
        $this->addActionIcon(_M('Definir contabilização de operação de previsões de lançamento', $module), 'incomeForecast.png', $hrefIncomeForecast);
    }

}

