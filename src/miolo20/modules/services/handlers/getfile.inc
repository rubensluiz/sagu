$MIOLO = MIOLO::getInstance();
$busFile = new BusinessBasicBusFile();
$fileId = MIOLO::_REQUEST('fileId');
$module = SAGU::getFileModule(__FILE__);

// Obtém o usuário da pessoa logada e obtém os dados dela
$mioloUserName = trim($MIOLO->getLogin()->id);
$busPerson = new BusinessBasicBusPerson();
$personData = $busPerson->getPersonByMioloUserName($mioloUserName);

if ( is_null($personData) )
{
    $MIOLO->error( _M('Você não tem permissão para baixar este arquivo.', $module) );
}

$file = $busFile->getFile($fileId);

if ( !$file->fileId )
{
    $MIOLO->error( _M('O arquivo passado para download é inválido.', $module) );
}

$busFile->getFileAsDownload($fileId, $file->contentType);
