class GrdMaterialRequest extends SGrid
{
    public function __construct($filters)
    {
        $module = SAGU::getFileModule(__FILE__);

        // Columns
        $columns = array();
        $columns[] = new MGridColumn(_M('Código do material', $module), 'left', true, null, false, null, true);
        $columns[] = new MGridColumn(_M('Identificador interno', $module), 'left', true, null, false, null, true);
        $columns[] = new MGridColumn(_M('Código do recurso físico', $module), 'left', true, null, false, null, true);
        $columns[] = new MGridColumn(_M('Versão do recurso físico', $module), 'left', true, null, false, null, true);
        $columns[] = new MGridColumn(_M('Descrição do recurso físico', $module), 'left', true, null, false, null, true);
        $columns[] = new MGridColumn(_M('Tipo de material', $module), 'left', true, null, false, null, true);
        $columns[] = new MGridColumn(_M('Descrição do tipo de material', $module), 'left', true, null, false, null, true);
        $columns[] = new MGridColumn(_M('Item', $module), 'left', true, null, true, null, false);
        $columns[] = new MGridColumn(_M('Descrição detalhada', $module), 'left', true, null, false, null, true);
        $columns[] = new MGridColumn(_M('Disponível?', $module), 'left', true, null, false, null, true);
        $columns[] = new MGridColumn(_M('Motivo de indisponibilidade', $module), 'left', true, null, false, null, true);
        $columns[] = new MGridColumn(_M('Data de indisponibilidade', $module), 'left', true, null, false, null, true);

        parent::__construct($filters, $columns, __CLASS__);
        // Desabilita botão CSV
        $this->showExportAsCSV = false;
        // Desabilita paginação
        $this->pageLength = 0;
    }
}
?>
