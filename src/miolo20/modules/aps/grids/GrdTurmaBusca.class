<?php

class GrdTurmaBusca extends SGrid
{
    public function __construct($filters)
    {
        $module = MIOLO::getCurrentModule();
        
        $columns = array(
            'apsturma.turmaid' => new MGridColumn(_M('Código', $module), 'left', true, NULL, false, NULL, true),
            'apsturma.codigoturma' => new MGridColumn(_M('Código da turma', $module), 'left', true, NULL, true, NULL, true),
            'apsturma.descricao' => new MGridColumn(_M('Nome da turma', $module), 'left', true, NULL, true, NULL, true),
            'descricaonucleo' => new MGridColumn(_M('Núcleo profissional'), 'left', true, NULL, true, NULL, true),
            'descricaoenfase' => new MGridColumn(_M('Ênfase'), 'left', true, NULL, true, NULL, true),
            'apsturma.quantidadeperiodo' => new MGridColumn(_M('Período de duração', $module), 'right', true, NULL, true, NULL, true),
            'apsturma.datainicio' => new MGridColumn(_M('Data inicial', $module), 'center', true, NULL, true, NULL, true),
            'apsturma.datafim' => new MGridColumn(_M('Data final', $module), 'center', true, NULL, true, NULL, true),
            'apsturma.vagas' => new MGridColumn(_M('Número de vagas', $module), 'right', true, NULL, true, NULL, true),
            'vagasocupada' => new MGridColumn(_M('Vagas ocupadas', $module), 'right', true, NULL, true, NULL, true),
            );
        
        $primaryKeys = array('turmaId'=>'%apsturma.turmaid%');
        $args = array('turmaid'=>'%apsturma.turmaid%');
        
        parent::__construct($filters, $columns, __CLASS__, $primaryKeys);



        $argsRel = $primaryKeys;
        $href = SAGU::getActionURL($module, 'main:document:relatorioEncaminhamentoPorTurma', $argsRel);
        $icon = new MGridActionIcon($this, 'historicoEscolar-16x16.png', $href, _M('Relatório de Procedimentos x encaminhamentos', $module));
        $icon->setTarget('_blank');
        $this->actions[] = $icon;


        $this->disableExports();
    }
}