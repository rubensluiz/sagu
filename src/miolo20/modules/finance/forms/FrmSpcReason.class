class FrmSpcReason extends SManagementForm
{

    /**
     * Class constructor
     **/
    public function __construct()
    {
        parent::__construct(new FinSpcReason(), array('reasonId'), 'BusSpcReason');
    }

    /**
     * Default method to define fields
     **/
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $function = MIOLO::_request('function');
        
        if ( in_array($function, array(SForm::FUNCTION_UPDATE, SForm::FUNCTION_DELETE)) )
        {
            //Get object id
            $pk = $this->getObjectPk();
            $fields['textId'] = new MTextLabel('', $pk->reasonId, _M('Código', $module));
            $fields['reasonId'] = new MHiddenField('reasonId', $pk->reasonId);
            //Get object data
            $data = $this->busObject->getSpcReason($pk->reasonId);
        }
        
        //Fields
        $fields['description'] = new MTextField('description', $this->getFormValue('description', $data->description), _M('Descrição', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $fields['description']->setJsHint(_M('Informe a descrição da razão', $module));
        //Validators
        $validators['description'] = new MRequiredValidator('description');
        
        parent::defineFields($fields, $validators, $data);
    }
}

