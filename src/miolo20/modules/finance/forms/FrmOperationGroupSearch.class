/**
 * Form to search the basOperationGroup table
 */
class FrmOperationGroupSearch extends SSearchForm
{
    public function __construct($data)
    {
        parent::__construct(_M('Localizar',$module), new FinOperationGroup(), array('operationGroupId'), 'BusOperationGroup');
    }

    /**
     *  Default method to define fields
     */
    public function defineFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        //Field operation group code
        $operationGroupIdS = new MTextField('operationGroupIdS', $this->operationGroupIdS->value, _M('Código', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $operationGroupIdS->setJsHint(_M('Entre com o código do grupo de operações', $module));
        $fields[] = $operationGroupIdS;

        //Field description
        $descriptionS = new MTextField('descriptionS', $this->operationGroupNameS->value, _M('Descrição', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $descriptionS->setJsHint(_M('Entre com a descrição do grupo de operações', $module));
        $fields[] = $descriptionS;

        parent::defineFields($fields, $module, 'GrdOperationGroupSearch');
    }
}
