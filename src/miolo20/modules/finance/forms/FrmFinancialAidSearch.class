class FrmFinancialAidSearch extends SSearchForm
{

    /**
     * Class constructor
     */
    public function __construct()
    {
        parent::__construct(_M('Localizar', 'basic'), new FinFinancialAid(), array('incentiveTypeId'), 'BusFinancialAid');
    }

    /**
     *  Default method to define fields
     */
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();
        
        //Field incentive type
        $incentiveTypeIdS = new MTextField('incentiveTypeIdS', $this->getFormValue('incentiveTypeIdS', $incentiveTypeIdS), _M('Código', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $validators[] = new MIntegerValidator('incentiveTypeIdS');
        $incentiveTypeIdS->setJsHint(_M('Informe o código do auxílio financiero', $module));
        $fields[] = $incentiveTypeIdS;
        
        //Field incentive type descrption
        $descriptionS = new MTextField('descriptionS', $this->getFormValue('descriptionS', $descriprionS), _M('Descrição', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $descriptionS->setJsHint(_M('Informe a descrição do auxílio financeiro', $module));
        $fields[] = $descriptionS;
        
        //Field operation
        $operationIdLabelS = new MText('operationIdLabelS', _M('Operação', $module));
