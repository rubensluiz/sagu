        $sendInvoicesLabelS->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $sendInvoicesS = new MRadioButtonGroup('sendInvoicesS', '', $messagesTypeS, $this->getFormValue('sendInvoicesS', $sendInvoicesS), null, 'horizontal');
