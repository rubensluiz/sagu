/**
 * Form to search the library fines data
 */
class FrmLibraryFines extends SForm
{
    private $home;
    private $module;

    /**
     * Class constructor
     */
    public function __construct($data)
    {
        $this->module = MIOLO::getCurrentModule();
        $module = $this->module;
        $this->home   = $data->home;

        parent::__construct( _M('Multas na biblioteca',$module), null, null );
    }

    /**
     *  Default method to define fields
     */
    public function defineFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        // get filters values
        $filters->personId         = MIOLO::_request('personId');
        $filters->learningPeriodId = MIOLO::_request('learningPeriodId');

        $grdResults = $MIOLO->getUI()->getGrid($module,'GrdLibraryFines', $filters);
        
        $business = new BusinessFinanceBusLibraryFines();
        
        $data = $business->finesFromPerson($filters->personId);
        
        $grdResults->setData($data);
        
        $this->addField($grdResults);
        
        $this->setLabelWidth(SAGU::getParameter('BASIC', 'FIELD_LABEL_SIZE'));
        
        $linkS[] = new MLink('close', _M('Fechar janela', $module), 'javascript:self.close()');
        $div = new mDiv('divlink', $linkS);
        $div->width = '98%';
        $div->textAlign = 'center';
        $fields[] = $div;
        
        $this->addField($fields);
        
        parent::defineFields( array( 'toolbar' => false ) );
    }

}

