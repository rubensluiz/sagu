/**
 * Form to manipulate a message
 **/
class FrmInvoicesWithModifiedValues extends MForm
{
    /**
     * Class constructor
     **/
    public function __construct()
    {
        $module = MIOLO::getCurrentModule();
        parent::__construct(_M('Títulos com valores modificados', $module));
        $this->setHelp(get_class($this), MIOLO::getCurrentModule(), MIOLO::getCurrentAction());

        $this->eventHandler();
    }

    /**
     * Default method to define fields
     **/
    public function createFields()
    {
        $MIOLO    = MIOLO::getInstance();
        $module   = MIOLO::getCurrentModule();
        $action   = MIOLO::getCurrentAction();
        $function = MIOLO::_request('function');

        $toolBar = new MToolBar('toolBar', $MIOLO->getActionURL($module, $action));
        $toolBar->disableButton('tbBtnDelete');
        $toolBar->disableButton('tbBtnPrint');
        $toolBar->disableButton('tbBtnSave');
        $toolBar->disableButton('tbBtnNew');
        
        $fields[] = $toolBar;
       
        $fldMaturityDate = new MCalendarField('maturityDate', $this->getFormValue('maturityDate', $data->maturityDate), _M('Data de vencimento', $module), SAGU::getParameter('BASIC', 'FIELD_DATE_SIZE'));
        $fldMaturityDate->setJsHint(_M('Preencha este campo com a data de vencimento dos títulos com valores modificados', $module));
        $fields[] = $fldMaturityDate;
        $validators[] = new MRequiredValidator('maturityDate');

        $fldBeginDate = new MCalendarField('beginDate', $this->getFormValue('beginDate', $data->beginDate), _M('Data inicial', $module), SAGU::getParameter('BASIC', 'FIELD_DATE_SIZE'));
        $fldBeginDate->setJsHint(_M('Preencha este campo com a data inicial de pagamento dos títulos a pagar', $module));
        $fields[] = $fldBeginDate;
        $validators[] = new MRequiredValidator('beginDate');

        $fldEndDate = new MCalendarField('endDate', $this->getFormValue('endDate', $data->endDate), _M('Data final', $module), SAGU::getParameter('BASIC', 'FIELD_DATE_SIZE'));
        $fldEndDate->setJsHint(_M('Preencha este campo com a data de pagamento final dos títulos com pagamentos', $module));
        $fields[] = $fldEndDate;
        $validators[] = new MRequiredValidator('endDate');

        $fields[] = new MButton('generate', _M('Gerar', $module), 'SUBMIT');
        $fields[] = new Separator('');
        
        $this->setLabelWidth(SAGU::getParameter('BASIC', 'FIELD_LABEL_SIZE'));
        $this->setClose($MIOLO->getActionURL($module, substr($action, 0, strrpos($action, ':'))));
        $this->setFields($fields);
        $this->setValidators($validators);
        $this->setShowPostButton(false);
    }

    /**
     * Event triggered when user chooses Save from the toolbar
     **/
    public function generate_click($sender = NULL)
    {
        $MIOLO    = MIOLO::getInstance();
        $module   = MIOLO::getCurrentModule();
        $action   = MIOLO::getCurrentAction();

        $data = $this->getTypesData();
        $business = new BusinessFinanceBusInvoice();

        $grdResults = $MIOLO->getUI()->getGrid($module, 'GrdInvoicesWithModifiedValues', $data);
        $grdResults->setData($business->listInvoicesWithModifiedValues($data));
        $this->addField(new Separator('<hr>'));
        $this->addField($grdResults);
    }

    /**
     *
     * Method to gather all information from the form fields
     * and put them on a database compatible object
     *
     */
    public function getTypesData()
    {
        $data->maturityDate = $this->maturityDate->value;
        $data->beginDate    = $this->beginDate->value;
        $data->endDate      = $this->endDate->value;
        return $data;
    }
}
