<?php

class FinCieloConfiguracao
{
    
    // Tipos de Parcelamento
    const TIPO_PARCELAMENTO_LOJA = 2;
    const TIPO_PARCELAMENTO_ADMINISTRADORA = 3;
    
    // Indicadores de autorização
    const INDICADOR_SOMENTE_AUTENTICAR = 0;
    const INDICADOR_AUTORIZAR_SOMENTE_SE_AUTENTICADA = 1;
    const INDICADOR_AUTORIZAR_AUTENTICADA_E_NAO_AUTENTICADA = 2;
    const INDICADOR_AUTORIZAR_DIRETO = 3;
    
    private $parcelamento = self::TIPO_PARCELAMENTO_LOJA;
    
    private $capturarAutomaticamente = false;
    
    private $indicadorAutorizacao = self::INDICADOR_AUTORIZAR_DIRETO;
    
    public function getParcelamento()
    {
        return $this->parcelamento;
    }

    public function setParcelamento($parcelamento)
    {
        $this->parcelamento = $parcelamento;
    }

    public function getCapturarAutomaticamente()
    {
        return $this->capturarAutomaticamente;
    }

    public function setCapturarAutomaticamente($capturarAutomaticamente)
    {
        $this->capturarAutomaticamente = $capturarAutomaticamente;
    }

    public function getIndicadorAutorizacao()
    {
        return $this->indicadorAutorizacao;
    }

    public function setIndicadorAutorizacao($indicadorAutorizacao)
    {
        $this->indicadorAutorizacao = $indicadorAutorizacao;
    }
    
}

?>
