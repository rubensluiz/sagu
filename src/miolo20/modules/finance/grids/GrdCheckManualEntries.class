/**
 * Grid used by form to display search results
 **/
class GrdCheckManualEntries extends MGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        
        $home   = 'main:report:payOffInvoices:checkManualEntries';
        $module = MIOLO::_request('module');

        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */
        $columns = array(
                          new MGridColumn( _M('Código da pessoa',             $module), 'right', true, null, true, null, true ),
                          new MGridColumn( _M('Nome da pessoa',           $module), 'left',  true, null, true, null, true ),
                          new MGridColumn( _M('Código do título',            $module), 'left',  true, null, true, null, true ),
                          new MGridColumn( _M('Código da operação',          $module), 'left',  true, null, true, null, true ),
                          new MGridColumn( _M('Descrição da operação', $module), 'left',  true, null, true, null, true ),
                          new MGridColumn( _M('Valor',                 $module), 'right', true, null, true, null, true ),
                          new MGridColumn( _M('Data de lançamento',            $module), 'left',  true, null, true, null, true ),
                          new MGridColumn( _M('Data de modificação',     $module), 'left',  true, null, true, null, true ),
                          new MGridColumn( _M('Último usuário',             $module), 'left',  true, null, true, null, true )
                        );

        $url = $MIOLO->getActionURL($module, $home, null, array('event'=>'generate_click'));
        parent::__construct(null, $columns, $url, SAGU::getParameter('BASIC', 'LISTING_NREGS'), 0, 'gridCheckManualEntries', null);
        $business = new BusinessBasicBusCompany();
        $dataCompany = $business->getCompany(SAGU::getParameter('BASIC', 'DEFAULT_COMPANY_CONF'));
        $this->setTitle($dataCompany->personName.' - '.date(SAGU::getParameter('BASIC', 'MASK_DATE_PHP')).' - '.date(SAGU::getParameter('BASIC', 'MASK_TIME_PHP')).' ('._M('Lançamentos registrados manualmente', $module).')');
        $this->setIsScrollable();
        $this->eventHandler();
    }
}
?>
