/**
 * Grid used by form to display search results
 **/
class GrdReturnAutomaticDebit041 extends SGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        
        $home   = 'main:process:remittanceReturn:returnAutomaticDebit041';
        $module = MIOLO::_request('module');
        
        $columns = array(
                          new MGridColumn( _M('Código do título',      $module), 'left', true, null, true, null, false),
                          new MGridColumn( _M('Valor',           $module), 'right', true, null, true, null, false),
                          new MGridColumn( _M('Código da operação',     $module), 'right', true, null, true, null, false)
                        );
        
        parent::__construct( $filters, $columns, 'gridReturnAutomaticDebit' );
    }

}
