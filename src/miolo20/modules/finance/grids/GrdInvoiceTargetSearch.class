/**
 * Grid used by form to display search results
 **/
class GrdInvoiceTargetSearch extends SGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();

        $home   = 'main:register:invoiceTarget';
        $module = MIOLO::_request('module');
        
        $columns = array( 
                          new MGridColumn( _M('Código do contrato', $module),      'right',  true, null, true, null, true ),
                          new MGridColumn( _M('Código da pessoa', $module),        'right', true, null, true, null, true ),
                          new MGridColumn( _M('Nome da pessoa', $module),      'right', true, null, true, null, true ),
                          new MGridColumn( _M('Código do curso', $module),        'right', true, null, true, null, true ),
                          new MGridColumn( _M('Nome do curso', $module),      'right', true, null, true, null, true ),
                          new MGridColumn( _M('Versão do curso', $module),   'right', true, null, true, null, true ),
                          new MGridColumn( _M('Código do turno', $module),          'right', true, null, true, null, true ),
                          new MGridColumn( _M('Descrição do turno', $module), 'right', true, null, true, null, true ),
                          new MGridColumn( _M('Código da unidade', $module),          'right', true, null, true, null, true ),
                          new MGridColumn( _M('Descrição da unidade', $module), 'right', true, null, true, null, true )
                        );
        
        $pkey = array('contractId'=>'%0%');
        parent::__construct($filters, $columns, 'gridInvoiceTarget', $pkey);
        
        $this->clearActions();
        $this->displayActionDelete();
    }

}

