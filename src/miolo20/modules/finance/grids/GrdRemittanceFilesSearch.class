/**
 * Grid used by form to display search results
 **/
class GrdRemittanceFilesSearch extends SGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        
        $columns = array(
             new MGridColumn(_M('Código do arquivo', $module), 'right',  false, null, false, null, true),
             new MGridColumn(_M('Data da geração', $module), 'center',  true, null, true, null, true),
             new MGridColumn(_M('Usuário', $module), 'left',  true, null, true, null, true),
             new MGridColumn(_M('Ip', $module), 'center',  true, null, true, null, true),
             new MGridColumn(_M('Nome do arquivo', $module), 'left',  true, null, true, null, true)
        );

        $primaryKey = array( 'fileId' => '%0%' );
        parent::__construct($filters, $columns, __CLASS__, $primaryKey);

        $this->setRowMethod(__CLASS__, 'myRowMethod');
        
        $this->clearActions(); //Limpa as ações padrão da grid
        
        //Baixar arquivo
        $this->addActionIcon( _M('Baixar arquivo', $module ), 'close.png', null);

        //Detalhes
        $optsDelete = array( 'fileId' => '%0%' , 'function'=>'', 'event'=>'');
        $hrefDelete = $MIOLO->getActionURL( $module, $action, null, $optsDelete );
        $this->addActionIcon( _M('Detalhes', $module ), 'lupa.gif', $hrefDelete);
        
    }
    
    public function myRowMethod($i, $row, $actions, $columns )
    {
        $MIOLO = MIOLO::getInstance();        
        
        //Cria o link para download do arquivo
        $busFile = new BusinessBasicBusFile();
        $opts = array('permission' => true); //Adiciona permissão de download
        $actions[0]->href = $busFile->getUrl($row[0], $opts);
    }
}
