/**
 * Grid used by form to display search results
 **/
class GrdOperationSearch extends SGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $business = new BusinessFinanceBusOperation();

        $columns = array(
            new MGridColumn( _M('Código', $module), 'right', true, null, true, null, true ),
            new MGridColumn( _M('Descrição', $module),'left', true, null, true, null, true ),
            new MGridColumn( _M('Tipo de operação', $module),'left', true, null, true, $business->listOperationTypeId(0), true ),
            new MGridColumn( _M('Habilitada para movimento de caixa', $module), 'left', true, null, true, SAGU::listYesNo(), true ),
            new MGridColumn( _M('Utilização', $module), 'left', true, null, true, $business->listTypeRecivableOrPayable(0), true ),            
            new MGridColumn( _M('Grupo de operações', $module), 'left', true, null, false, null, true ),
            new MGridColumn( _M('Plano de contas', $module), 'left', true, null, true, null, true ),
            new MGridColumn( _M('Está extinto', $module),'left', true, null, true, SAGU::listYesNo(), true ),
        );

        parent::__construct($filters, $columns, __CLASS__, array('operationId'=>'%0%'));
    }
}

