/**
 * Grid used by form to display search results
 **/
class GrdPhysicalTargetSearch extends SGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();

        $columns = array( 
            new MGridColumn( _M('Código do contrato', $module),      'right', true, null, true, null, true ),
            new MGridColumn( _M('Código da cidade', $module),          'right', true, null, true, null, true ),
            new MGridColumn( _M('Nome da cidade', $module),        'left', true, null, true, null, true ),
            new MGridColumn( _M('CEP', $module),         'right', true, null, true, null, true ),
            new MGridColumn( _M('Logradouro', $module),         'left', true, null, true, null, true ),
            new MGridColumn( _M('Número', $module),           'right', true, null, true, null, true ),
            new MGridColumn( _M('Complemento', $module),       'right', true, null, true, null, true ),
            new MGridColumn( _M('Bairro', $module),     'left', true, null, true, null, true ),
            new MGridColumn( _M('Nome', $module),             'left', true, null, true, null, true ),
            new MGridColumn( _M('Número do documento', $module),  'right', true, null, true, null, true ),
            new MGridColumn( _M('Código da pessoa', $module),        'left', true, null, true, null, true ),
            new MGridColumn( _M('Nome da pessoa', $module),      'left', true, null, true, null, true ),
            new MGridColumn( _M('Código do curso', $module),        'right', true, null, true, null, true ),
            new MGridColumn( _M('Nome do curso', $module),      'left', true, null, true, null, true ),
            new MGridColumn( _M('Versão do curso', $module),   'right', true, null, true, null, true ),
            new MGridColumn( _M('Código do turno', $module),          'right', true, null, true, null, true ),
            new MGridColumn( _M('Descrição do turno', $module), 'left', true, null, true, null, true ),
            new MGridColumn( _M('Código da unidade', $module),          'right', true, null, true, null, true ),
            new MGridColumn( _M('Descrição da unidade', $module), 'left', true, null, true, null, true )
        );

        $primaryKey = array('contractId' => '%0%');
        parent::__construct($filters, $columns, 'GrdPhysicalTargetSearch', $primaryKey);
    }
}

