/**
 * Grid used by form to display search results
 **/
class GrdPolicySearch extends SGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        
        $columns = array(
             new MGridColumn(_M('Código da política',                $module), 'right',  true, null, true, null, true),
             new MGridColumn(_M('Descrição',              $module), 'left',   true, null, true, null, true),
             new MGridColumn(_M('Operação',                $module), 'left',   true, null, true, null, true),
             new MGridColumn('', 'left', false, 0, false),
             new MGridColumn(_M('Tipo de cobrança',          $module), 'left',   true, null, true, null, true),
             new MGridColumn(_M('Dias para protesto',          $module), 'right',  true, null, true, null, true),
             new MGridColumn(_M('Valor da taxa bancária',           $module), 'right',  true, null, true, null, true),
             new MGridColumn(_M('Aplicar juros',           $module), 'center', true, null, true, SAGU::listYesNo(), true),
             new MGridColumn(_M('Dias para juros',         $module), 'right',  true, null, true, null, true),
             new MGridColumn(_M('Percentual de juros ao mês', $module), 'right',  true, null, true, null, true),
             new MGridColumn(_M('Tipo de juros',            $module), 'right',  true, null, true, array('S'=> _M('Simples', $module), 'C'=>_M('Composto', $module), '-'=>'-'), true),
             new MGridColumn(_M('Aplicar multa',               $module), 'center', true, null, true, SAGU::listYesNo(), true),
             new MGridColumn(_M('Percentual de multa',             $module), 'right',  true, null, true, null, true),
             new MGridColumn(_M('Dias para multa',             $module), 'right',  true, null, true, null, true),
             new MGridColumn(_M('Está extinto',               $module), 'center', true, null, true, SAGU::listYesNo(), true),
             new MGridColumn(_M('Tipo de emissão',            $module), 'left', true, null, true, null, true)
        );
                        
        parent::__construct($filters, $columns, __CLASS__, array('policyId'=>'%0%'));
    }
}
