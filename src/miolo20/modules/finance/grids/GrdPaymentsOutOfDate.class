/**
 * Grid used by form to display search results
 **/
class GrdPaymentsOutOfDate extends MGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        
        $home   = 'main:report:payOffInvoices:paymentsOutOfDate';
        $module = MIOLO::_request('module');

        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */
        $columns = array( new MGridColumn( _M('Código da pessoa',     $module), 'right', true, null, true, null, true ),
                          new MGridColumn( _M('Nome da pessoa',   $module), 'left',  true, null, true, null, true ),
                          new MGridColumn( _M('Código do título',    $module), 'left',  true, null, true, null, true ),
                          new MGridColumn( _M('Data de emissão', $module), 'left',  true, null, true, null, true ),
                          new MGridColumn( _M('Data de vencimento', $module), 'left',  true, null, true, null, true ),
                          new MGridColumn( _M('Data de lançamento',    $module), 'left',  true, null, true, null, true ),
                          new MGridColumn( _M('Dias de atrazo',     $module), 'left',  true, null, true, null, true ),
                          new MGridColumn( _M('Valor nominal', $module), 'right', true, null, true, null, true ),
                          new MGridColumn( _M('Valor do lançamento',   $module), 'right', true, null, true, null, true ),
                          new MGridColumn( _M('Lançamentos',       $module), 'left',  true, null, true, null, true )
                        );

        $url = $MIOLO->getActionURL($module, $home, null, array('event'=>'generate_click'));
        parent::__construct(null, $columns, $url, SAGU::getParameter('BASIC', 'LISTING_NREGS'), 0, 'gridPaymentsOutOfDate', null);
        $this->setTitle(_M('Pagamentos fora de data no período de @1 a @2', $module, $filters->beginDate, $filters->endDate));
        $this->setIsScrollable();
        $this->eventHandler();
    }
}
