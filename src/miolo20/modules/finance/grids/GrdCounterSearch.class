/**
 * Grid used by form to display search results
 **/
class GrdCounterSearch extends SGrid
{

    public function __construct($filters)
    {
        $module = MIOLO::getCurrentModule();
        
        $columns[] = new MGridColumn(_M('Código do caixa', $module), 'right', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Descrição', $module), 'right', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Código da unidade', $module), 'right', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Descrição', $module), 'left', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Está ativo', $module), 'left', true, null, true, array(DB_TRUE => _M('Sim', $module), DB_FALSE => _M('Não', $module)), true);
        
        $primaryKey = array('counterId' => '%0%');
        
        parent::__construct($filters, $columns, 'GrdCounterSearch', $primaryKey);
    }
}

