         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */
        $columns = array( new MGridColumn( _M('Título', $module), 'center', true, null, true, null, false),
                          new MGridColumn( _M('Nosso Número', $module), 'right', true, null, true, null, false),
                          new MGridColumn( _M('Pagamento', $module), 'center' , true, null, true, null, false),
                          new MGridColumn( _M('Valor devido', $module), 'center', true, null, true, null, false),
                          new MGridColumn( _M('Valor do título', $module), 'right', true, null, true, null, false),
                          new MGridColumn( _M('Data de lançamento', $module), 'right', true, null, true, null, false),
                          new MGridColumn( _M('Descrição', $module), 'left', true, null, true, null, false),
                        );

        
        $primaryKey = array('invoiceId' => '%0%');
        
        parent::__construct($filters, $columns, 'GrdReturnInvoiceFailed104', $primaryKey);
        //FIXME problema com csv, recarregando form.
        $this->showExportAsCSV = false;
    }

    /*
     * Set default grid actions
