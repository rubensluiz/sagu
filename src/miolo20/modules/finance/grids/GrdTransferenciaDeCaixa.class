class GrdTransferenciaDeCaixa extends SGrid
{
    
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $action = MIOLO::getCurrentAction();
        $module = $MIOLO->getCurrentModule();
        
        $columns = array(
            new MGridColumn( _M('Código', $module ), 'right', true, null, false, null, true ),
            new MGridColumn( _M('Caixa de destino', $module ), 'left', true, null, true, null, true ),
            new MGridColumn( _M('Valor', $module ), 'left', true, null, true, null, true ),
            new MGridColumn( _M('Transferido', $module ), 'right', true, null, false, null, true ),
        );
        
        $primaryKey = array('transferenciaDeCaixaId'=>'%0%');
        
        parent::__construct($filters, $columns, __CLASS__, $primaryKey);
        $this->setRowMethod($this,'myRowMethod');
        $this->clearActions();
        
        $href = $MIOLO->getActionURL($module, 'main:process:counter:counterMovement', null, array('transferenciaDeCaixaId'=>'#0#', 'event'=>'excluirTransferencia'));
        
        $this->addActionDelete($href);
     }
     
     public function myRowMethod($i, $row, $actions, $columns)
     {
         if( $row[3] == 't' )
         {
             $actions[0]->enabled = false;
         }
         if( $row[3] == 'f' )
         {
             $actions[0]->enabled = true;
         }
     }
}
