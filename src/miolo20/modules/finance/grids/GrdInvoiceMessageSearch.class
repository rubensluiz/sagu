/**
 * Grid used by form to display search results
 **/
class GrdInvoiceMessageSearch extends SGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();

        $columns = array( 
            new MGridColumn( _M('Código', $module)                 , 'right', true, null, true, null, true ),
            new MGridColumn( _M('Código do banco', $module)                 , 'right', true, null, true, null, true ),
            new MGridColumn( _M('Descrição do banco', $module)        , 'left',  true, null, true, null, true ),
            new MGridColumn( _M('Código do tipo de mensagem', $module)         , 'right', true, null, true, null, true ),
            new MGridColumn( _M('Descrição do tipo de mensagem', $module), 'left',  true, null, true, null, true ),
            new MGridColumn( _M('Ordem da mensagem', $module)           , 'right', true, null, true, null, true ),
            new MGridColumn( _M('Texto da mensagem', $module)            , 'left', true, null, true, null, true ),
        );


        $this->setRowMethod('GrdInvoiceMessageSearch', 'myRowMethod');

        $primaryKey = array('invoiceMessageId' => '%0%');
        parent::__construct($filters, $columns, __CLASS__, $primaryKey);
    }
    
    public function myRowMethod($i, $row, $actions, $columns )
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();
        
        $columns[5]->control[$i]-> addStyle('rowspan', '2');
    }
}
