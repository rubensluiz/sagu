class GrdNfePaulistanaBusca extends SGrid
{
    public function __construct($filters)
    {
        $MIOLO  = MIOLO::getInstance();
        $module = $MIOLO->getCurrentModule();
                
        $columns = array( 
           'finemissaolotenfe.emissaolotenfeid' => new MGridColumn(_M('Cód.', $module), 'right', false, 0, true),
           'finemissaolotenfe.codigoloteretornado' => new MGridColumn(_M('Código do lote retornado', $module), 'right', false, 0, true),
           'finemissaolotenfe.pagamentosentre' => new MGridColumn(_M('Pagamentos emitidos entre', $module), 'center', false, 0, true),
           'finemissaolotenfe.pagamentosate' => new MGridColumn(_M('Pagamentos emitods até', $module), 'center', false, 0, true),
           'valorminimodospagamentos' => new MGridColumn(_M('Valor mínimo dos pagamentos emitidos', $module), 'right', false, 0, true),
           'finemissaolotenfe.unitid' => new MGridColumn(_M('Unidade', $module), 'left', false, 0, true, sMultiUnidade::obterUnidades()),
            );                

        $primaryKey = array('emissaoLoteNfeId' => '%finemissaolotenfe.emissaolotenfeid%', 'loteRetornado' => '%finemissaolotenfe.codigoloteretornado%' );
        parent::__construct($data, $columns, __CLASS__, $primaryKey);

        $this->disableExports();
        $this->clearActions();
        
        $href = SForm::getAjaxAction('popupVizualisarNFes', 'divLimbo', false, $primaryKey, false, false);
        $this->addActionIcon(_M('Visualizar NFes do lote'), $MIOLO->getUI()->getImage($module, 'visualizar.png'), $href);
    }
}
