/**
 * Grid used by form to display search results
 **/
class GrdReceivableInvoiceConsult extends SGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();
        
        $columns = array( new MGridColumn('', 'left', false, 0, false),
                          new MGridColumn( _M('Código do lançamento',              $module), 'right',  true,  null, true, null, false),
                          new MGridColumn( _M('Código da operação',          $module), 'right',  true,  null, true, null, false),
                          new MGridColumn( _M('Descrição da operação', $module), 'left',   false, null, true, null, false),
                          new MGridColumn( _M('Data da operação',        $module), 'center', true,  null, true, null, false),
                          new MGridColumn( _M('Tipo de criação',         $module), 'center', true,  null, true, null, false),
                          new MGridColumn( _M('Valor',                 $module), 'right',  true,  null, true, null, false),
                          new MGridColumn( _M('Contabilizado',             $module), 'center', true,  null, true, null, false) 
                        );

        $url = $MIOLO->getActionURL($module, $action, null, $opts);
        parent::__construct($data, $columns, 'gridReceivableInvoiceConsult', array('entryId'=>'%1%'));
        $this->setRowMethod('GrdReceivableInvoiceConsult', 'myRowMethod');
        
        $this->clearActions();

        $goto = $MIOLO->getActionURL($module, 'main:diverseConsultation', null, array('invoiceId'=>$filters->invoiceId, 'event'=>'btnSearch_click'));

        $opts = array('function'=>'update', 
                      'entryId'=>'%1%',
                      'invoiceId'=>'%0%',
                      'goto'=>urlencode($goto)
                     );
                     
        $hrefUpdate = $MIOLO->getActionURL($module, "main:register:entry", null, $opts);

        $opts = array('function'=>'delete',
                      'event'=>'tbBtnDelete_click',
                      'entryId'=>'%1%',
                      'invoiceId'=>'%0%',               
                      'goto'=>urlencode($goto)
                     );
        $hrefDelete = $MIOLO->getActionURL($module, 'main:register:entry', null, $opts);

        $this->addActionUpdate($hrefUpdate);
        $this->addActionDelete($hrefDelete);

        $this->setIsScrollable();
        $this->eventHandler();
    }

   /**
    * Function to handle the before each row creation
    */
    public function myRowMethod($i, $row, $actions, $columns )
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();
        if (substr($row[3], 0, 1) == 'D')
        {
            $columns[3]->control[$i]->_addStyle('color', 'red');
        }
        elseif (substr($row[3], 0, 1) == 'C')
        {
            $columns[3]->control[$i]->_addStyle('color', 'blue');
        }

        $goto = $MIOLO->getActionURL($module, 'main:diverseConsultation', null, array('invoiceId'=>$row[0], 'event'=>'btnSearch_click'));
        
        if ($row[7] == DB_TRUE)
        {   
            $actions[1]->enabled = false;
            $location = $MIOLO->getActionURL('finance',"html:images:calculator.png");
            $calculadora = new MImage('calculadora', '', $location);
            $calculadora->label = _M('Contabilizado, não permite mais alterações.');
            $columns[7]->control[$i]->setValue( $calculadora->generate() );
        }
        else
        {
            $actions[1]->enabled = true;
            $location = $MIOLO->getActionURL($module,"html:images:calculator_desabilitado.png");
            $calculadora = new MImage('calculadora', '', $location);
            $calculadora->label = _M('Não contabilizado, permite alterações.');
            $columns[7]->control[$i]->setValue( $calculadora->generate() );
        }
        
        $lancamento = BusinessFinanceBusEntry::verificaLancamentoEstaEstornado($row[1]);
                
        if ( $lancamento->lancamentoEstornado == DB_TRUE )
        {
            $actions[1]->enabled = false; 
            $actions[1]->alt = _M("Lançamento já estornado no dia {$lancamento->datetime} pelo usuário {$lancamento->username}.", $module); 
        }
        else
        {
            $actions[1]->enabled = true; 
            $actions[1]->alt = _M('Excluir', $module); 
        }
    }
}
