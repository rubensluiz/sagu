/**
 * Class to manipulate the finReasonCancellation table
 **/
class BusinessFinanceBusReasonCancellationFinance extends sBusiness
{
    /**
     * List all records from the table handled by the class
     *
     * @param: None
     *
     * @returns (array): Return an array with the entire table
     *
     **/
    public function listReasonCancellationFinance()
    {
        $sql = 'SELECT A.reasonCancellationId,
                       A.description
                  FROM finReasonCancellation A
              ORDER BY 1';
        
        $db = $this->getDatabase();
        $result = $db->query($sql);
        
        return $result;
    }

    /**
     * Return a specific record from the database
     *
     * @param $reasonCancellationId (integer): Primary key of the record to be retrieved
     *
     * @return (object): Return an object of the type handled by the class
     *
     **/
    public function getReasonCancellationFinance($reasonCancellationId)
    {
        $sql = 'SELECT A.reasonCancellationId,
                       A.description,
                       A.userName,
                       TO_CHAR(A.dateTime,\'' . SAGU::getParameter('BASIC', 'MASK_TIMESTAMP') . '\')
                  FROM finReasonCancellation A
                 WHERE A.reasonCancellationId = ?';

        $db = $this->getDatabase();
        $result = $db->query(SAGU::prepare($sql,$reasonCancellationId));
        

        $reasonCancellation = new finReasonCancellationFinance();

        list ( $reasonCancellation->reasonCancellationId,
               $reasonCancellation->description,
               $reasonCancellation->userName,
               $reasonCancellation->dateTime ) = $result[0];

        return $reasonCancellation;
    }

    /**
     * Do a search on the database table handled by the class
     *
     * @param $filters (object): Search filters
     *
     * @return (array): An array containing the search results
     **/
    public function searchReasonCancellationFinance($data)
    {
        $sql = 'SELECT A.reasonCancellationId,
                       A.description
                  FROM finReasonCancellation A';

        $where = '';
        unset($args);
        if ( strlen($data->reasonCancellationId) > 0 )
        {
            $where .= '    AND   A.reasonCancellationId = ?';
            $args[] = $data->reasonCancellationId;
        }
        if ( strlen($data->description) > 0 )
        {
            $where .= '    AND   UNACCENT(A.description) ILIKE UNACCENT(?)';
            $args[] = $data->description . '%';
        }

        if ( strlen($where) > 0 )
        {
            $sql .= ' WHERE ' . substr($where,8) .
                    ' ORDER BY A.description';

            $db = $this->getDatabase();
            $result = $db->query(SAGU::prepare($sql,$args));
        }

        return $result;
    }

    /**
     * Insert a new record
     *
     * @param $data (object): An object of the type handled by the class
     *
     * @return True if succed, otherwise False
     *
     **/
    public function insertReasonCancellationFinance($data)
    {
        $db = $this->getDatabase();

        $sql = 'INSERT INTO finReasonCancellation
                            (description)
                     VALUES (?)';

        $db     = $this->getDatabase();
        $result = $db->execute(SAGU::prepare($sql, $data->description));

        return $result;
    }

    /**
     * Update data from a specific record
     *
     * @param $data (object): Data which will replace the old record data
     *
     * @return (boolean): True if succeed, otherwise False
     *
     **/
    public function updateReasonCancellationFinance($data)
    {
        $sql = 'UPDATE finReasonCancellation
                   SET description = ?
                 WHERE reasonCancellationId  = ?';

        $args = array($data->description,
                      $data->reasonCancellationId);

        $db = $this->getDatabase();
        $sqls = SAGU::prepare($sql,$args);
        for ( $i=0; $i<count($sqls); $i++ )
        {
            $result = $db->execute($sqls[$i]);
        }

        return $result;
    }

    /**
     * Delete a record
     *
     * @param $reasonCancellationId (string): Primary key for deletion
     *
     * @return (boolean): True if succeed, otherwise False
     *
     **/
    public function deleteReasonCancellationFinance($reasonCancellationId)
    {
        $sql = 'DELETE FROM finReasonCancellation
                      WHERE reasonCancellationId = ?';

        $db = $this->getDatabase();
        $result = $db->execute(SAGU::prepare($sql, $reasonCancellationId));

        return $result;
    }
}
