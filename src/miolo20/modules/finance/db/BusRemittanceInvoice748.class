    public function returnEntryInformation($invoiceId)
    {
        $sql = ' SELECT B.description,
                        A.value,
                        A.comments
                   FROM finEntry A
             INNER JOIN finOperation B
                     ON ( A.invoiceId = ?
                    AND A.operationId = B.operationId) ';
                      
        $args = array($invoiceId);
        $ret = $this->getDatabase()->query(SAGU::prepare($sql, $args));
        return $ret;  
    }
    
