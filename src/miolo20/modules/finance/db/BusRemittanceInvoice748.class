    /**
     *
     * Return a specific record from the database
     *
     * @param $cityId (integer): Primary key of the record to be retrieved
     *
     * @return (object): Return an object of the type handled by the class
     *
     */
    public function getCity($cityId)
    {
        $sql = 'SELECT A.cityId,
                       A.name,
                       A.zipCode,
                       A.stateId,
                       B.name,
                       A.countryId,
                       C.name,
                       A.userName,
                       TO_CHAR(A.dateTime,\'' . SAGU::getParameter('BASIC', 'MASK_TIMESTAMP') . '\'),
                       A.ipAddress
                  FROM basCity A
             LEFT JOIN basState B
                    ON ( A.stateId = B.StateId )
             LEFT JOIN basCountry C
                    ON ( A.countryId = C.countryId )
                 WHERE A.cityId = ?';

        $result = $this->getDatabase()->query(SAGU::prepare($sql, $cityId));

        $city  = new basCity();
        list ( $city->cityId,
               $city->name,
               $city->zipCode,
               $city->stateId,
               $city->stateName,
               $city->countryId,
               $city->countryName,
               $city->userName,
               $city->dateTime,
               $city->ipAddress ) = $result[0];
        return $city;
    } 

