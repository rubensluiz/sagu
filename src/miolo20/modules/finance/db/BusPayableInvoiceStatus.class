/**
 * Class to manipulate the basPerson table
 **/
class BusinessFinanceBusPayableInvoiceStatus extends sBusiness
{
    /**
     * List all records from the table handled by the class
     *
     * @param: None
     *
     * @returns (array): Return an array with the entire table
     *
     **/
    public function listPayableInvoiceStatus($exceptionStatus = null)
    {
        $sql = 'SELECT status,
                   description
         FROM ONLY finPayableInvoiceStatus ';

        if (strlen($exceptionStatus) > 0)
        {
            $sql .= ' WHERE status <> ? ORDER BY status';
            $ret = $this->getDatabase()->query(SAGU::prepare($sql, $exceptionStatus));
        }
        else
        {
            $sql .= ' ORDER BY status';
            $ret = $this->getDatabase()->query($sql);
        }

        return $ret;
    }
}
