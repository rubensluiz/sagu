/**
 * Class to manipulate the Price table
 **/
class BusinessFinanceBusEmissionType extends sBusiness
{
    /**
     * List all records from the table handled by the class
     *
     * @param: None
     * @returns (array): Return an array with the entire table
     *
     **/
    public function listEmissionType()
    {
        $sql = 'SELECT emissionTypeId,
                       description
                  FROM finEmissionType';
        
        $result = $this->getDatabase()->query($sql);
        
        return $result;
    }

    /**
     * Return a specific record from the database
     *
     * @param $emissionTypeId (integer): Primary key of the record to be retrieved
     *
     * @return (object): Return an object of the type handled by the class
     *
     **/
    public function getEmissionType($emissionTypeId)
    {
        $sql = 'SELECT emissionTypeId,
                       description,
                       userName,
                       TO_CHAR(dateTime,\'' . SAGU::getParameter('BASIC', 'MASK_TIMESTAMP') . '\'),
                       ipAddress
                  FROM finEmissionType
                 WHERE emissionTypeId = ?';

        $result = $this->getDatabase()->query(SAGU::prepare($sql, $emissionTypeId));

        $emissionType = new FinEmissionType();
        list ( $emissionType->emissionTypeId,
               $emissionType->description,
               $emissionType->userName,
               $emissionType->dateTime,
               $emissionType->ipAddress ) = $result[0];

        return $emissionType;
    }
}

