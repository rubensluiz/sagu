	<queryString>
		<![CDATA[SELECT data_efetivacao_lancamento as data_contabil_lancamento,
       cod_tipo_operacao_lancamento as tipo_operacao,
       getpersonname(cod_pessoa_ref) ||' (' || cod_titulo_ref || ') / ' || descricao_operacao as operacao,
       ROUND(valor_lancamento,2),
       origem,
       local_pagamento,
       cod_local_pagamento,
       comentario_lancamento,
       dataporextenso(now()::Date) as datahoje,
                  (SELECT name
                     FROM basCompanyConf
                    WHERE companyId = (SELECT
getParameter('BASIC', 'DEFAULT_COMPANY_CONF')::int )
                  ) AS companyName,
                  capitalize_string(
                    (SELECT name
                       FROM basCity
                      WHERE cityId =
                      (SELECT cityId
                         FROM basLegalPerson
                        WHERE personId =
                        (SELECT personId
                           FROM basCompanyConf
                          WHERE companyId = (SELECT
getParameter('BASIC', 'DEFAULT_COMPANY_CONF')::int
                                            )
                        )
                      )
                    )
                  ) AS companyCity,
          saldo_inicial.obtem_valor_inicial_dos_lancamentos AS saldo_inicial,
	cod_centrodecusto || ' - ' || centro_de_custo AS centro_de_custo
    FROM rptregimecaixa,(SELECT * FROM obtem_valor_inicial_dos_lancamentos(TO_DATE($P{datainicial},'DD/MM/YYYY'), $P{local})) saldo_inicial
    WHERE data_efetivacao_lancamento BETWEEN TO_DATE($P{datainicial},'DD/MM/YYYY') AND TO_DATE($P{datafinal},'DD/MM/YYYY')
     AND CASE WHEN $P{local} IS NOT NULL THEN local_pagamento::text ILIKE substring($P{local} from 2) ELSE TRUE END
     AND CASE WHEN substring($P{local} from 1 for 1) = 'B' THEN conta_bancaria = substring($P{local} from position('-' in $P{local})+2)::varchar ELSE TRUE END
ORDER BY CASE WHEN origem = 'NENHUM' THEN 'ZZ' ELSE origem END,cod_local_pagamento,TO_DATE(data_efetivacao_lancamento::text,'DD/MM/YYYY'::text),operacao ASC]]>
	</queryString>
