/**
 * Class to manipulate the basEmployee table
 **/
class BusinessHumanResourcesBusEmployeeList extends sBusiness
{
    /**
     * Do a search on the database table handled by the class
     *
     * @param $filters (object): Search filters
     *
     * @return (array): An array containing the search results
     **/
    public function searchEmployee($employeeTypeId)
    {
        $sql = 'SELECT A.employeeId,
                       A.personId,
                       B.name,
                       A.branchNumber || \'-\' || A.branchNumberDigit,
                       A.accountNumber || \'-\' || A.accountNumberDigit,
                       round(A.salary,' . SAGU::getParameter('BASIC', 'REAL_ROUND_VALUE') . '),
               D.content
                  FROM basEmployee A
        LEFT JOIN ONLY basPhysicalPersonEmployee B
                 USING (personid)
             LEFT JOIN basEmployeeType C
                    ON (A.employeeTypeId = C.employeeTypeId)
             LEFT JOIN basDocument D
                    ON (A.personId = D.personId)';

    $where = ' AND D.documentTypeId = ' . SAGU::getParameter('BASIC', 'DEFAULT_DOCUMENT_TYPE_ID_CPF');

        if ( strlen($employeeTypeId) > 0 )
        {
            $where .= ' AND C.employeeTypeId IN (' . $employeeTypeId . ')';
        }

        unset($result);
        if ( strlen($where) > 0 )
        {
            $sql   .= ' WHERE ' . substr($where, 4) . ' ORDER BY B.name';
            $db     = $this->getDatabase();
            $result = $db->query($sql);
            //$db->close();
        }

        return $result;
    }

    public function searchEmployeeRemittance($employeeTypeId)
    {
        $sql = 'SELECT A.clearingHouse,
                       A.bankId,
                       A.branchNumber,
                       A.branchNumberDigit,
                       A.accountNumber,
                       A.accountNumberDigit,
                       B.name,
                       A.personId,
                       round(round(A.salary,2)*100,0) as salary
                  FROM basEmployee A
        LEFT JOIN ONLY basPhysicalPersonEmployee B
                 USING (personid)
             LEFT JOIN basEmployeeType C
                    ON (A.employeeTypeId = C.employeeTypeId)';

        if ( strlen($employeeTypeId) > 0 )
        {
            $where .= ' AND C.employeeTypeId IN (' . $employeeTypeId . ')';
        }

        unset($result);
        if ( strlen($where) > 0 )
        {
            $sql   .= ' WHERE ' . substr($where, 4) . ' ORDER BY B.name';
            $db     = $this->getDatabase();
            $result = $db->query($sql);
            //$db->close();
        }

        return $result;
    }

}

