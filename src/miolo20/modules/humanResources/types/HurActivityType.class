class HurActivityType extends SType
{
    /**
     * @AttributeType integer
     *
     */
    protected $activityTypeId;
    /**
     * @AttributeType character varying
     *
     */
    protected $description;

    
    public function __construct($activityTypeId = NULL)
    {
        if ((strlen($activityTypeId) > 0))
        {
            $this->activityTypeId = $activityTypeId;
            $this->populate();
        }
    }

    public static function search($filters)
    {
        $sql = 'SELECT activitytypeid
                  FROM hur.activitytype';
        $where = '';

        foreach ($filters as $key=>$value)
        {
            if ((is_scalar($value)) && (strlen($value) > 0))
            {
                $where.=" AND {$key} = '{$value}'";
            }
        }

        if (strlen($where) > 0)
        {
            $sql.=' WHERE '.substr($where, 5);
        }

        $sql.=' ORDER BY activitytypeid ';
        $result = SDatabase::query($sql);
        $retVal = array();

        for ($i = 0; $i < count($result); $i++)
        {
            $retVal[] = new HurActivityType($result[$i][0]);
        }

        return $retVal;
    }
    
    public static function listActivityType()
    {
        $sql = '    SELECT activitytypeid,
                       description
                  FROM hur.activitytype';
        $result = SDatabase::query(SAGU::prepare($sql, null));
        
        return $result;
    }
    
    public static function searchGrid($filters = null)
    {
        $sql = '    SELECT activitytypeid,
                       description
                  FROM hur.activitytype';
        $args = array();

        if (strlen($filters->userName) > 0)
        {
            $where.=' AND UNACCENT(username) ILIKE UNACCENT(?) ';
            $args[] = $filters->userName.'%';
        }

        if (strlen($filters->dateTime) > 0)
        {
            $where.=' AND datetime = TO_TIMESTAMP(?, \''.SAGU::getParameter('BASIC', 'MASK_TIMESTAMP').'\')';
            $args[] = $filters->dateTime;
        }

        if (strlen($filters->ipAddress) > 0)
        {
            $where.=' AND ipaddress = ?';
            $args[] = $filters->ipAddress;
        }

        if (strlen($filters->activityTypeId) > 0)
        {
            $where.=' AND activitytypeid = ?';
            $args[] = $filters->activityTypeId;
        }

        if (strlen($filters->description) > 0)
        {
            $where.=' AND UNACCENT(description) ILIKE UNACCENT(?) ';
            $args[] = $filters->description.'%';
        }

        if (strlen($where) > 0)
        {
            $sql.=' WHERE '.substr($where, 4).'
                   ORDER BY activitytypeid';
            $result = SDatabase::query(SAGU::prepare($sql, $args));
        }

        return $result;
    }

    public static function listRecords()
    {
        return self::listActivityType();
    }

    private function populate()
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);
        $sql = 'SELECT username,
                       TO_CHAR(datetime, \''.SAGU::getParameter('BASIC', 'MASK_TIMESTAMP').'\'),
                       ipaddress,
                       activitytypeid,
                       description
                  FROM hur.activitytype
                 WHERE activitytypeid = ?';
        $result = SDatabase::query($sql, array($this->activityTypeId));

        if (!strlen($result[0][0]))
        {
            throw new Exception(_M('Registro inexistente. (@1)', $module, __CLASS__));
        }

        list($this->userName, $this->dateTime, $this->ipAddress, $this->activityTypeId, $this->description) = $result[0];
    }

    public function save()
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);

        if (strlen($this->activityTypeId) == 0)
        {
            $retVal = $this->insert();
        }
        else
        {
            $retVal = $this->update();
        }

        return $retVal;
    }

    private function insert()
    {
        $sql = 'INSERT INTO hur.activitytype
                            (activitytypeid, description)
                     VALUES (?, ?)';
        $sqlPK = "SELECT nextval('hur.activitytype_activitytypeid_seq'::regclass)";
        
        $result = SDatabase::query($sqlPK);
        $activityTypeId = $result[0][0];
        $args = array($activityTypeId, $this->description);
        $result = SDatabase::execute($sql, $args);

        if ($result)
        {
            $this->activityTypeId = $activityTypeId;
        }

        return $result;
    }

    private function update()
    {
        $sql = 'UPDATE hur.activitytype
                   SET description = ?
                 WHERE activitytypeid = ?';
        $args = array($this->description, $this->activityTypeId);
        return SDatabase::execute($sql, $args);
    }

    public function delete()
    {
        if (strlen($this->activityTypeId) == 0)
        {
            throw new Exception(_M('Não é possível excluir um registro que ainda não foi salvo. (@1)', $module, __CLASS__));
        }

        $sql = 'DELETE FROM hur.activitytype
                      WHERE activitytypeid = ?';
        $args = array($this->activityTypeId);
        $result = SDatabase::execute($sql, $args);

        if ($result)
        {
            $this->activityTypeId = null;
        }

        return $result;
    }
}
