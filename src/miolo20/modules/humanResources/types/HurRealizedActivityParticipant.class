class HurRealizedActivityParticipant extends SType
{
    /**
     * @AttributeType integer
     */
    protected $realizedActivityId;
    /**
     * @AttributeType integer
     */
    protected $personId;
    /**
     * Atributo virtual, que obtem objeto da pessoa na BusPerson
     * @AttributeType string
     */
    protected $person;
    /**
     * Atributo virtual
     * @AttributeType string
     */
    protected $personName;

    public function __construct($realizedActivityId = NULL, $personId = NULL)
    {
        if ((strlen($realizedActivityId) > 0 ) && (strlen($personId) > 0 ))
        {
            $this->realizedActivityId = $realizedActivityId;
            $this->personId = $personId;
            $this->populate();
        }
    }

    public function  __get($name)
    {
        if ( ($name == 'person' || $name == 'personName') )
        {
            if (!$this->person)
            {
                $MIOLO = MIOLO::getInstance();
                $busPerson = new BusinessBasicBusPerson();
                $this->person = $busPerson->getPerson($this->personId);
            }

            $this->personName = $this->person->name;
        }

        return parent::__get($name);
    }

    public static function search($filters)
    {
        $sql = 'SELECT realizedActivityId,
                       personid
                  FROM hur.realizedActivityParticipant';
        $where = '';

        foreach ( $filters as $key => $value )
        {
            if ( (is_scalar($value)) && (strlen($value) > 0 ))
            {
                $where .= " AND {$key} = '{$value}'";
            }
        }

        if ( strlen($where) > 0 )
        {
            $sql .= ' WHERE '.substr($where, 5);
        }

        $sql .= ' ORDER BY realizedActivityId, personid ';
        $result = SDatabase::query($sql);
        $retVal = array();

        for ( $i = 0; $i < count($result); $i++ )
        {
            $retVal[] = new HurRealizedActivityParticipant($result[$i][0], $result[$i][1]);
        }
        return $retVal;
    }

    public static function searchGrid($filters = null)
    {
        $sql = 'SELECT realizedActivityId,
                       personid
                  FROM hur.realizedActivityParticipant';

        $params = array();
        if ( strlen($filters->realizedActivityId) > 0 )
        {
            $where .= ' AND realizedActivityId = ?';
            $params[] = $filters->realizedActivityId;
        }

        if ( strlen($filters->personId) > 0 )
        {
            $where .= ' AND personid = ?';
            $params[] = $filters->personId;
        }

        if ( strlen($where) > 0 )
        {
            $sql .= ' WHERE '.substr($where, 4).'
                   ORDER BY realizedActivityId, personid';
            $result = SDatabase::query(SAGU::prepare($sql, $params));
        }

        return $result;
    }

    private function populate()
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);
        $sql = 'SELECT username,
                       TO_CHAR(datetime, \''.SAGU::getParameter('BASIC', 'MASK_TIMESTAMP').'\'),
                       ipaddress,
                       realizedActivityId,
                       personid
                  FROM hur.realizedActivityParticipant
                 WHERE realizedActivityId = ? AND personid = ?';

        $result = SDatabase::query($sql, array($this->realizedActivityId, $this->personId));

        if (!strlen($result[0][0]))
        {
            throw new Exception(_M('Registro inexistente.', $module));
        }

        list( $this->userName,
              $this->dateTime,
              $this->ipAddress,
              $this->realizedActivityId,
              $this->personId ) = $result[0];
    }

    public function save()
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);

        $retVal = $this->insert();

        return $retVal;
    }

    private function insert()
    {
        $sql = 'INSERT INTO hur.realizedActivityParticipant
                            (realizedActivityId, personid)
                     VALUES (?, ?)';

        $params = array($this->realizedActivityId, $this->personId);

        $result = SDatabase::execute($sql, $params);

        return $result;
    }

    private function update()
    {
        //Not Implemented
    }

    public function delete()
    {
        if ( strlen($this->realizedActivityId) == 0 || strlen($this->personId) == 0)
        {
            throw new Exception(_M('Não é possível excluir um registro que ainda não foi salvo.', $module));
        }

        $sql = 'DELETE FROM hur.realizedActivityParticipant
                      WHERE realizedActivityId = ?
                        AND personid = ?';

        $params = array($this->realizedActivityId, $this->personId);
        $result = SDatabase::execute($sql, $params);

        if ($result)
        {
            $this->realizedActivityId = null;
            $this->personId = null;
        }

        return $result;
    }
}
