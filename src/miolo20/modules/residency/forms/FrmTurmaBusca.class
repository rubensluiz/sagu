class FrmTurmaBusca extends SSearchForm
{
    
    //public $campoBuscaGenerica = true;
    
    public function __construct()
    {
        parent::__construct(null, new ResTurma(), array('turmaId'));
    }
    
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        
        $fields[] = $codigoTurma =  new MTextField('codigoTurmaS', $this->GetFormValue('codigoTurmaS'), _M('Código da turma', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE')); 
        
        $fields[] = $descricao =  new MTextField('descricaoS', $this->GetFormValue('descricaoS'), _M('Nome da turma', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));

        $fields[] = $componenteid =  new MSelection('componenteidS', $this->GetFormValue('componenteidS'), _M('Componente'), ResComponente::listRecords());

        $fields[] = new SBeginEndPeriod(array(
            'title' => _M('Período letivo', $module),
            'begin' => array('label' => _M('Data inicial', $module), 'dateId' => 'dataInicioS', 'dateValue' => $this->getRequestValue('dataInicioS', $data->dataInicio)),
            'end' => array('label' => _M('Data final', $module), 'dateId' => 'dataFimS', 'dateValue' => $this->getRequestValue('dataFimS', $data->dataFim)),
            'required' => false,
        ));
        
        parent::defineFields($fields, $module, 'GrdTurmaBusca', $validators);
    }
}

