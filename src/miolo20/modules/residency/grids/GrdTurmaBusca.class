class GrdTurmaBusca extends SGrid
{
    public function __construct($filters)
    {
        $module = MIOLO::getCurrentModule();
        
        $columns = array(
            'resturma.codigoturma' => new MGridColumn(_M('Código da turma', $module), 'left', true, NULL, true, NULL, true),
            'resturma.descricao' => new MGridColumn(_M('Nome da turma', $module), 'left', true, NULL, true, NULL, true),
            'descricaocomponente' => new MGridColumn(_M('Componente'), 'left', true, NULL, true, NULL, true),
            'resturma.quantidadeperiodo' => new MGridColumn(_M('Período de duração', $module), 'right', true, NULL, true, NULL, true),
            'resturma.datainicio' => new MGridColumn(_M('Data inicial', $module), 'center', true, NULL, true, NULL, true),
            'resturma.datafim' => new MGridColumn(_M('Data final', $module), 'center', true, NULL, true, NULL, true),
            'resturma.vagas' => new MGridColumn(_M('Número de vagas', $module), 'right', true, NULL, true, NULL, true),
            'vagasocupada' => new MGridColumn(_M('Vagas ocupadas', $module), 'right', true, NULL, true, NULL, true),
            'resturma.turmaid' => new MGridColumn(_M('Código', $module), 'left', true, NULL, false, NULL, true),
        );
        
        $primaryKeys = array('turmaId'=>'%resturma.turmaid%');
        
        parent::__construct($filters, $columns, __CLASS__, $primaryKeys);
        
        $listaAlunos = SAGU::getActionURL($module, 'main:register:listaDeAlunos', $primaryKeys);
        $this->addActionIcon(_M('Lista de alunos', $module), 'lista-alunos-16x16.png', $listaAlunos);
        
        $listaAlunos = SAGU::getActionURL($module, 'main:register:envioDeEmail', $primaryKeys);
        $this->addActionIcon(_M('Envio de e-mail', $module), 'button_sendemail.png', $listaAlunos);

        $hrefResidency = SAGU::getActionURL($module, 'main:document:relatorioDeFaltasDeAtividadesPraticaPorTurma', $primaryKeys);
        $this->addActionIcon(_M('Relatório de faltas/turnos de atividades práticas por turma', $module), 'viewEvaluations.png', $hrefResidency);
    }
}