class GrdOcorrenciaDeContratoSearch extends SGrid
{

    public function __construct($filters)
    {
        $module = MIOLO::getCurrentModule();
        $MIOLO = MIOLO::getInstance();
        $action = $MIOLO->getCurrentAction();
        $ocorrenciaDeContratoId = MIOLO::_REQUEST('ocorrenciaDeContratoId');
        $residenteId = MIOLO::_REQUEST('residenteId');

        $columns = array(
            new MGridColumn(_M('Código', $module), null, null, null, false),
            new MGridColumn(_M('ResidenteId', $module), null, null, null, false),
            new MGridColumn(_M('Data inicio', $module)),
            new MGridColumn(_M('Data fim', $module)),
            new MGridColumn(_M('Ocorrência', $module)),
            new MGridColumn(_M('Observações', $module)),
            new MGridColumn(_M('Arquivo Anexo', $module), 'center'),
            new MGridColumn(_M('Envio de e-mail a CNRMS', $module), 'left', true, NULL, true, ResOcorrenciaDeContrato::listaOpcoesEnvioEmail(), true),
        );
        parent::__construct($filters, $columns, __CLASS__, array( 'ocorrenciaDeContratoId' => '%0%', 'residenteId' => '%1%'));
        $this->setRowMethod(__CLASS__, 'myRowMethod');       
        
    }
    
    public function myRowMethod($i, $row, $actions, $columns)
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        
        // exibe link de anexo para download
        $busFile = new BusinessBasicBusFile();
        $fileId = $row[6];

        if ( strlen($fileId) > 0 )
        {
            $link = $busFile->getLink($fileId, _M('Baixar anexo'));
            $columns[6]->control[$i]->value = $link->generate();
        }

        // mostra a situação vigente atual
        if ($i == 0) {
            $columns[4]->control[$i]->value = $row[4] . ' - <span style="font-weight: bold;color: #009b4f;">(OCORRÊNCIA VIGENTE)</span>';
        }
    }
}
