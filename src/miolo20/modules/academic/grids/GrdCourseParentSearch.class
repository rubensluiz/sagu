/**
 * Grid used by form to display search results
 **/
class GrdCourseParentSearch extends SGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);

        $columns = array( 
            new MGridColumn( _M('Código do complemento de matriz curricular', $module), 'right', true, null, true, null, true ),
            new MGridColumn( _M('Código', $module) . '/' . _M('Curso', $module), 'left',  false, null, true, null, true ),
            new MGridColumn( _M('Versão do curso', $module),             'right', true, null, true, null, true ),
            new MGridColumn( _M('Código', $module) . '/' . _M('Turno', $module), 'left',  true, null, true, null, true ),
            new MGridColumn( _M('Unidade', $module),                  'left',  true, null, true, null, true ),
            new MGridColumn( _M('Código', $module) . '/' . _M('Curso complementar', $module), 'left', true, null, true, null, true ),
            new MGridColumn( _M('Versão do curso complementar', $module), 'right', true, null, true, null, true ),
            new MGridColumn( _M('Código', $module) . '/' . _M('Turno complementar', $module), 'left', true, null, true, null, true ),
            new MGridColumn( _M('Unidade complementar', $module), 'left', true, null, true, null, true ),
            new MGridColumn( _M('Ordem complementar', $module), 'right', true, null, true, null, true )
        );

        parent::__construct($filters, $columns, __CLASS__, array('courseParentId' => '%0%'));
    }
}
