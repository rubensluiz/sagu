/**
 * Grid used by form to display search results
 **/
class GrdGroupEnrolledPeople extends SGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();

        $groupId = MIOLO::_request('groupId');

        $home   = 'main:process:groupEnrolledPeople';
        $module = MIOLO::_request('module');

        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */
        $columns = array( 
                          new MGridColumn('', 'left', false, 0, false),
                          new MGridColumn( _M('Curso',      $module), 'right', true, null, true, null, true ),
                          new MGridColumn( _M('Código da pessoa',   $module), 'right', true, null, true, null, true ),
                          new MGridColumn( _M('Nome da pessoa', $module), 'left',  true, null, true, null, true ),
                          new MGridColumn( _M('E-mail',      $module), 'left',  true, null, true, null, true ),
                          new MGridColumn( _M('Telefone residencial', $module), 'right', true, null, true, null, true ),
                          new MGridColumn( _M('Telefone comercial',  $module), 'right', true, null, true, null, true ),
                          new MGridColumn( _M('Fone celular',  $module), 'right', true, null, true, null, true ),
                          new MGridColumn( _M('Situação',  $module), 'right', true, null, true, null, true )
                        );

        parent::__construct($filters, $columns, 'GrdGroupEnrolledPeople');        
        
        $this->setIsScrollable();

        $this->eventHandler();

    }    
}

