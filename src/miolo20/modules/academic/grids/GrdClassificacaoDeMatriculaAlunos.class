class GrdClassificacaoDeMatriculaAlunos extends SGrid
{
    /**
     * Class constructor
     **/
    public function __construct($data)
    {
        $MIOLO  = MIOLO::getInstance();
        $module = $MIOLO->getCurrentModule();
        
        //$MIOLO->page->AddScript('m_popup_control.js');
        
        $columns = array( 
            new MGridColumn(_M('Posição', $module), 'left', false, 0, true),
            new MGridColumn(_M('Aluno', $module), 'left', false, 0, true),
            new MGridColumn(_M('Curso', $module), 'left', false, 0, true),
            new MGridColumn(_M('Status atual', $module), 'left', false, 0, true),
            new MGridColumn(_M('Disciplina é do curso do aluno', $module), 'left', false, 0, true, SAGU::listYesNo()),
            new MGridColumn(_M('Coeficiente de rendimento', $module), 'left', false, 0, true),
            new MGridColumn(_M('Data matrícula', $module), 'left', false, 0, true),
            new MGridColumn(_M('Hora matrícula', $module), 'left', false, 0, true),
            new MGridColumn(_M('Status previsto', $module), 'left', false, 0, true)
        );                
 
        parent::__construct($data, $columns, __CLASS__, $primaryKey);

        $this->clearActions();
        $this->disableExports();
        $this->disablePagination();
    }
}
