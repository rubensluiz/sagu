/**
 * Grid used by form to display search results
 **/
class GrdInterchangeSearch extends SGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);

        $columns = array( 
            new MGridColumn( _M('Código do intercâmbio', $module),   'right', true, null, true, null, true ),
            new MGridColumn( _M('Código do contrato', $module),      'right', true, null, true, null, true ),
            new MGridColumn( _M('Código da pessoa', $module),        'right', true, null, true, null, true ),
            new MGridColumn( _M('Nome da pessoa', $module),      'right', true, null, true, null, true ),
            new MGridColumn( _M('Código do tipo de intercâmbio', $module),      'right', true, null, false, null, true ),
            new MGridColumn( _M('Tipo de intercâmbio', $module),      'right', true, null, true, null, true ),
            new MGridColumn( _M('Complemento do tipo de intercâmbio', $module),      'right', true, null, true, null, true ),
            new MGridColumn( _M('atividade', $module),      'right', true, null, true, null, true ),
            new MGridColumn( _M('Data inicial', $module),       'left',  true, null, true, null, true ),
            new MGridColumn( _M('Data final', $module),         'left',  true, null, true, null, true ),
            new MGridColumn( _M('Código do país de origem', $module),       'left',  true, null, false, null, true ),
            new MGridColumn( _M('Nome do país de origem', $module),     'left',  true, null, true, null, true ),
            new MGridColumn( _M('Código da instituição de origem', $module),   'right', true, null, false, null, true ),
            new MGridColumn( _M('Nome da instituição de origem', $module), 'right', true, null, true, null, true ),
            new MGridColumn( _M('Código do país de destino', $module),       'left',  true, null, false, null, true ),
            new MGridColumn( _M('Nome do país de destino', $module),     'left',  true, null, true, null, true ),
            new MGridColumn( _M('Código da instituição de destino', $module),   'right', true, null, false, null, true ),
            new MGridColumn( _M('Nome da instituição de destino', $module), 'right', true, null, true, null, true ),
            new MGridColumn( _M('É remunerado', $module),   'left',  true, null, true, array( DB_TRUE => _M('Sim',$module), DB_FALSE => _M('Não',$module) ), true )
        );

        parent::__construct($filters, $columns, __CLASS__, array('interchangeId' => '%0%'));
    }
}
