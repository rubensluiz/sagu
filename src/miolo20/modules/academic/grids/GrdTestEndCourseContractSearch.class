/**
 * Grid used by form to display search results
 **/
class GrdTestEndCourseContractSearch extends SGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);

        $columns = array( 
            new MGridColumn( _M('Código do tipo da avaliação do MEC',          $module), 'right',  true, null, true, null, true ),
            new MGridColumn( _M('Descrição do tipo da avaliação do MEC', $module), 'left',   true, null, true, null, true ),
            new MGridColumn( _M('Código do contrato',                      $module), 'right',  true, null, true, null, true ),
            new MGridColumn( _M('Código da pessoa',                        $module), 'right',  true, null, true, null, true ),
            new MGridColumn( _M('Nome da pessoa',                      $module), 'left',   true, null, true, null, true ),
            new MGridColumn( _M('Data da avaliação do MEC',             $module), 'left',   true, null, true, null, true ),
            new MGridColumn( _M('É dispensado',                          $module), 'left',   true, null, true, array( DB_TRUE => _M('Sim',$module), DB_FALSE => _M('Não',$module) ), true ),
            new MGridColumn( _M('Está presente',                       $module), 'left',   true, null, true, array( DB_TRUE => _M('Sim',$module), DB_FALSE => _M('Não',$module) ), true ),
            new MGridColumn( _M('Mensagem de avaliação do aluno', $module), 'left', true, null, true, null, true),
            new MGridColumn( _M('Nota do aluno', $module), 'right', true, null, true, null, true),
        );

        $pkey = array(
            'testEndCourseTypeId' =>'%0%',
            'contractId'          =>'%2%',
            'testEndCourseDate'   =>'%5%',
        );

        parent::__construct($filters, $columns, __CLASS__, $pkey);
    }
}
