/**
 * Grid used by form to display search results
 **/
class GrdInactiveContractLock extends MGrid
{
    /**
     * Class constructor
     **/
    public function __construct($data)
    {
        $MIOLO = MIOLO::getInstance();
        $action = MIOLO::getCurrentAction();
        $module = SAGU::getFileModule(__FILE__);

        $showDebtColumn = (SAGU::getParameter('BASIC', 'MODULE_FINANCE_INSTALLED') == 'YES');
        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */
        $columns = array(
            new MGridColumn(_M('Código do contrato', $module), 'right', true, null, true),
            new MGridColumn(_M('Código da pessoa', $module), 'right', true, null, true),
            new MGridColumn(_M('Nome', $module), 'left', true, null, true),
            new MGridColumn(_M('Possui débitos', $module), 'center', true, null, $showDebtColumn, SAGU::listYesNo()));

        // this foreach is necessary until the getActionURL function is
        // able to handle an object parameter
        unset($opts);

        $url = $MIOLO->getActionURL($module,"$home:search",null,$opts);
        parent::__construct($data, $columns, $url, null, 0, 'grdInactiveContractLock' );
        $this->setTitle(_M('Contratos sem movimentação no período escolhido', $module));

        // enable row selection
        $this->addActionSelect();
        if ( $showDebtColumn )
        {
            // mark all items with no debts as checked
            $this->selecteds = array();
            for ( $i=0; $i<count($data); $i++ )
            {
                if ( $data[$i][3] == DB_FALSE )
                {
                    $this->selecteds[] = $i;
                }
            }
        }
        else
        {
            $this->selecteds = array_keys($data);
        }
    }
}

