/**
 * Grid used by form to display search results
 **/
class GrdCourseScheduleShockUnblock extends SGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        
        $home   = 'main:process:curricularComponentUnblock:courseScheduleShockUnblock';
        $module = MIOLO::_request('module');
        
        $columns = array(
                          new MGridColumn( _M('Código do contrato',      $module), 'right',  true, null, true, null, true ),
                          new MGridColumn( _M('Código da pessoa',           $module), 'right',   true, null, true, null, true ),
                          new MGridColumn( _M('Nome da pessoa', $module), 'left',  false, null, true, null, true )
                        );
        
        parent::__construct( $filters, $columns, 'gridCourseScheduleShockUnblock' );
        $this->addActionSelect();
    }

}

