/**
 * Grid used by form to display search results
 **/
class GrdEventSearch extends SGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);

        $columns = array( 
            new MGridColumn( _M('Código do evento', $module),          'right', true, null, true, null, true ),
            new MGridColumn( _M('Descrição', $module),       'left',  true, null, true, null, true ),
            new MGridColumn( _M('Data inicial', $module),        'left',  true, null, true, null, true ),
            new MGridColumn( _M('Data final', $module),          'left',  true, null, true, null, true ),
            new MGridColumn( _M('Código do plano de contas', $module), 'right', true, null, true, null, true ),
            new MGridColumn( _M('Descrição', $module),       'left',  true, null, true, null, true ),
            new MGridColumn( _M('Código do centro de custo', $module),    'right', true, null, true, null, true ),
            new MGridColumn( _M('Descrição', $module),       'left',  true, null, true, null, true ),
            new MGridColumn( _M('Código da política', $module),         'right', true, null, true, null, true ),
            new MGridColumn( _M('Descrição', $module),       'left',  true, null, true, null, true ),
            new MGridColumn( _M('Código da origem', $module),  'right', true, null, true, null, true ),
            new MGridColumn( _M('Descrição', $module),       'left',  true, null, true, null, true ),
            new MGridColumn( _M('Taxa de inscrição', $module),   'left',  true, null, true, null, true ),
            new MGridColumn( _M('Carga horária', $module),   'left',  true, null, true, null, true )
        );

        $primaryKey = array('eventId' => '%0%');

        parent::__construct($filters, $columns, __CLASS__, $primaryKey);
    }
}
