/**
 * Grid used by form to display search results
 **/
class GrdEnrollSituation extends SGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        
        $home   = 'main:report:lockListing';
        $module = MIOLO::_request('module');
        
        $columns = array( 
                          new MGridColumn( _M('Código da matrícula', $module), 'right', false, null, false, null, true),
                          new MGridColumn( _M('Código da pessoa', $module), 'right', false, null, true, null, true ),                                      
                          new MGridColumn( _M('Nome da pessoa', $module),   'left',  false, null, true, null, true ),
                          new MGridColumn( _M('Código da disciplina oferecida', $module),   'right',  false, null, true, null, true ),
                          new MGridColumn( _M('Código da disciplina', $module),   'right',  false, null, true, null, true ),
                          new MGridColumn( _M('Versão da disciplina', $module),   'right',  false, null, true, null, true ),
                          new MGridColumn( _M('Nome da disciplina', $module),      'left', false, null, true, null, true ),
                          new MGridColumn( _M('Nota final', $module),   'right',  false, null, true, null, true ),
                          new MGridColumn( _M('Código do período', $module),             'right',  false, null, true, null, true ),
                        );
        
        $pkey = array( 'enrollId'=>'%0%' );
        parent::__construct($filters, $columns, 'gridEnrollSituation', $pkey);
    }
}

