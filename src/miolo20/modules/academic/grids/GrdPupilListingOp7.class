/**
 * Grid used by form to display search results
 **/
class GrdPupilListingOp7 extends SGrid
{
    var $totalFooter1;
    var $totalFooter2;
    
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = $MIOLO->getCurrentModule();
        $home   = 'main:report:pupilListing';

        $columns = array( new MGridColumn( _M('Código', $module), 'right', true, null, true, null, false ),
                          new MGridColumn( _M('Unidade', $module), 'left',  true, null, true, null, false ),
                          new MGridColumn( _M('Curso', $module), 'left',  true, null, true, null, false ),
                          new MGridColumn( _M('Total', $module), 'center',  true, null, true, null, false )
                        );
        parent::__construct( $filters, $columns, 'GrdPupilListingOp7');
        unset($this->actions);
        $this->setRowMethod($this, 'myRowMethod');
        $this->setFooter('<center><b>' . _M('Total de alunos', $module) . ':</b>&nbsp;');
    }
    
    public function myRowMethod($i, $row, $actions, $columns )
    {
        $this->totalFooter1 += $row[3];
        $this->totalFooter2 += $row[4];
    }

    public function generateFooter( )
    {
        $MIOLO  = MIOLO::getInstance( );
        $module = $MIOLO->getCurrentModule( );

        $controls = array( new mText('footer',
                                     '&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;' .
                                     _M('Total', $module) . ': ' . ($this->totalFooter1 + $this->totalFooter2) .
                                     '</center>'
                                     ));
        $controls = array_merge( parent::generateFooter(), $controls);
        return $controls;
    }


}

