/**
 * Grid used by form to display search results
 **/
class GrdSpecialNecessityCarriers extends SGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        
        $home   = 'main:report:specialNecessityCarrierList';
        $module = MIOLO::_request('module');
        
        $columns = array( 
                          new MGridColumn( _M('Código do curso', $module),            'right', false, null, true,  null, true),
                          new MGridColumn( _M('Versão do curso', $module),       'right', false, null, true,  null, true ),
                          new MGridColumn( _M('Nome do curso', $module),          'left',  false, null, false, null, true),
                          new MGridColumn( _M('Código da unidade', $module),              'right', false, null, false, null, true),
                          new MGridColumn( _M('Código do turno', $module),              'right', false, null, false, null, true),
                          new MGridColumn( _M('Código da pessoa', $module),            'right', false, null, true,  null, true),
                          new MGridColumn( _M('Nome da pessoa', $module),          'left',  false, null, true,  null, true ),
                          new MGridColumn( _M('Logradouro', $module),             'left',  false, null, true,  null, true ),
                          new MGridColumn( _M('Código da cidade', $module),              'right', false, null, false, null, true ),
                          new MGridColumn( _M('Cidade', $module),                 'left',  false, null, true,  null, true ),
                          new MGridColumn( _M('Telefones', $module),               'left',  false, null, true,  null, true ),
                          new MGridColumn( _M('RG', $module),          'right', false, null, true,  null, true ),
                          new MGridColumn( _M('Código da necessidade especial', $module), 'right', false, null, false, null, true ),
                          new MGridColumn( _M('Necessidade especial', $module),    'left',  false, null, false, null, true),
                          new MGridColumn( _M('Descrição da necessidade especial', $module), 'left', false, null, true, null, true),
                          new MGridColumn( _M('Estado do contrato', $module),       'left',  false, null, true, null, true)
                        );
        
        parent::__construct($filters, $columns, 'gridSpecialNecessityCarriers');
    }
}

