class AcdContractEscolha extends SType
{
    protected $_tableName = 'acdcontract';
    
    protected $_descriptionColumn = "pessoafisica.name || ' (' || AcdContractEscolha.courseid || ' / ' || AcdContractEscolha.courseversion ||')'";
    
    protected $_defaultOrder = 'pessoafisica.name';
    
    protected $_associations = array(
        'pessoafisica' => array(
            'mode' => 'one',
            'typeClass' => 'BasPessoaFisica',
            'joinOnly' => true,
            'joinColumn' => 'personid',
            'joinType' => 'left',
        )
    );
    
    public $contractId;  
    
    public $classId ;
    
    
    public function getChoiceComponentSQL($argument = null, $id = null)
    {        
        $sql = parent::getChoiceComponentSQL($argument, $id);
                
        $args = $this->getAjaxArgs();
        
        if(strlen($args->classId)>0)
        {
            $sql->addInnerJoin('acdclasspupil', 'acdclasspupil.contractid = AcdContractEscolha.contractid');
            $sql->addEqualCondition('acdclasspupil.classid ', $args->classId);
        }
        
        return $sql;
    }
}


