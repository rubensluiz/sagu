/**
 *Definition of a set that stores the file path will be used as model
 **/
define('MODEL_NAME' ,$MIOLO->getModulePath('basic', '/documents/attachedLeaf.sxw'));
/**
 * PDF extension to generate report
 */
class RptAttachedLeaf
{
    public function RptAttachedLeaf($data = null)
    {
        $MIOLO    = MIOLO::getInstance();
        $module   = MIOLO::getCurrentModule();
        $business = new BusinessAcademicBusAttendance();

        if ( count($data->groupId) > 0 )
        {
            foreach ( $data->groupId as $key => $group )
            {
                list (  $groupId,
                        $professorId ) = $group;

                $reportData  = $business->getGroupDataBySchedule($groupId, $professorId);

                $reportData->emissionDate = $data->emissionDate;

                $curricularComponentData[$key.$groupId.$professorId][0]  = $reportData->curricularComponent;
                $curricularComponentData[$key.$groupId.$professorId][1]  = $reportData->center;
                $curricularComponentData[$key.$groupId.$professorId][3]  = $reportData->unit;
                $curricularComponentData[$key.$groupId.$professorId][2]  = $reportData->professor;
                $curricularComponentData[$key.$groupId.$professorId][4]  = $reportData->minimumNumberHours;
                $curricularComponentData[$key.$groupId.$professorId][5]  = $reportData->emissionDate;
                $curricularComponentData[$key.$groupId.$professorId][6]  = $reportData->periodId;
                $curricularComponentData[$key.$groupId.$professorId][7]  = $reportData->numberHours;
                $curricularComponentData[$key.$groupId.$professorId][8]  = $reportData->classId;
                $curricularComponentData[$key.$groupId.$professorId][9]  = $reportData->room;
                $curricularComponentData[$key.$groupId.$professorId][10] = $reportData->groupId;
            }

            // include and instance agata api
            $MIOLO->uses('/core/AgataAPI.class');
            $api = new AgataAPI;

            $fileName = '/attachedLeaf_'.$groupId.'_'.$professorId.'.sxw';
            // SET AGATA PARAMETERS
            //Set information of the header 
            $api->setLanguage($MIOLO->getConf('i18n.language'));
            $api->setOutputPath(SAGU::getParameter('BASIC', 'TEMP_DIR') . $fileName);
            $api->setDataArray($curricularComponentData);
            $api->setSubDataArray($null);

            $ok = $api->parseOpenOffice(MODEL_NAME);

            if ( $ok && $data->generateOption == 'pdf')
            {
                $api->setOutputPath(SAGU::getParameter('BASIC', 'TEMP_DIR') . '/attachedLeaf_'.$groupId.'_'.$professorId.'.pdf');
                $api->openOffice2pdf(SAGU::getParameter('BASIC', 'TEMP_DIR') . '/attachedLeaf_'.$groupId.'_'.$professorId.'.sxw');
            }

            $api->fileDialog();
        }
    }
}

