/**
 * Create header and footer information
 */
class PDF extends FPDF
{
    var $type = 0;
//    var $col=0;

    public function boxLabelTop($courseName, $col, $lin, $boxNumber)
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();

        $marginX = 10;
        $marginY = 10;

        $this->setXY($col+$marginX, $lin+$marginY);

        $this->cell(65, 30, '', 'LTBR', 0);

        $this->setFont(SAGU::getParameter('BASIC', 'DEFAULT_REPORT_FONT'), 'B', 10);

        $this->setXY($col+$marginX, $lin+$marginY);
        $this->multiCell(65, 5, $courseName);

        $this->setXY($col+$marginX, $lin+$marginY+25);
        $this->cell(65, 5, _M('Número da caixa', $module) . '  ' . $boxNumber, 0, 0);
    }
}


/**
 * PDF extension to generate report
 */
class RptBoxLabel
{
    var $listSpace;

    public function RptBoxLabel($data = null)
    {
        $MIOLO       = MIOLO::getInstance();
        $module      = MIOLO::getCurrentModule();

        // Generating PDF file
        $pdf = new PDF();
        $pdf->aliasNbPages();
        $pdf->SetAutoPageBreak(true, 5);

        // First page
        $pdf->setTopMargin(1);

        //All pupils from course and Enrolled pupil
        $pdf->addPage('P', 'mm', 'A4'); 

        $reportData->courseName  = $data->courseName;
        $count                   = 1;
        $col                     = 1;
        $lin                     = 1;

        $oldPageNo = $pdf->pageNo();
        for ( $x = 0; $x < count($reportData->courseName); $x++ )
        {
            if ($count == 3) // Se é o terceiro retângulo
            {
                $pdf->boxLabelTop($reportData->courseName[$x], $col, $lin, $data->boxNumber);
                $count = 1;
                $lin  += 30;
                $col   = 1;

                if ($lin > 270) //Verifica se terminara as linhas possíveis, sendo que a folha
                                //A4 tem 290 de altura. Como temos 10 de margem superior e 5 de
                                //inferior consulto por 270, pois nesta posição iria escrever uma 
                                //célula de altura igual a 30 ultrapasando o possível de 290
                {
                    $pdf->addPage('P', 'mm', 'A4'); 
                }
            }
            else //1o e 2a retângulo
            {
                $pdf->boxLabelTop($reportData->courseName[$x], $col, $lin, $data->boxNumber);

                $count++;
                $col += 65;
            }

            $numPage = $pdf->pageNo();

            if ( $numPage != $oldPageNo ) // Se a página atual é diferente da anterior
            {
                $col   = 1;
                $lin   = 1;
                $count = 1;

                $oldPageNo = $numPage;
            }
            else //Continua na mesma página
            {
                $oldPageNo = $numPage;
            }
        }

        $pdf->close();
        $pdf->output();
    }
}

