/**
 * Class to manipulate the acdKnowledgeArea table
 **/
class BusinessAcademicBusKnowledgeArea extends sBusiness
{
    /**
     * List all records from the table handled by the class
     *
     * @param: None
     * @returns (array): Return an array with the entire table
     **/
    public function listKnowledgeArea()
    {
        $db = $this->getDatabase();
        $sql = 'SELECT knowledgeAreaId,
                       name
                  FROM acdKnowledgeArea
              ORDER BY name';
        $ret = $db->query($sql);

        return $ret;
    }

    /**
     * Return a specific record from the database
     *
     * @param $knowledgeAreaId (integer): Primary key of the record to be retrieved
     * @return (object): Return an object of the type handled by the class
     **/
    public function getKnowledgeArea($knowledgeAreaId)
    {

        $sql = 'SELECT knowledgeAreaId,
                       name,
                       username,
                       TO_CHAR(dateTime,\'' . SAGU::getParameter('BASIC', 'MASK_TIMESTAMP') . '\'),
                       ipAddress
                  FROM acdKnowledgeArea
                 WHERE knowledgeAreaId = ?';

        $db = $this->getDatabase();
        $result = $db->query(SAGU::prepare($sql, $knowledgeAreaId));

        $knowledgeArea = new AcdKnowledgeArea();
        list ( $knowledgeArea->knowledgeAreaId,
               $knowledgeArea->name,
               $knowledgeArea->userName,
               $knowledgeArea->dateTime,
               $knowledgeArea->ipAddress ) = $result[0];

        return $knowledgeArea;
    }

    /**
     * Do a search on the database table handled by the class
     *
     * @param $filters (object): Search filters
     * @return (array): An array containing the search results
     **/
    public function searchKnowledgeArea($filters)
    {
        $sql= 'SELECT knowledgeAreaId,
                      name
                 FROM acdKnowledgeArea ';

        if ( strlen($filters->knowledgeAreaId) > 0 )
        {
            $where .= ' AND knowledgeAreaId = ? ';
            $args[] = $filters->knowledgeAreaId;
        }

        if ( strlen($filters->name) > 0 )
        {
            $where .= ' AND UNACCENT(name) ILIKE UNACCENT(?) ';
            $args[] = $filters->name . '%';
        }

        unset($result);
        if ( strlen($where) > 0 )
        {
            $sql .= ' WHERE ' . substr($where, 4) . ' ORDER BY name';
            $db = $this->getDatabase();
            $result = $db->query(SAGU::prepare($sql, $args));
        }

        return $result;
    }

    /**
     * Insert a new record
     *
     * @param $data (object): An object of the type handled by the class
     * @return True if succed, otherwise False
     **/
    public function insertKnowledgeArea($data)
    {
        $sql = 'INSERT INTO acdKnowledgeArea
                            (name)
                     VALUES (?)';

        $args = array( $data->name );

        $db = $this->getDatabase();
        $result = $db->execute(SAGU::prepare($sql, $args));

        return $result;
    }

    /**
     * Update data from a specific record
     *
     * @param $data (object): Data which will replace the old record data
     * @return (boolean): True if succeed, otherwise False
     **/
    public function updateKnowledgeArea($data)
    {
        $sql = 'UPDATE acdKnowledgeArea
                   SET name    = ?
                 WHERE knowledgeAreaId = ?';

        $args = array( $data->name,
                       $data->knowledgeAreaId );

        $db = $this->getDatabase();
        $sqls = SAGU::prepare($sql, $args);

        for ( $i=0; $i<count($sqls); $i++ )
        {
            $result = $db->execute($sqls[$i]);
        }

        return $result;
    }

    /**
     * Delete a record
     *
     * @param $knowledgeAreaId (string): Primary key for deletion
     * @return (boolean): True if succeed, otherwise False
     **/
    public function deleteKnowledgeArea($knowledgeAreaId)
    {
        $sql = 'DELETE FROM acdKnowledgeArea
                      WHERE knowledgeAreaId = ?';

        $db = $this->getDatabase();
        $result = $db->execute(SAGU::prepare($sql, $knowledgeAreaId));

        return $result;
    }
}
