/**
 * Class to manipulate the acdElection table
 **/
class BusinessAcademicBusElection extends sBusiness
{

    /**
     * List all records from the table handled by the class
     *
     * @param: None
     * @returns (array): Return an array with the entire table
     **/
    public function listElection()
    {
        /**
         * Not implemented
         */
        return 'Not implemented';
    }

    /**
     * Return a specific record from the database
     *
     * @param $electionDate (integer): Primary key of the record to be retrieved
     * @return (object): Return an object of the type handled by the class
     **/
    public function getElection($electionDate)
    {
        $sql = 'SELECT TO_CHAR(A.electionDate,\'' . SAGU::getParameter('BASIC', 'MASK_DATE') . '\'),
                       A.description,
                       A.userName,
                       TO_CHAR(A.dateTime,\'' . SAGU::getParameter('BASIC', 'MASK_TIMESTAMP') . '\'),
                       A.ipAddress
                  FROM acdElection A
                 WHERE A.electionDate = TO_DATE(?,\'' . SAGU::getParameter('BASIC', 'MASK_DATE') . '\')';

        $db = $this->getDatabase();
        $result = $db->query(SAGU::prepare($sql, $electionDate));

        $election = new AcdElection();

        list ( $election->electionDate,
               $election->description,
               $election->userName,
               $election->dateTime,
               $election->ipAddress ) = $result[0];

        return $election;
    }

    /**
     * Do a search on the database table handled by the class
     *
     * @param $filters (object): Search filters
     * @return (array): An array containing the search results
     **/
    public function searchElection($filters)
    {
        $sql = 'SELECT TO_CHAR(A.electionDate,\'' . SAGU::getParameter('BASIC', 'MASK_DATE') . '\'),
                       A.description,
                       A.userName,
                       TO_CHAR(A.dateTime,\'' . SAGU::getParameter('BASIC', 'MASK_TIMESTAMP') . '\'),
                       A.ipAddress
                  FROM acdElection A';

        if ( strlen($filters->electionDate) > 0 )
        {
            $where .= ' AND A.electionDate = TO_DATE(?,\'' . SAGU::getParameter('BASIC', 'MASK_DATE') . '\')';
            $args[] = $filters->electionDate;
        }

        if ( strlen($filters->description) > 0 )
        {
            $where .= ' AND UNACCENT(A.description) ILIKE UNACCENT(?)';
            $args[] = $filters->description . '%';
        }

        unset($result);
        if ( strlen($where) > 0 )
        {
            $sql .= ' WHERE ' . substr($where, 4) . '
                   ORDER BY A.description';

            $db = $this->getDatabase();
            $result = $db->query(SAGU::prepare($sql, $args));
        }

        return $result;
    }

    /**
     * Insert a new record
     *
     * @param $data (object): An object of the type handled by the class
     * @return True if succed, otherwise False
     **/
    public function insertElection($data)
    {
        $sql = 'INSERT INTO acdElection
                            (electionDate,
                             description)
                     VALUES (TO_DATE(?,\'' . SAGU::getParameter('BASIC', 'MASK_DATE') . '\'),
                             ?)';

        $args = array( $data->electionDate,
                       $data->description );

        $db = $this->getDatabase();
        $result = $db->execute(SAGU::prepare($sql, $args));

        return $result;
    }

    /**
     * Update data from a specific record
     *
     * @param $data (object): Data which will replace the old record data
     * @return (boolean): True if succeed, otherwise False
     **/
    public function updateElection($data)
    {
        $sql = 'UPDATE acdElection
                   SET description = ?
                 WHERE electionDate = TO_DATE(?,\'' . SAGU::getParameter('BASIC', 'MASK_DATE') . '\')';

        $args = array( $data->description,
                       $data->electionDate );

        $db = $this->getDatabase();
        $sqls = SAGU::prepare($sql, $args);

        for ( $i=0; $i<count($sqls); $i++ )
        {
            $result = $db->execute($sqls[$i]);
        }

        return $result;
    }

    /**
     * Delete a record
     *
     * @param $electionDate (string): Primary key for deletion
     * @return (boolean): True if succeed, otherwise False
     **/
    public function deleteElection($electionDate)
    {
        $sql = 'DELETE FROM acdElection
                      WHERE electionDate = TO_DATE(?,\'' . SAGU::getParameter('BASIC', 'MASK_DATE') . '\')';

        $db = $this->getDatabase();
        $result = $db->execute(SAGU::prepare($sql, $electionDate));

        return $result;
    }
}
