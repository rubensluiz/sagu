/**
 * Class to manipulate the basComplementaryActivitiesCategory table
 **/
class BusinessAcademicBusComplementaryActivitiesCategory extends sBusiness
{
    /**
     * List all records from the table handled by the class
     *
     * @param: None
     *
     * @returns (array): Return an array with the entire table
     *
     **/
    public function listComplementaryActivitiesCategory()
    {
        $db  = $this->getDatabase();
        $sql = 'SELECT complementaryActivitiesCategoryId,
                       description   
                  FROM acdComplementaryActivitiesCategory   
              ORDER BY complementaryActivitiesCategoryId ';
        $ret = $db->query($sql);
        
        return $ret;
    }
    
    /**
     * Return a specific record from the database
     *
     * @param $complementaryActivitiesCategoryId (integer): Primary key of the record to be retrieved
     *
     * @return (object): Return an object of the type handled by the class
     *
     **/
    public function getComplementaryActivitiesCategory($complementaryActivitiesCategoryId)
    {
        $sql = 'SELECT A.complementaryActivitiesCategoryId,
                       A.description,
                       A.userName,
                       TO_CHAR(A.dateTime,\'' . SAGU::getParameter('BASIC', 'MASK_TIMESTAMP') . '\'),
                       A.ipAddress
                  FROM acdComplementaryActivitiesCategory A
                 WHERE A.complementaryActivitiesCategoryId = ? ';

        $db     = $this->getDatabase();
        $result = $db->query(SAGU::prepare($sql, $complementaryActivitiesCategoryId));
        

        $complementaryActivitiesCategory = new acdComplementaryActivitiesCategory();
        list ( $complementaryActivitiesCategory->complementaryActivitiesCategoryId,
               $complementaryActivitiesCategory->description,
               $complementaryActivitiesCategory->userName,
               $complementaryActivitiesCategory->dateTime,
               $complementaryActivitiesCategory->ipAddress ) = $result[0];

        return $complementaryActivitiesCategory; 
    }
   

    /**
     * Do a search on the database table handled by the class
     *
     * @param $filters (object): Search filters
     *
     * @return (array): An array containing the search results
     **/
    public function searchComplementaryActivitiesCategory($filters)
    {
        $sql= 'SELECT complementaryActivitiesCategoryId,
                      description
                 FROM acdComplementaryActivitiesCategory ';
        
        $args = array();

        if ( strlen($filters->complementaryActivitiesCategoryId) > 0 )
        {
            $where .= ' AND complementaryActivitiesCategoryId = ? ';
            $args[] = $filters->complementaryActivitiesCategoryId;
        }
        if ( strlen($filters->description) > 0 )
        {
            $where .= ' AND UNACCENT(description) ILIKE UNACCENT(?) ';
            $args[] = $filters->description.'%';
        }

        unset($result);
        if ( strlen($where) > 0 )
        {
            $sql .= '    WHERE ' . substr($where, 4);
        }
        
        $sql .= ' ORDER BY description';
        $db = $this->getDatabase();
        $result = $db->query(SAGU::prepare($sql, $args));

        return $result;
    }

    /**
     * Insert a new record
     *
     * @param $data (object): An object of the type handled by the class
     *
     * @return True if succed, otherwise False
     *
     **/
    public function insertComplementaryActivitiesCategory($data)
    {

        $sql = 'INSERT INTO acdComplementaryActivitiesCategory
                            (description)
                     VALUES (?) ';

        $args = array( $data->description );

        $db     = $this->getDatabase();
        $result = $db->execute(SAGU::prepare($sql, $args));
        
        return $result;
    }

    /**
     * Update data from a specific record
     *
     * @param $data (object): Data which will replace the old record data
     *
     * @return (boolean): True if succeed, otherwise False
     *
     **/
   public function updateComplementaryActivitiesCategory($data)
    {
        $sql = 'UPDATE acdComplementaryActivitiesCategory
                   SET description       = ?
                 WHERE complementaryActivitiesCategoryId = ? ';

        $args = array( $data->description,
                       $data->complementaryActivitiesCategoryId );

        $db   = $this->getDatabase();
        $sqls = SAGU::prepare($sql, $args);

        for ( $i=0; $i<count($sqls); $i++ )
        {
            $result = $db->execute($sqls[$i]);
        }

        

        return $result;
    }

    /**
     * Delete a record
     *
     * @param $complementaryActivitiesCategoryId (string): Primary key for deletion
     *
     * @return (boolean): True if succeed, otherwise False
     *
     **/
   public function deleteComplementaryActivitiesCategory($complementaryActivitiesCategoryId)
    {
        $sql = 'DELETE FROM acdComplementaryActivitiesCategory
                      WHERE complementaryActivitiesCategoryId = ? ';

        $db     = $this->getDatabase();
        $result = $db->execute(SAGU::prepare($sql, $complementaryActivitiesCategoryId));
        
        return $result;
    }
}
