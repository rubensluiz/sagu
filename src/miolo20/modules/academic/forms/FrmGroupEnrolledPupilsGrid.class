class FrmGroupEnrolledPupilsGrid extends SForm
{

    /**
     * Class constructor
     **/
    public function __construct()
    {
        parent::__construct(_M('Lista de alunos matriculados na disciplina oferecida', $module), null, null);
    }

    /**
     * Default method to define fields
     **/
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);
        $action = MIOLO::getCurrentAction();
        $function = MIOLO::_request('function');
        
        $groupId  = $this->getRequestValue('groupId');

        $ui = $MIOLO->getUI();
        $business = new BusinessAcademicBusEnroll();
        
        $fields[] = new SHiddenField('groupId', $groupId);
        $data     = $business->listGroupEnrolledPeople($groupId);
        
        
        $grdGroupEnrolledPeople = $this->grid = $ui->getGrid($module,'GrdGroupEnrolledPeople', $filters);
        $grdGroupEnrolledPeople->setData($data);
        $business = new BusinessAcademicBusGroup();
        $groupData = $business->getGroup($groupId);
        $grdGroupEnrolledPeople->setTitle($groupData->curriculumCurricularComponentId . '/' .
                                          $groupData->curriculumCurricularComponentVersion . ' - ' .
                                          $groupData->curriculumCurricularComponentName);
        
        $grdGroupEnrolledPeople->clearActions();
        $fields[] = $grdGroupEnrolledPeople;
        
        //Desabilita toolbar
        $options = array();
        $options['toolbar'] = false;
        
        parent::defineFields($options);
        $this->setFields($fields);
    }
    
    public function exportGridAsCSV_click()
    {
        $data = MUtil::getArrayAsCSV($this->getGridData('GrdGroupEnrolledPeople'));
        SAGU::returnAsFile('dados.csv', $data, 'text/csv');
    }

}
