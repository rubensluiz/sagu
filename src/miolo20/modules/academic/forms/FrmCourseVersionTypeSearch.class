/**
 * Form to search the basCourseVersionType table
 */
class FrmCourseVersionTypeSearch extends SSearchForm
{
    /**
     * Class constructor
     */
    public function __construct()
    {
        parent::__construct(_M('Localizar', 'basic'), new AcdCourseVersionType(), array('courseVersionTypeId'), 'BusCourseVersionType');
    }

    /**
     *  Default method to define fields
     */
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        
        //Field course version type
        $courseVersionTypeIdS = new MTextField('courseVersionTypeIdS', $this->getFormValue('courseVersionTypeIdS', $data->courseVersionTypeIdS), _M('Código', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $courseVersionTypeIdS->setJsHint(_M('Informe o código da modalidade de curso', $module));
        $fields[] = $courseVersionTypeIdS;
        
        //Field description
        $descriptionS = new MTextField('descriptionS', $this->descriptionS->value, _M('Descrição', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $descriptionS->setJsHint(_M('Informe a descrição da versão do curso', $module));
        $fields[] = $descriptionS;
        
        parent::defineFields($fields, $module, 'GrdCourseVersionTypeSearch');
    }
}

