    /**
     * Event triggered when user chooses Search from the toolbar
     **/
    public function tbBtnPrint_click($sender = null)
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();
        
        $filter = $this->getTypesData();
        
        $havePermission = false;
        
        if ( (SAGU::getParameter('BASIC', 'MODULE_FINANCE_INSTALLED') == 'YES') && (strtoupper(SAGU::getParameter('BASIC', 'WARNING_IF_DEFAULTER')) == 'TRUE') )
        {
            if ( $filter->ignoreDebits != 'yes' )
            {
                $business = new BusinessFinanceBusGeneralQueries();
                $businessContract = new BusinessAcademicBusContract();

                $debt = $business->getDefaulterDebt($filter->contractId, false);
                $debt = strlen($debt) > 0 ? $debt : 0;
    
                //Verifica se o aluno possui débitos financeiros
                if ( $debt > 0 )
                {
                    $this->addError(_M('O sistema detectou uma dívida com a instituição. Por favor, verifique com o setor financeiro.', $module));
                    
                    $contract     = $businessContract->getContract($filter->contractId);
                    $matricula = new Matricula($filter->contractId, Matricula::MATRICULA_NORMAL);
                    $enrollConfig = $matricula->obterConfiguracoes();
                    
                    if ( $MIOLO->checkAccess('FrmLinkCertified', A_ADMIN, false, true) || $enrollConfig->blockDebt == DB_FALSE)
                    {
                        $this->addField(new MHiddenField('ignoreDebits','yes'));
                        
                        $this->addError(_M('Se desejar continuar mesmo assim, clique no botão "Imprimir" abaixo.', $module));
                    }
                }
                else 
                {
                    $havePermission = true;
                }
            }
            else 
            {
                $havePermission = true;
            }
        }
        else 
        {
            $havePermission = true;
        }

        if ( $havePermission )
        {
            try 
            {
                if ( strlen($filter->contractId) == 0 || strlen($filter->emissionDate) == 0 )
                {
                    $this->addError(_M('Informe o código do contrato', $module));
                }
                else
                {                    
                    //verificar se é um aluno ouvinte(daí deve aparecer um erro)
                    $businessContract = new BusinessAcademicBusContract();
                    $contract         = $businessContract->getContract($filter->contractId);
                    
                    $busStateContract = new BusinessAcademicBusStateContract();
                    $stateContractId = $busStateContract->getCurrentStateContractId($filter->contractId);
                    
                    if ( $stateContractId == SAGU::getParameter('ACADEMIC', 'STATE_CONTRACT_ID_PRE_ENROLL') )
                    {
                        throw new Exception(_M('Aluno não confirmou sua matrícula', $module) . '!');
                    }
        
                    if ( $contract->isListener == DB_TRUE )
                    {
                        $this->AddError(_M('Este é um aluno ouvinte', $module) . '!');
                    }
                    else
                    {
                        //obter periodo letivo
                        $businessLearningPeriod = new BusinessAcademicBusLearningPeriod();
                        $filters->courseId = $contract->courseId;
                        $filters->courseVersion = $contract->courseVersion;
                        $filters->turnId = $contract->turnId;
                        $filters->unitId = $contract->unitId;
                        $filters->periodId = $filter->periodId;

                        $learningPeriod = $businessLearningPeriod->searchLearningPeriod($filters);

                        //pega dados do contrato
                        $businessClassPupil = new BusinessAcademicBusClassPupil();
                        $businessClass      = new BusinessAcademicBusClass();
                        
                        $contractClass = $businessClassPupil->getContractCurrentClass($contract->contractId);

                        if (strlen($contractClass->classId) > 0)
                        {
                            $classPeriod = $businessClass->getSemesterContract($contract->contractId);
                        }
                        
                        //pega os dados da instituicao
                        $businessCompany = new BusinessBasicBusCompany();
                        $company         = $businessCompany->getCompany(SAGU::getParameter('BASIC', 'DEFAULT_COMPANY_CONF'));
        
                        $businessLegalPerson = new BusinessBasicBusLegalPerson();
                        $legalPerson         = $businessLegalPerson->getLegalPerson($company->personId);
        
                        $businessCity = new BusinessBasicBusCity();
                        $city         = $businessCity->getCity($legalPerson->cityId);
        
                        //pega os dados do aluno
                        $businessPhysicalPerson = new BusinessBasicBusPhysicalPerson();
                        $physicalPerson         = $businessPhysicalPerson->getPhysicalPerson($filter->personId);

                        $businessDocument = new BusinessBasicBusDocument();
                        $personRG = $businessDocument->getDocument( $physicalPerson->personId, SAGU::getParameter('BASIC', 'DEFAULT_DOCUMENT_TYPE_ID_RG'));

                        //pega a sequencia de atestados
                        $filter->certifiedTypeId = SAGU::getParameter('ACADEMIC', 'CERTIFIED_LINK');
        
                        $businessCertified = new BusinessAcademicBusCertified();
                        $certifiedNumber   = $businessCertified->getSequence($filter);
        
                        $MIOLO->uses('/core/AgataAPI.class');
        
                        $api = new AgataAPI;
        
        
                        $api->setParameter('$certifiedNumber', $certifiedNumber);
                        if ( $filter->certifiedType == 'G' )
                        {
                            $api->setParameter('$departament', $filter->sectorDocument);
                        }
                        elseif ( $filter->certifiedType == 'T' )
                        {
                            $api->setParameter('$departament', $filter->sectorDocument);
                        }
                        $api->setParameter('$companyTypeDescription', $company->companyTypeDescription);
                        $api->setParameter('$institution', $legalPerson->name);
                        $api->setParameter('$personId', $physicalPerson->personId);
                        $api->setParameter('$name', $physicalPerson->name);
                        $api->setParameter('$companyName', $company->companyTypeDescription . ' ' . $legalPerson->fakeName);
                        $api->setParameter('$courseName', $contract->courseName);
                        $api->setParameter('$periodId', $filter->periodId);
                        $api->setParameter('$cityName', SAGU::getCapitulatetString($city->name));
                        $api->setParameter('$stateId', $city->stateId);
                        $api->setParameter('$stampName', SAGU::getCapitulatetString($filter->stampName));
                        $api->setParameter('$functionDescription', SAGU::getCapitulatetString($filter->functionDescription));
                        $api->setParameter('$sector', SAGU::getCapitulatetString($filter->sector));
                        $api->setParameter('$emissionDate', SAGU::getDateByExtense($filter->emissionDate));

                        $api->setParameter('$rg', $personRG->content);
                        $api->setParameter('$classPeriod', $classPeriod);

                        $businessTurn = new BusinessBasicBusTurn();
                        $turn = $businessTurn->getTurn($contract->turnId);

                        $api->setParameter('$turnDescription', $turn->description);
        
                        $api->setLanguage($MIOLO->getConf('i18n.language'));
                        $api->setOutputPath(SAGU::getParameter('BASIC', 'TEMP_DIR') . '/certified.sxw');
                        $api->setDataArray($null);
        
                        $businessEnroll = new BusinessAcademicBusEnroll();
                        $data           = $businessEnroll->getContractHistory($filter->contractId);

                        if ($businessEnroll->isEnrolledInPeriod($contract->contractId, $filter->periodId))
                        {
                            $api->setParameter('$situation', _M('devidamente matriculado', $module));
                        }
                        else
                        {
                            $api->setParameter('$situation', _M('apto a matricular-se', $module));
                        }

                        if ( $filter->curricularComponentType == 'N' )
                        {
                           $contractResource = 'linkCertifiedNo.sxw';
                           $array[0][0] = '';
                           $api->setSubDataArray($array);
                        }
                        elseif ( $filter->curricularComponentType == 'Y' ) 
                        {
                            if ( count($data) > 0 )
                            {
                                $contractResource = 'linkCertifiedYes.sxw';
                                $array[0][1] = $data;
                                $api->setSubDataArray($array);
                            }
                            else 
                            {
                                throw new Exception(_M('Este aluno não possui um descritivo de disciplinas cursadas no semestre', $module) . '.');
                            }
                        }
        
                        if ( ! $api->parseOpenOffice($MIOLO->getModulePath('basic', '/documents/') . $contractResource) )
                        {
                            throw new Exception(_M('O seguinte erro foi retornado pelo AGATA: @1.', $module, $api->getError()));
                        }
                        if ( $filter->fileType == 'pdf' )
                        {
                            $api->setOutputPath(SAGU::getParameter('BASIC', 'TEMP_DIR') . '/certified.pdf');
                            if ( ! $api->openOffice2pdf(SAGU::getParameter('BASIC', 'TEMP_DIR') . '/certified.sxw') )
                            {
                                throw new Exception(_M('O seguinte erro foi retornado pelo AGATA: @1.', $module, $api->getError()));
                            }
                        }
        
                        //insere a sequencia nos atestados
                        if ( ! $businessCertified->insertCertified($filter) )
                        {
                            throw new Exception(_M('Não foi possível gravar o registro do certificado') . ' !');
                        }
    
                        $api->fileDialog();
                    }
                }
            }
            catch (Exception $e)
            {
                $this->addError($e->getMessage());
            }
        }
    }
    
    /**
     * Method to gather all information from the form fields
     * and put them on a database compatible object
     **/
    public function getTypesData()
    {
        // get filters values
        $data->contractId              = $this->getFormValue('contractId');
        $data->personId                = $this->getFormValue('personId');
        $data->courseId                = $this->getFormValue('courseId');
        $data->courseVersion           = $this->getFormValue('courseVersion');
        $data->fileType                = $this->getFormValue('radFileType');
        $data->certifiedType           = $this->getFormValue('radOption');
        $data->curricularComponentType = $this->getFormValue('radOption2');
        $data->stampName               = $this->getFormValue('employeeName');
        $data->functionDescription     = $this->getFormValue('functionDescription');
        $data->sectorId                = $this->getFormValue('sectorId');
        $data->sectorDocument          = $this->getFormValue('sectorName');
        $data->emissionDate            = $this->getFormValue('emissionDate');
        $data->dateIssue               = $this->getFormValue('emissionDate');
        $data->ignoreDebits            = $this->getFormValue('ignoreDebits');
        $data->periodId                = SAGU::getParameter('BASIC', 'CURRENT_PERIOD_ID');
        
        return $data;
    }
}

