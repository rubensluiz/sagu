class FrmAcademicCalendarSearch extends SSearchForm
{

    /**
     * Class constructor
     */
    public function __construct()
    {
        $module = SAGU::getFileModule(__FILE__);
        parent::__construct(_M('Localizar', 'basic'), new AcdAcademicCalendar(), array('calendarYear'), 'BusAcademicCalendar', $module);
    }

    /**
     *  Default method to define fields
     */
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);
        
        //Field calendar year
        $calendarYearS = new MIntegerField('calendarYearS', $this->getFormValue('calendarYearS', $data->calendarYearS), _M('Ano', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'), 'Ex: 2010');
        $calendarYearS->setJsHint(_M('Informe o ano', $module));
        $fields[] = $calendarYearS;
        
        //Field description
        $descriptionS = new MTextField('descriptionS', $this->descriptionS->value, _M('Descrição', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $descriptionS->setJsHint(_M('Informe a descrição', $module));
        $fields[] = $descriptionS;
        
        parent::defineFields($fields, $module, 'GrdAcademicCalendarSearch');
    }
}

