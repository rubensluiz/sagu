class FrmTransferenciaDeTurmaBusca extends SSearchForm
{
    
    public $campoBuscaGenerica = true;
    
    public function __construct()
    {
        parent::__construct(null, new AcpTransferenciaDeTurma(), array('transferenciadeturmaid'));
    }
    
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        
        $fields[] = new MDiv('divLimbo');
        
        parent::defineFields($fields, $module, 'GrdTransferenciaDeTurmaBusca');
    }
    
    public function popupVizualisar($args)
    {
        $MIOLO = MIOLO::getInstance();
        $module = $MIOLO->getCurrentModule();
        
        $fields= array();
        
        $dataOrigem = AcpTransferenciaDeTurmaDisciplinas::obtemDisciplinasTransferidas($args->transferenciadeturmaid, AcpTransferenciaDeTurmaDisciplinas::DISC_ORIGEM);
                
        $grdOrigem = $MIOLO->getUI()->getGrid($module, 'GrdComponentesTransferenciaDeTurma');
        $grdOrigem->setData($dataOrigem);
        $grdOrigem->setTitle(_M('Disicplinas de origem'));
        
        $dataDestino = AcpTransferenciaDeTurmaDisciplinas::obtemDisciplinasTransferidas($args->transferenciadeturmaid, AcpTransferenciaDeTurmaDisciplinas::DISC_DESTINO);
        
        $grdDestino = $MIOLO->getUI()->getGrid($module, 'GrdComponentesTransferenciaDeTurma');
        $grdDestino->setData($dataDestino);
        $grdDestino->setTitle(_M('Disciplinas de destino'));
        
        $fields[] = new MDiv('divGridOrigem', $grdOrigem);
        $fields[] = new MDiv('divGridDestino', $grdDestino);
        
        MPopup::show('popupVizualisar', $fields, "Visualizar disciplina transferidas");
    
    }
}