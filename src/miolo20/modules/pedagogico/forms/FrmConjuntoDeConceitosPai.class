class FrmConjuntoDeConceitosPai extends sLinkedForm
{
    public function __construct($object, $pkey, $business = null, $title = null, $linkedForm = null)
    {
        parent::__construct($object, $pkey, $business, $title, $linkedForm);
        $this->toolbar->disableButton(MToolBar::BUTTON_NEW);
        SMainMenu::setOverrideMenuNav('main:config:conjuntodeconceitos');
    }
    
    public function getLinkedDefs()
    {        
        $defs = $this->newDef()
                ->setChave('conjuntodeconceitosid')
                ->addForm( $this->newFormDef()->setLabel('Dados do conjunto')->setModule('pedagogico')->setAction('main:config:conjuntodeconceitos')->setTipo(self::TIPO_UM_PARA_UM) )
                ->addForm( $this->newFormDef()->setLabel('Conceitos de avaliação')->setModule('pedagogico')->setAction('main:config:conceitosdeavaliacao')->setTipo(self::TIPO_UM_PARA_MUITOS)->setGridModule('pedagogico')->setGridName('GrdConceitosDeAvaliacao'));
        
        return $defs;
    }
}
