class FrmAtoRegulatorio extends sLinkedForm
{
    public function __construct()
    {
        parent::__construct(new AcpAtoRegulatorio(), array('atoregulatorioid'));
    }
    
    public function defineFields()
    {
        $module = MIOLO::getCurrentModule();

        $fields[] = new sMultiLineField('documento', array('label' => _M('Documento', $module)));
        $fields[] = new MCalendarField('datadocumento', NULL, _M('Data do documento', $module));
        $fields[] = new MCalendarField('datainicial', NULL, _M('Data inicial', $module));
        $fields[] = new MCalendarField('datafinal', NULL, _M('Data final', $module));

        $validators[] = new MRequiredValidator('documento', _M('Documento', $module));
        $validators[] = new MRequiredValidator('datainicial', _M('Data inicial', $module));
        
        parent::defineFields($fields, $validators);
    }
    
    public function getLinkedDefs()
    {
        if ( !$this->defs )
        {
            $defs = $this->newDef()
                ->setChave('ocorrenciacursoid')
                ->addForm( $this->newFormDef()->setLabel('Atos regulatórios')->setModule('pedagogico')->setAction('main:register:atoregulatorio')->setTipo(self::TIPO_UM_PARA_MUITOS)->setGridModule('pedagogico')->setGridName('GrdAtoRegulatorio') )
            ;

            $this->defs = $defs;
        }
        
        return $this->defs;
    }
    
    public function obterURLBuscaInicial()
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);
        
        $args = array();
        $args['cursoid'] = MIOLO::_REQUEST('cursoid');
        $args['function'] = SForm::FUNCTION_INSERT;
        
        return $MIOLO->GetActionURL('pedagogico', 'main:register:ocorrencias', null, $args);
    }
}
