class FrmConjuntoDeConceitos extends FrmConjuntoDeConceitosPai
{
    public function __construct()
    {
        parent::__construct(new AcpConjuntoDeConceitos(), array('conjuntodeconceitosid'));
    }
    
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();

        $fields[] = new MTextField('descricao', NULL, _M('Descricao', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        
        $validators[] = new MRequiredValidator('descricao', _M('Descrição', $module));

        parent::defineFields($fields, $validators);        
    }
}
