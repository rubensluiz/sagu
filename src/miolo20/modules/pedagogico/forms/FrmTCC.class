class FrmTCC extends FrmTCCPai
{
    public function __construct()
    {
        parent::__construct(new AcpTcc(), array('tccid'));
    }
    
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();

        $fields[] = new SHiddenField('ofertacomponentecurricularid');
        $fields[] = new SHiddenField('matriculaid');
        $fields[] = new sMultilineField('tema', array('label' => _M('Tema')));
        $fields[] = new MCalendarField('dataentregatrabalho', null, _M('Data de entrega'));
        $fields[] = new MCalendarField('databanca', null, _M('Data da banca'));
        $fields[] = new MCalendarField('datadivulgacaoresultado', null, _M('Data de divulgação'));
        $fields[] = new MIntegerField('nota', $this->getFormValue('nota', null), _M('Nota', $module));


        parent::defineFields($fields, $validators);
    }
    
    public function beforeSave(AcpTcc $tcc)
    {
        $matriculaid = MIOLO::_REQUEST('matriculaid');
        
        if ( strlen($matriculaid) > 0 )
        {
            $matricula = new AcpMatricula($matriculaid);
            $tcc->ofertacomponentecurricularid = $matricula->ofertacomponentecurricularid;
        }
        
        $tcc->dataentregatrabalho = SAGU::NVL($this->getRequestValue('dataentregatrabalho'), SType::NULL_VALUE);
        $tcc->datadivulgacaoresultado = SAGU::NVL($this->getRequestValue('datadivulgacaoresultado'), SType::NULL_VALUE);
        $tcc->databanca = SAGU::NVL($this->getRequestValue('databanca'), SType::NULL_VALUE);
        $tcc->tema = SAGU::NVL($this->getFormValue('tema'), SType::NULL_VALUE);
        $tcc->nota = SAGU::NVL($this->getFormValue('nota'), SType::NULL_VALUE);
        
        return $tcc;
    }
}
