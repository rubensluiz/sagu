<?php

class FrmTurmasEncerradas extends SForm
{
    
    public function __construct($title, $object, $pkey)
    {
        parent::__construct(_M('Turmas encerradas'));
    }


    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        
        $MIOLO->uses('types/AcpTurmasEncerradas.class', $module);
        $MIOLO->uses('grids/GrdTurmasEncerradas.class', $module);
        
        $acpTurmasEncerradas = new AcpTurmasEncerradas();
        
        parent::defineFields(array(
            'toolbar' => false
        ));
        
        $data = $acpTurmasEncerradas->searchGrid(MIOLO::_REQUEST('ofertacursoid'));
        
        $fields[] = $grid = new GrdTurmasEncerradas();
        $grid->setData($data);
        
        $image = 'images/button_finalize.png';
        $btn = new MButton('btnSaveAndFinish', _M('Fechar'), $MIOLO->GetActionURL($module, 'main:process:ofertacurso'), $image);

        $fields[] = new MSeparator();
        $fields[] = new MDiv(null, array($btn), null, 'align="center"');
        
        $this->SetFields($fields);
    }
    
    
}

?>
