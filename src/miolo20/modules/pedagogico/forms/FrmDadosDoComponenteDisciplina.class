class FrmDadosDoComponenteDisciplina extends FrmComponenteCurricularPai
{
    public function __construct()
    {

        $this->setLimparCamposVazios(true);
        parent::__construct(new AcpComponenteCurricular(), array('componentecurricularid'));
    }
    
    public function defineFields()
    {
        $module = MIOLO::getCurrentModule();
        
        $chFields[] = new MIntegerField('componentedisciplina.cargahorariapresencial', NULL, _M('Em sala de aula', $module), 10, 'horas');
        $chFields[] = new MIntegerField('componentedisciplina.cargahorariaextraclasse', NULL, _M('Atividade práticas extra-classe / EAD', $module), 10, 'horas');
        //$chFields[] = new MIntegerField('componentedisciplina.cargahorariaead', NULL, _M('À distância', $module), 10, 'horas');
        $fields[] = new sBaseGroup('bsgCargasHorarias', _M('Cargas horárias', $module), $chFields);

        /*
        $credFields[] = new MIntegerField('componentedisciplina.creditos', NULL, _M('Créditos', $module));
        $credFields[] = new MIntegerField('componentedisciplina.creditosfinanceiros', NULL, _M('Créditos financeiros', $module));
        $credFields[] = new MIntegerField('componentedisciplina.creditosacademicos', NULL, _M('Créditos acadêmicos', $module));
        $fields[] = new sBaseGroup('bsgCargasHorarias', _M('Créditos', $module), $credFields);
        */
        parent::defineFields($fields);
    }
    
    public function beforeSave(AcpComponenteCurricular $type)
    {
        if ( $type->hasAssociation('componentedisciplina') )
        {
            $type->getAssociation('componentedisciplina')->setSaveRelateds(true);
        }
        
        return $type;
    }
}
