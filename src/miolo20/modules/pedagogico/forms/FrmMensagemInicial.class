class FrmMensagemInicial extends FrmInscricaoExterna
{
    public function __construct()
    {
        parent::__construct(new AcpOfertaCurso(), array('ofertacursoid'));
    }
    
    
    public function defineFields()
    {
        $ofertacursoid = MIOLO::_REQUEST('ofertacursoid');        
        $personid = MIOLO::_REQUEST('personid');
        
        $mensagensDoPerfilDeCurso = new mensagensDoPerfilDeCurso();        
        $controls[] = new MLabel($mensagensDoPerfilDeCurso->obterMensagemInicial($ofertacursoid, $personid));
        $fields[] = new MBaseGroup('bsgInformacoes', _M('Informações:'), $controls);
        
        if ( $this->getExibirPassos() )
        {
            $fields = array_merge(array($this->obterOpcoesNavegacao()), $fields);
        }
        
        $image = 'images/button_next.png';
        $btn = new MButton('btnSaveAndGo', _M('Continuar', $module), null, $image);

        $fields[] = new MSeparator();
        $fields[] = new MDiv(null, array($btn), null, 'align="center"');
        
        SManagementForm::defineFields($fields, $validators, $data);
    }
}
?>
