class FrmDocumentos extends FrmPerfilDeCursoPai
{
    public function __construct()
    {
        $this->setLimparCamposVazios(true);
        
        parent::__construct(new AcpDocumentoPerfilCurso(), array('documentoperfilcursoid'));
    }
    
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();

        $doc = $this->getTypeObjectPopulated();
        $doc instanceof AcpDocumentoPerfilCurso;
        
        // Help
        $urlReports = $MIOLO->GetActionURL('basic', 'main:config:managerReport');
        $link = new MLink('lnkReports', _M('neste link'), $urlReports);
        $fields[] = $this->genericFields()->labelDica(_M('Para gerenciar os relatórios, clique @1, selecionando o módulo <b>Pedagógico</b> na hora de fazer upload.', null, $link->generate()));
        
        $fields[] = new SHiddenField('documentoperfilcursoid');
        
        // Relatorio
        $report = new SReport();
        $reports = $report->listAllReports(SReport::TYPE_ALL, array('pedagogico'));
        $list = array();
        
        foreach ( $reports as $key => $report )
        {
            $list[basename($key)] = $report['title'];
        }
        
        $fields[] = new MSelection('documento', NULL, _M('Relatório'), $list);
        $validators[] = new MRequiredValidator('documento', _M('Relatório'));
        
        // Tipo
        $tipoDoc = new AcpTiposDocumentosPerfilCurso();
        $fields[] = new MSelection('tiposdocumentosperfilcursoid', NULL, _M('Tipo documento'), $tipoDoc->findList());
        $validators[] = new MRequiredValidator('tiposdocumentosperfilcursoid', _M('Tipo documento'));
        
        if( $this->getFormValue('consultasdiversas', $doc->consultasdiversas) == DB_TRUE  )
        {
            $checkeds[] = 'consultasdiversas';
        }
        if( $this->getFormValue('portaldoaluno', $doc->portaldoaluno) == DB_TRUE )
        {
            $checkeds[] = 'portaldoaluno';
        }
        
        $fields[] = $disponivelEm = new sMultiCheckbox('disponivelEm', _M('Disponível em:'), array('consultasdiversas' => 'Consultas diversas', 'portaldoaluno' => 'Portal do aluno'));
        $disponivelEm->setCheckeds($checkeds);
        
        parent::defineFields($fields, $validators);
    }
    
    public function beforeSave(AcpDocumentoPerfilCurso $doc)
    {
        $doc->consultasdiversas = $this->getRequestValue('disponivelEm_consultasdiversas') == DB_TRUE ? DB_TRUE : DB_FALSE;
        $doc->portaldoaluno = $this->getRequestValue('disponivelEm_portaldoaluno') == DB_TRUE ? DB_TRUE : DB_FALSE;
        $doc->documento = basename($this->getRequestValue('documento'));
        
        // Pegar descricao direto do proprio relatorio
        $report = new SReport();
        $reports = $report->listAllReports(SReport::TYPE_ALL, array('pedagogico'));
        
        foreach ( $reports as $report )
        {
            if ( MIOLO::_REQUEST('documento') == $report['filename'])
            {
                $doc->descricao = $report['title'];
            }
        }
        
        return $doc;
    }
}
