class FrmTCCPai extends sLinkedForm
{
    public function __construct($object, $pkey, $business = null, $title = null, $linkedForm = null)
    {
        parent::__construct($object, $pkey, $business, $title, $linkedForm);
        
        $this->toolbar->disableButton(MToolBar::BUTTON_NEW);
        $this->toolbar->disableButton(MToolBar::BUTTON_SEARCH);
        $this->toolbar->setButtonUrl('tbBtnClose', $this->obterURLBuscaInicial());
    }
    
    public function getLinkedDefs()
    {
        if ( !$this->defs )
        {
            $defs = $this->newDef();
            $defs->setChave('tccid');
            $defs->addForm( $this->newFormDef()->setLabel('Dados do TCC')->setModule('pedagogico')->setAction('main:process:tcc')->setTipo(self::TIPO_UM_PARA_UM) );
            $defs->addForm( $this->newFormDef()->setLabel('Orientadores')->setModule('pedagogico')->setAction('main:process:tccorientador')->setTipo(self::TIPO_UM_PARA_MUITOS)->setGridModule('pedagogico')->setGridName('GrdTCCOrientador') );
            $defs->addForm( $this->newFormDef()->setLabel('Banca')->setModule('pedagogico')->setAction('main:process:tccbanca')->setTipo(self::TIPO_UM_PARA_MUITOS)->setGridModule('pedagogico')->setGridName('GrdTCCBanca') );

            $this->defs = $defs;
        }
        
        return $this->defs;
    }
    
    public function obterURLBuscaInicial()
    {
        $MIOLO = MIOLO::getInstance();
        
        // voltar para a consulta diversa do pedagogico
        $tccid = MIOLO::_REQUEST('tccid');
        
        if ( strlen($tccid) > 0 )
        {
            $personId = AcpTcc::obterPersonId($tccid);
            
            if ( strlen($personId) > 0 )
            {
                return $MIOLO->GetActionURL('pedagogico', 'main:diverseConsultation', null, array('personId' => $personId));
            }
        }
        
        return parent::obterURLBuscaInicial();
    }
}
