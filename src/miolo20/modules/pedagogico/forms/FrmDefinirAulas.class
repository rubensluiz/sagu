    public function carregaTiposDocentes($args)
    {
        $docenteid = $args->docenteid;
        $MIOLO = MIOLO::getInstance();


        $ofertacomponentecurricularid = MIOLO::_REQUEST('ofertacomponentecurricularid');
        $ofertacomponentecurricular = new AcpOfertaComponenteCurricular($ofertacomponentecurricularid);
        $cursoid = $ofertacomponentecurricular->ofertaturma->ofertacurso->ocorrenciacurso->cursoid;

        $cursoDocente = new AcpCursoDocente();
        $tiposDisponiveis = $cursoDocente->retornaTiposDisponiveisProDocenteNoCurso($cursoid, $docenteid);

        $jsCode = " 
            document.getElementById(\"tipodedocenteid\").options.length = 0;
                    
            var tipos = " . json_encode($tiposDisponiveis) . "; 
            console.log(tipos);
                                                        
            var sel = document.getElementById('tipodedocenteid');
            
            var opt = document.createElement('option');
            opt.innerHTML = '-- selecione um tipo de docente --';
            opt.value = '';
            sel.appendChild(opt);
            
            for(key in tipos) {
              
                var opt = document.createElement('option');
                opt.innerHTML = tipos[key];
                opt.value = key;
                
                sel.appendChild(opt);
            }
        ";

        $MIOLO->page->addAJAXJsCode($jsCode);

        return '';


    }
    
