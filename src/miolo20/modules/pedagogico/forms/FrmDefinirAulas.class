            } else {

                $ofertacomponentecurricularid = $_REQUEST['ofertacomponentecurricularid'];
                $goto = $MIOLO->GetActionURL($module, MIOLO::getCurrentAction(), null, array('ofertacomponentecurricularid' => $ofertacomponentecurricularid));
                $this->messageInfo(_M('Selecione um ou mais horários'), $goto);
            }

        } catch (Exception $e)
        {
            $MIOLO->error($e->getMessage());
        }
    }

    /**
