    public function btnRemoveEncontrosEmLote_click()
    {
        $selecionados = array();

        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();

        try
        {

            if (count($_REQUEST['selectGrdX']) > 0) {
                $ofertacomponentecurricularid = null;
                foreach ($_REQUEST['selectGrdX'] as $ocorrenciahorarioofertaid) {
                    $ocorrenciahorariooferta = new AcpOcorrenciaHorarioOferta($ocorrenciahorarioofertaid);
                    $ofertacomponentecurricularid = $ocorrenciahorariooferta->ofertacomponentecurricularid;

                    // removendo os facilitadores de uma determinada ocorrencia de horario oferta
                    $facilitador = new AcpOcorrenciaHorarioOfertaFacilitadores();
                    $facilitador->removerFacilitadores($ocorrenciahorarioofertaid);

                    $ok = true;

                    if ( $ocorrenciahorariooferta->possuifrequencia == DB_TRUE )
                    {
                        $ocorrenciahorariooferta->removerFrequencias($ocorrenciahorarioofertaid);
                    }

                    $ok &= $ocorrenciahorariooferta->delete();

                }
                $goto = $MIOLO->GetActionURL($module, MIOLO::getCurrentAction(), null, array('ofertacomponentecurricularid' => $ofertacomponentecurricularid));
