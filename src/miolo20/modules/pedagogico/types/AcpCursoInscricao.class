class AcpCursoInscricao extends SType
{
    protected $_utilizaNovoPadrao = true;
    
    protected $_associations = array(        
        'ofertacurso' => array(
            'mode' => 'one',
            'typeClass' => 'AcpOfertaCurso',
            'joinColumnLeft' => 'ofertacursoid',
            'joinColumnRight' => 'ofertacursoid',
        )
    );
    
    /**
     * @var AcpOfertaCurso
     */
    public $ofertacurso;
    
    public $cursoinscricaoid;
    public $personid;
    public $ofertacursoid;
    public $situacao;
    public $aprovadotodasdisciplinas;
    public $datafechamento;
    public $dataformatura;
    public $dataemissaodocumentoconclusao;
    public $faltas;
    public $cargahorariaoferecida;
    public $cargahorariacursada;
    public $cargahorariafrequente;
    
    public function __construct($id = null, $disableAssociations = false)
    {        
        if ( $disableAssociations )
        {
            $this->_associations = array();
        }
        
        parent::__construct($id);
    }
    
    public function buscar()
    {
        $sql = new MSQL('acpcursoinscricao.*', 'acpcursoinscricao');
        
        if ( strlen($this->personid) > 0 )
        {
            $sql->setWhere('personid = ?');
            $sql->addParameter($this->personid);
        }
        
        $sql->setWhere('acpcursoinscricao.cursoid IS NOT NULL');
        
        $sql->addLeftJoin('acpCurso', 'acpCurso.cursoid = acpcursoinscricao.cursoid');
        $sql->orderby = 'acpCurso.name';
        return SDatabase::queryAssociative($sql);
    }
    
    public function obterAvaliacoesDoCurso($cursoinscricaoid)
    {
        $sql = new MSQL();
        
        $sql->setTables('acpcursoinscricaoavaliacao A
            LEFT JOIN acpmodelodeavaliacao M ON (A.modelodeavaliacaoid = M.modelodeavaliacaoid)
            LEFT JOIN acptipocomponentecurricular T ON (A.tipocomponentecurricularid = T.tipocomponentecurricularid)');
        
        $sql->setColumns('A.modelodeavaliacaoid, M.descricao AS modelo, A.tipocomponentecurricularid, T.descricao AS tipo, COALESCE(A.nota::varchar, A.conceito) AS nota_conceito');
        
        $sql->setWhere('cursoinscricaoid = ?');
        $sql->addParameter($cursoinscricaoid);
        
        return SDatabase::query($sql->select());
    }
    
    public function salvarAvaliacao($cursoinscricaoid, $modeloid, $componenteid, $nota)
    {
        $sql = ' UPDATE acpcursoinscricaoavaliacao SET ';
        
        if ( is_numeric($nota) )
        {
            $sql .= " nota = '{$nota}' ";
        }
        else
        {
            $sql .= " conceito = '{$nota}' ";
        }
        
        $sql .= " WHERE cursoinscricaoid = '{$cursoinscricaoid}' 
                    AND modelodeavaliacaoid = '{$modeloid}' 
                    AND tipocomponentecurricularid = '{$componenteid}' ";
                    
        return SDatabase::getInstance()->execute($sql);
    }
    
}
