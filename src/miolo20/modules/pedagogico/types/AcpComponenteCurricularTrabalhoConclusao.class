class AcpComponenteCurricularTrabalhoConclusao extends SType
{
    protected $_utilizaNovoPadrao = true;
    
    public function getTableAlias()
    {
        return 'componentetcc';
    }
    
    /**
     * Código do componente curricular disciplina
     * @var int
     */
    public $componentecurriculartrabalhoconclusaoid;
    
    /**
     * Código do componente curricular
     * @var int
     */
    public $componentecurricularid;
    
    /**
     * Carga horária
     * @var int
     */
    public $cargahoraria;
    
    /**
     * Créditos financeiros
     * @var int
     */
    public $creditosfinanceiros;
    
    /**
     * Créditos acadêmicos
     * @var int
     */
    public $creditosacademicos;
    
    /**
     * Créditos
     * @var int
     */
    public $creditos;
    
    
    public static function obterComponenteCurricularTccDoComponente($componenteCurricularId)
    {
        $componenteCurricularTcc = new AcpComponenteCurricularTrabalhoConclusao();
        $msql = $componenteCurricularTcc->msql();
        $msql->setColumns('componentecurriculartrabalhoconclusaoid');
        $msql->addEqualCondition('componentecurricularid', $componenteCurricularId);
        $searchComponentesCurricularesTcc = $componenteCurricularTcc->findList($msql);                

        if( count($searchComponentesCurricularesTcc) > 0 )
        {
            foreach($searchComponentesCurricularesTcc as $cod=>$linha)
            {
                $return[] = new AcpComponenteCurricularTrabalhoConclusao($cod);
            }
        }

        return $return;
    }
}
