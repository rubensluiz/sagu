class AcpConceitosDeAvaliacao extends SType
{
    //Define que utiliza novo padrão
    protected $_utilizaNovoPadrao = true;
    
    protected $_defaultOrder = 'resultado';
    
    public $conceitoDeAvaliacaoId;
    
    public $conjuntoDeConceitosId;
    
    public $descricao;
    
    public $detalhes;
    
    public $resultado;
    
    public $aprova;
    
    public $ima;
    
    public static function obterConceitosDoConjunto($conjuntodeconceitosid)
    {
        $conceitosdeavaliacao = new AcpConceitosDeAvaliacao();
        $sql = $conceitosdeavaliacao->msql();
        $sql->setColumns('conceitodeavaliacaoid');
        $sql->addEqualCondition('conjuntodeconceitosid', $conjuntodeconceitosid);
        $searchConceitos = $conceitosdeavaliacao->findList($sql);
        if( count($searchConceitos) > 0 )
        {
            foreach( $searchConceitos as $cod=>$linha )
            {
                $return[] = new AcpConceitosDeAvaliacao($cod);
            }
        }
        return $return;
    }
    
    public static function listarConceitosDoConjunto($conjuntodeconceitosid)
    {
        foreach( self::obterConceitosDoConjunto($conjuntodeconceitosid) as $cod=>$conceito)
        {
            $data[$conceito->conceitoDeAvaliacaoId] = $conceito->resultado.' - '.$conceito->descricao;
        }
        return $data;
    }
}
