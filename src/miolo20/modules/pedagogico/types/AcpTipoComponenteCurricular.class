class AcpTipoComponenteCurricular extends SType
{
    protected $_defaultOrder = 'AcpTipoComponenteCurricular.descricao';
    
    protected $_utilizaNovoPadrao = true;
    
    /**
     * Tipos de componente curricular
     */
    const TIPO_DISCIPLINA = 'D';
    const TIPO_TCC = 'T';
    const TIPO_EAD = 'E';
    
    /**
     * @var integer
     */
    public $tipocomponentecurricularid;

    /**
     * @var string
     */
    public $descricao;
    
    /**
     * @var string
     */
    public $habilitado;
    
    /**
     * @var string
     */
    public $tipo;
    
    /**
     * @var string
     */
    public $permitemodelodeavaliacao;
    
    public function __construct($id = null)
    {
        parent::__construct($id);
    }
    
    /**
     * Lista todos os tipos de componentes curriculares habilitados
     * @return array
     */
    public static function listarTiposDeComponentesCurriculares()
    {
        $tipo = new AcpTipoComponenteCurricular();
        return $tipo->findList( $tipo->msql()->setColumns(array('tipocomponentecurricularid', 'descricao'))->setWhere('habilitado = ?', array(DB_TRUE)) );
    }
    
    public static function listarTipos()
    {
        $module = MIOLO::getCurrentModule();
        
        return array( self::TIPO_DISCIPLINA => _M('Disciplina', $module),
                      self::TIPO_TCC=> _M('Trabalho de conclusão', $module),
                      self::TIPO_EAD=> _M('EAD', $module));
    }
}
