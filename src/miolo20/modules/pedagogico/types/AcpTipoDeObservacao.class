class AcpTipoDeObservacao extends SType
{
    protected $_utilizaNovoPadrao = true;
    
    protected $_defaultOrder = 'AcpTipoDeObservacao.descricao';
    
    /**
     * Código do tipo de observação
     * @var integer
     */
    public $tipodeobservacaoid;
    
    /**
     * Descrição do tipo de observação
     * @var text
     */
    public $descricao;
    
    public static function listarTiposDeObservacao()
    {
        $type = new AcpTipoDeObservacao();
        
        foreach( $type->findManyAsArray() as $cod=>$tipo )
        {
            $return[$tipo['acptipodeobservacao.tipodeobservacaoid']] = $tipo['acptipodeobservacao.descricao'];
        }
        
        return $return;
    }
}
