class PrcCondicaoDePagamento extends SType
{
    protected $_utilizaMultiUnidade = true;
    
    protected $_utilizaNovoPadrao = true;
        
    protected $_defaultOrder = 'numerodeparcelas';
    
    public $condicaodepagamentoid;
    public $descricao;
    public $exigeentrada;
    public $numerodeparcelas;
    
    public static function listarCondicoesDePagamento()
    {
        $type = new PrcCondicaoDePagamento();
        $sql = $type->msql();
        return $type->findList($sql);
    }
    
    public function getChoiceComponentSQL($argument = null, $id = null)
    {        
        $sql = parent::getChoiceComponentSQL($argument, $id);

        $args = $this->getAjaxArgs();

        if(strlen($args->exigeentrada)>0)
        {
            $sql->addEqualCondition('PrcCondicaoDePagamento.exigeentrada ', $args->exigeentrada);
        }
        if(strlen($args->numerodeparcelas)>0)
        {
            $sql->addEqualCondition('PrcCondicaoDePagamento.numerodeparcelas ', $args->numerodeparcelas);
        }

        return $sql;
    }
}
