class GrdTransferenciaDeTurmaBusca extends SGrid
{
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        
        $columns = array(
            'acptransferenciadeturma.transferenciadeturmaid' => new MGridColumn(_M('Código', $module), 'left', true, NULL, true, NULL, true),
            'datetimeformatado' => new MGridColumn(_M('Data/Hora', $module), 'center', true, NULL, true, NULL, true),
            'aluno' => new MGridColumn(_M('Aluno', $module), 'left', true, NULL, true, NULL, true),
            'turmaorigem' => new MGridColumn(_M('Turma de origem'), 'left', true, NULL, true, NULL, true),
            'turmadestino' => new MGridColumn(_M('Turma de destino'), 'left', true, NULL, true, NULL, true),
            'acptransferenciadeturma.aproveitarfrequencias' => new MGridColumn(_M('Aproveitou frequências?', $module), 'left', true, NULL, true, NULL, true),
            'financeiro' => new MGridColumn(_M('Transferiu financeiro?', $module), 'left', true, NULL, true, NULL, true),
            );
        
        $primaryKeys = array('transferenciadeturmaid'=>'%acptransferenciadeturma.transferenciadeturmaid%');
        
        parent::__construct($filters, $columns, __CLASS__, $primaryKeys);
        
        $this->clearActions();
        $this->disableExports();
        $this->disablePagination();
        
        $href = SForm::getAjaxAction('popupVizualisar', 'divLimbo', false, $primaryKeys, false, false);
        $this->addActionIcon(_M('Visualizar'), $MIOLO->getUI()->getImage('academic', 'report-16x16.png'), $href);
    }
}