class GrdSubscriptionTeamAllocation extends SGrid
{
    /**
     * Class constructor
     **/
    public function __construct($data)
    {
        $MIOLO = MIOLO::getInstance();
        $action = MIOLO::getCurrentAction();
        $module = SAGU::getFileModule(__FILE__);

        $columns[] = new MGridColumn(_M('Código', $module), 'right', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Solicitação', $module), 'right', true, null, false, null, true);
        $columns[] = new MGridColumn(_M('Código da pessoa', $module), 'right', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Nome', $module), 'left', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Data solicit.', $module), 'left', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Email', $module), 'left', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Fone', $module), 'left', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Instituição', $module), 'left', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Solicit. feita pela conveniada', $module), 'center', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Semestre', $module), 'center', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Início', $module), 'left', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Fim', $module), 'left', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Equipe', $module), 'left', true, null, true, null, true);
        $columns[] = new MGridColumn('unitAreaId', 'left', true, null, false, null, true);

        $primaryKey = array('subscriptionId' => '%0%');

        parent::__construct($data, $columns, __CLASS__, $primaryKey);

        $this->actions = array();

        $this->addActionSelect();

        //Consultar solicitacao
        $href = $MIOLO->getActionURL($this->module, 'main:process:viewRequest', null, array('requestId' => '%1%'));
        $this->addActionIcon(_M('Consultar solicitação',$module), 'default-16x16.png', $href);

        //Consultar tabela de alocação
        $intervalDates = array('beginDate'=>'%8%', 'endDate'=>'%9%', 'unitAreaId'=>'%11%');
        $href = $MIOLO->getActionURL($this->module, 'main:teamAllocation', null, $intervalDates);
        $this->addActionIcon(_M('Vagas disponíveis',$module), 'default-16x16.png', "javascript:teamAllocation('{$href}')");
        $MIOLO->page->addJsCode("function teamAllocation(url) { window.open (url); }");
        
        //Consultas Diversas
        $href = $MIOLO->getActionURL($module, 'main', null, array('personId' => '%2%','action'=>'btnSearch:click'));
        $this->addActionIcon(_M('Consultas diversas', $module), 'botao_explorar.png', $href);
        
        // Acao editar
        $href = SForm::getAjaxAction('btnAllocateTeams', 'divAllocateTeams', false, array('subscriptionId' => '%0%'), false, false);
        $this->addActionIcon(_M('Editar equipes', $module), 'training-16x16.png', $href);
    }
}
?>
