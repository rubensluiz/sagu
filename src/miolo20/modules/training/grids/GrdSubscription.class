class GrdSubscription extends SGrid
{
    /**
     * Class constructor
     **/
    public function __construct($data)
    {
        $MIOLO = MIOLO::getInstance();
        $action = MIOLO::getCurrentAction();
        $module = SAGU::getFileModule(__FILE__);

        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */
        $columns = array(
            new MGridColumn(_M('Solicitação', $module), 'left', true, null, false, null, true),
            new MGridColumn(_M('unitareaid', $module), 'left', true, null, false, null, true),
            new MGridColumn(_M('Pessoa', $module), 'left', true, null, false, null, true),
            new MGridColumn(_M('Nome', $module), 'left', true, null, true, null, true),
            new MGridColumn(_M('Instituição (ajustada)', $module), 'left', true, null, true, null, true),
            new MGridColumn(_M('Solicit. feita pela conveniada', $module), 'center', true, null, true, null, true),
            new MGridColumn(_M('Semestre (ajustado)', $module), 'center', true, null, true, null, true),
            new MGridColumn(_M('Início (ajustado)', $module), 'center', true, null, true, null, true),
            new MGridColumn(_M('Fim  (ajustado)', $module), 'center', true, null, true, null, true),
            new MGridColumn(_M('Área', $module), 'left', true, null, true, null, true),
            new MGridColumn(_M('Status', $module), 'left', true, null, true, TraSubscription::listStatus(), true),
            new MGridColumn(_M('Data solicitação', $module), 'left', true, null, true, null, true),
            new MGridColumn(_M('E-mail', $module), 'left', true, null, true, null, true),
            new MGridColumn(_M('Fone', $module), 'left', true, null, true, null, true),
        );

        $primaryKey = array('requestId' => '%0%');

        parent::__construct($data, $columns, 'GrdSubscription', $primaryKey);

        $this->actions = array();

        // enable row selection
        $this->addActionSelect();
        
        //Botão de visualização de vagas
        $intervalDates = array('beginDate'=>'%6%', 'endDate'=>'%7%', 'unitAreaId'=>'%1%');
        $href = $MIOLO->getActionURL('training', 'main:teamAllocation', null, $intervalDates);
        $this->addActionIcon(_M('Vagas disponíveis',$module), 'default-16x16.png', "javascript:teamAllocation('{$href}')");
        $MIOLO->page->addJsCode("function teamAllocation(url) { window.open (url); }");

        //Botão de ajuste de solicitação
        $opt['adjustmentRequestEnabled'] = DB_FALSE;
        $opts = array_merge($primaryKey, $opt);
        $href = $MIOLO->getActionURL('training', 'main:process:viewRequest', null, $opts);
        $this->addActionIcon(_M('Visualizar',$module), 'button_edit.png', $href);
        
        //Consultas Diversas
        $href = $MIOLO->getActionURL('training', 'main', null, array('personId' => '%2%','event'=>'btnSearch:click'));
        $this->addActionIcon(_M('Consultas diversas', $module), 'botao_explorar.png', $href);
    }
}

?>
