require_once('../../basic/classes/SUnitTest.class');

class TstArea extends SUnitTest
{
    private static $id;
    
    /**
     * Configure unit test attributes
     */
    protected function setUp()
    {
        parent::setUp();

        // defines table primary keys
        $this->pkeys = array( 'areaId' );

        $this->addType( self::getObj() );
    }
    
    public static function getObj()
    {
        $type = new TraArea();
        $type->description = 'Area';
        
        return $type;
    }
    
    public static function getId()
    {
        if ( strlen(self::$id) <= 0 )
        {
            $obj = self::getObj();
            $obj->save();
            
            self::$id = $obj->areaId;
        }
        
        return self::$id;
    }
}

