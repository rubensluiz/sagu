class TraCourse extends SType
{
    /**
     * Table fields
     */
    /**
     * Identificador único do curso.
     */
    protected $courseId;
    /**
     * Descrição do curso.
     */
    protected $description;
    
    /**
     * Construtor da classe
     *
     * @param (integer) $courseId Chave primária da tabela
     */
    public function __construct($courseId = null)
    {
        if ( !is_null($courseId) )
        {
            $this->courseId = $courseId;
            $this->populate();
        }
    }

    /**
     * Common methods
     */

    /**
     * Detecta se o salvar deve inserir um novo (no caso de chave primária não definida)
     * ou se deve apenas atualizar um registro já existente (no caso de chave primária já definida)
     *
     * @return TRUE no caso de sucesso. Caso contrário, FALSE.
     */
    public function save()
    {
        // se chave primária não está definida, assume que deva ser feito insert
        if ( strlen($this->courseId) <= 0 )
        {
            $retVal = $this->insert();
        }
        // se chave primária definida, assume que deva ser feito update
        else
        {
            $retVal = $this->update();
        }

        return $retVal;
    }

    /**
     * Exclui da base de dados o objeto atual
     *
     * @return TRUE no caso de sucesso. Caso contrário, FALSE.
     */
    public function delete()
    {
        $sql = 'DELETE FROM tra.course
                      WHERE courseId = ?';

        $params = array();
        $params[] = $this->courseId;
        $result = SDatabase::execute($sql, $params);
        
        if ( $result )
        {
            $this->courseId = null;
        }

        return $result;
    }

    /**
     * Duplica o registro atual.
     *
     * @return TRUE no caso de sucesso. Caso contrário, FALSE.
     */
    public function duplicate()
    {
        $course = clone($this);
        $course->courseId = null;

        return $course;
    }

    public static function listRecords($filters = null)
    {
        $params = array();
        $sql = 'SELECT C.courseId,
                       C.description
                  FROM tra.course C
                 WHERE 1=1';

        // Filtra apenas por cursos pertencentes a este convenio
        if ( strlen($filters->agreementId) > 0 )
        {
            $sql .=   ' AND EXISTS(SELECT 1
                                     FROM tra.agreement AG
                               INNER JOIN tra.addendum AD';
            
            if( $filters->onlyOpen == true )
            {
                $sql .= ' ON ( AG.agreementId = AD.agreementId AND ( NOW() BETWEEN AD.beginDate AND AD.endDate ) )';
            }
            else
            {
                $sql .= ' ON AG.agreementId = AD.agreementId';
            }
           
            $sql .= ' INNER JOIN tra.addendumCourse AC
                             ON AC.addendumId = AD.addendumId
                          WHERE AC.courseId = C.courseId
                            AND AG.agreementId = ?)';
            $params[] = $filters->agreementId;
        }
        
        $sql .= ' ORDER BY C.description ';
        
        $result = SDatabase::query($sql, $params);

        if( is_array($result) )
        {
            foreach( $result as $line )
            {
                $courseId = $line[0];
                $description = $line[1];
                $retVal[$courseId] = $description;
            }
        }
        return $retVal;
    }

    /**
     * Retorna uma lista de objetos do tipo desta classe com os resultados da busca.
     *
     * @param (stdClass) $filters Objeto contendo todos os campos pesquisáveis do objeto atual
     */
    public function search($filters)
    {
        $sql = 'SELECT courseId,
                       description
                  FROM tra.course';

        $params = array();
        foreach ( $filters as $key => $value )
        {
            $where .= ' AND ' . $key . ' = ?';
            $params[] = $value;
        }

        if ( strlen($where) > 0 )
        {
            $sql .= ' WHERE ' . substr($where, 5);
        }

        $result = SDatabase::query($sql, $params);

        $retVal = array();
        for ( $i=0; $i<count($result); $i++ )
        {
            $retVal[] = new TraCourse($result[$i][0]);
        }

        return $retVal;
    }

    /**
     * Retorna um array com os resultados da busca.
     *
     * @param (stdClass) $filters Objeto contendo todos os campos pesquisáveis do objeto atual
     */
    public function searchGrid($filters)
    {
        $sql = 'SELECT courseId,
                       description
                  FROM tra.course';

        $params = array();
        if ( $filters->courseId )
        {
            $where .= ' AND courseId = ?';
            $params[] = $filters->courseId;
        }
        elseif ( $filters->description )
        {
            $where .= ' AND description ILIKE UNACCENT(?)';
            $params[] = $filters->description . '%';
        }

        if ( strlen($where) > 0 )
        {
            $sql .= ' WHERE ' . substr($where, 5);
            $sql .= ' ORDER BY description';
        }

        return count($params) > 0 ? SDatabase::query($sql, $params) : array();
    }

    /**
     * Private methods
     */

    /**
     * Chamado pelo construtor, quando este recebe os dados de chave primária
     */
    private function populate()
    {
        $sql = 'SELECT courseId,
                       description,
                       userName,
                       ipAddress,
                       TO_CHAR(dateTime,\'' . SAGU::getParameter('BASIC', 'MASK_TIMESTAMP') . '\')
                  FROM tra.course
                 WHERE courseId = ?';

        $params = array();
        $params[] = $this->courseId;
        
        $result = SDatabase::query($sql, $params);

        if ( strlen($result[0][0]) <= 0 )
        {
            $module = SAGU::getFileModule(__FILE__);
            throw new Exception(_M('Curso @1 inexistente.', $module, $this->courseId));
        }

        list ( $this->courseId,
               $this->description,
               $this->userName,
               $this->ipAddress,
               $this->dateTime ) = $result[0];
    }

    /**
     * Insere um novo registro com base nas informações da classe
     */
    private function insert()
    {
        $sql = 'SELECT nextval(\'tra.course_courseId_seq\')';
        $result = SDatabase::query($sql);
        $newId = $result[0][0];

        $sql = 'INSERT INTO tra.course
                            (courseId,
                             description)
                     VALUES (?, ?)';

        $params = array();
        $params[] = $newId;
        $params[] = $this->description;
        
        $result = SDatabase::execute($sql, $params);

        if ( $result )
        {
            $this->courseId = $newId;
        }

        return $result;
    }

    /**
     * Atualiza um registro existente com base nas informações da classe
     */
    private function update()
    {
        $sql = 'UPDATE tra.course
                   SET description = ?
                 WHERE courseId = ?';

        $params = array();
        $params[] = $this->description;
        $params[] = $this->courseId;

        return SDatabase::execute($sql, $params);
    }
}
