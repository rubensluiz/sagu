class TraAddendumFile extends SType
{
    protected $addendumFileId;

    protected $fileId;

    protected $addendumId;

    
    public function __construct($addendumFileId = null)
    {
        if ( strlen($addendumFileId)  >  0 )
        {
            $this->addendumFileId = $addendumFileId;
            $this->populate();
        }
    }


    public function  __get($name)
    {
        return parent::__get($name);
    }

    public static function search($filters)
    {
        $sql = 'SELECT addendumFileId
                  FROM tra.addendumFile';
        $where = '';

        foreach ( $filters  as  $key => $value )
        {
            if ( (is_scalar($value))  &&  (strlen($value)  >  0) )
            {
                $where.=" AND {$key} = '{$value}'";
            }
        }

        if ( strlen($where)  >  0 )
        {
            $sql.=' WHERE '.substr($where, 5);
        }

        $sql.=' ORDER BY addendumFileId ';
        $result = SDatabase::query($sql);
        $retVal = array();

        for ( $i = 0; $i < count($result); $i++ )
        {
            $retVal[] = new TraAddendumFile($result[$i][0]);
        }

        return $retVal;
    }

    
    private function populate()
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);
        $sql = 'SELECT addendumFileId,
                       fileId,
                       addendumId,
                       username,
                       TO_CHAR(datetime, \''.SAGU::getParameter('BASIC', 'MASK_TIMESTAMP').'\'),
                       ipaddress
                  FROM tra.addendumFile
                 WHERE addendumFileId = ?';
        $result = SDatabase::query($sql, array($this->addendumFileId));

        if ( !strlen($result[0][0]) )
        {
            throw new Exception(_M('Registro inexistente. (@1)', $module));
        }

        list(  
                $this->addendumFileId,
                $this->fileId,
                $this->addendumId,
                $this->userName,
                $this->dateTime,
                $this->ipAddress,) = $result[0];
    }

    
    public function save()
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);

        $retVal = $this->insert();

        return $retVal;
    }


    private function insert()
    {
        $sql = "SELECT NEXTVAL('tra.addendumfile_addendumfileid_seq')";
        $result = SDatabase::query($sql);
        $newId = $result[0][0];

        $sql = 'INSERT INTO tra.addendumFile
                            (addendumFileId, fileId, addendumId)
                     VALUES (?, ?, ?)';
        $args = array($newId, $this->fileId, $this->addendumId);
        $result = SDatabase::execute($sql, $args);

        if ( $result )
        {
            $this->addendumFileId = $newId;
        }

        return $result;
    }
    

    public function delete()
    {
        if ( strlen($this->addendumFileId)  ==  0  )
        {
            throw new Exception(_M('Não é possível excluir um registro que ainda não foi salvo. (@1)', $module, __CLASS__));
        }

        $sql = 'DELETE FROM tra.addendumFile
                      WHERE addendumFileId = ?';
        $args = array($this->addendumFileId);
        $result = SDatabase::execute($sql, $args);

        if ( $result )
        {
            $this->addendumFileId = null;
        }

        return $result;
    }
}


