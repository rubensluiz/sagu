class TraEvaluationType extends SType
{
    /**
     * Table fields
     */
    
    /**
     * Identificador único da forma de avaliação.
     */
    protected $evaluationTypeId;
    /**
     * Descrição da forma de avaliação.
     */
    protected $description;

    /**
     * Constanstes referentes as formas de avaliação
     */

    /**
     * Código do tipo de avaliaçao por nota
     */
    const BY_NOTE = 1;

    /**
     * Código do tipo de avaliaçao por nota e frequência
     */
    const BY_NOTE_AND_FREQUENCY = 2;

    /**
     * Código do tipo de avaliaçao por frequência
     */
    const BY_FREQUENCY = 3;

    /**
     * Código do tipo de avaliaçao sem avaliação
     */
    const NO_EVALUATION = 4;


    /**
     * Construtor da classe
     *
     * @param (integer) $evaluationTypeId Chave primária da tabela
     */
    public function __construct($evaluationTypeId = null)
    {
        if ( !is_null($evaluationTypeId) )
        {
            $this->evaluationTypeId = $evaluationTypeId;
            $this->populate();
        }
    }

    /**
     * Common methods
     */

    /**
     * Detecta se o salvar deve inserir um novo (no caso de chave primária não definida)
     * ou se deve apenas atualizar um registro já existente (no caso de chave primária já definida)
     *
     * @return TRUE no caso de sucesso. Caso contrário, FALSE.
     */
    public function save()
    {
        // se chave primária definida, assume que deva ser feito update
        if ( strlen($this->evaluationTypeId) > 0 )
        {
            $retVal = $this->update();
        }
        
        return $retVal;
    }

    /**
     * Exclui da base de dados o objeto atual
     *
     * @return TRUE no caso de sucesso. Caso contrário, FALSE.
     */
    public function delete()
    {
        //Não é possível inserir remover uma forma de avaliação
    }

    /**
     * Duplica o registro atual.
     *
     * @return TRUE no caso de sucesso. Caso contrário, FALSE.
     */
    public function duplicate()
    {
        //Não é possível duplicar uma forma de avaliação
    }

    /**
     * Retorna uma lista de unidades.
     */
    public static function listEvaluationType()
    {
        $filters = new stdClass();
        $result = self::search($filters);

        if( is_array($result) )
        {
            foreach( $result  as $r )
            {
                $retVal[$r->evaluationTypeId] = $r->description;
            }
        }

        return $retVal;
    }

    /**
     * Retorna uma lista de objetos do tipo desta classe com os resultados da busca.
     *
     * @param (stdClass) $filters Objeto contendo todos os campos pesquisáveis do objeto atual
     */
    public function search($filters)
    {
        $sql = 'SELECT evaluationTypeId,
                       description
                  FROM tra.evaluationType';

        $params = array();
        foreach ( $filters as $key => $value )
        {
            $where .= ' AND ' . $key . ' = ?';
            $params[] = $value;
        }

        if ( strlen($where) > 0 )
        {
            $sql .= ' WHERE ' . substr($where, 5);
        }

        $result = SDatabase::query($sql, $params);

        $retVal = array();
        for ( $i=0; $i<count($result); $i++ )
        {
            $retVal[] = new TraEvaluationType($result[$i][0]);
        }

        return $retVal;
    }

    /**
     * Retorna um array com os resultados da busca.
     *
     * @param (stdClass) $filters Objeto contendo todos os campos pesquisáveis do objeto atual
     */
    public static function searchGrid($filters)
    {
        $sql = 'SELECT evaluationTypeId,
                       description
                  FROM tra.evaluationType';

        $params = array();
        if ( strlen($filters->evaluationTypeId) > 0 )
        {
            $where .= ' AND evaluationTypeId = ?';
            $params[] = $filters->evaluationTypeId;
        }
        elseif ( strlen($filters->description) > 0 )
        {
            $where .= ' AND description ILIKE UNACCENT(?)';
            $params[] = $filters->description;
        }

        if ( strlen($where) > 0 )
        {
            $sql .= ' WHERE ' . substr($where, 5);
            $sql .= ' ORDER BY description ';
            $result = SDatabase::query($sql, $params);
        }

        return $result;
    }

    /**
     * Private methods
     */

    /**
     * Chamado pelo construtor, quando este recebe os dados de chave primária
     */
    private function populate()
    {
        $sql = 'SELECT evaluationTypeId,
                       description
                  FROM tra.evaluationType
                 WHERE evaluationTypeId = ?';

        $params = array();
        $params[] = $this->evaluationTypeId;

        $result = SDatabase::query($sql, $params);

        if ( strlen($result[0][0]) <= 0 )
        {
            $module = SAGU::getFileModule(__FILE__);
            throw new Exception(_M('Tipo de avaliação @1 inexistente.', $module, $this->evaluationTypeId));
        }

        list ( $this->evaluationTypeId,
               $this->description ) = $result[0];
    }

    /**
     * Insere um novo registro com base nas informações da classe
     */
    private function insert()
    {
        //Não é possível inserir novas formas de avaliação
    }

    /**
     * Atualiza um registro existente com base nas informações da classe
     */
    private function update()
    {
        $sql = 'UPDATE tra.evaluationType
                   SET description = ?
                 WHERE evaluationTypeId = ?';

        $params = array();
        $params[] = $this->description;
        $params[] = $this->evaluationTypeId;

        return SDatabase::execute($sql, $params);
    }
}
?>