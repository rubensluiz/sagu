class GrdStepSearch extends SObjectGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $module = MIOLO::getCurrentModule();

        $columns = array(
            new MObjectGridColumn('stepId', _M('Código', $module), 'right', true, null, true, null, true ),
            new MObjectGridColumn('description', _M('Descrição', $module), 'left',  true, null, true, null, true ),
        );

        $primaryKey = array('stepId' => '%0%');

        parent::__construct($filters, $columns, __CLASS__, $primaryKey);
    }
}
