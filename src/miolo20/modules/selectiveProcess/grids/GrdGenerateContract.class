class GrdGenerateContract extends SGrid
{
    /**
     * Class constructor
     **/
    public function __construct($data)
    {
        $MIOLO = MIOLO::getInstance();
        $action = MIOLO::getCurrentAction();
        $module = SAGU::getFileModule(__FILE__);

        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */
        
        //Verificar se coluna de nome de curso é necessária (apenas no academico)
        $destinationModule = SprSelectiveProcess::obterDestinationModule($data->selectiveProcessId);
        
        $mostrar = ($destinationModule != SprSelectiveProcess::DEST_MODULE_PEDAGOGICO);
        
        $columns = array( new MGridColumn(_M('Código da inscrição', $module), 'right', true, null, false),
                          new MGridColumn(_M('Posição', $module), 'right', true, null, true),
                          new MGridColumn(_M('Código da inscrição', $module), 'right', true, null, true),
                          new MGridColumn(_M('Código da pessoa', $module), 'right', true, null, true),
                          new MGridColumn(_M('Nome', $module), 'left', true, null, true),
                          new MGridColumn(_M('Código do status de inscrição', $module), 'left', true, null, false),
                          new MGridColumn(_M('Estado no curso', $module), 'left', true, null, true),
                          new MGridColumn(_M('Código opção de curso', $module), 'left', true, null, false),
                          new MGridColumn(_M('Opção de curso', $module), 'left', true, null, true),
                          new MGridColumn(_M('Curso contrato / versão - turno - unidade', $module), 'left', true, null, $mostrar),
                          new MGridColumn(_M('Total de pontos', $module), 'left', true, null, true),
                          new MGridColumn(_M('Possui contrato/inscrição', $module), 'left', true, null, true, SAGU::listYesNo()),
                        );

        parent::__construct($data, $columns, 'GrdGenerateContract', null);

        // enable row selection
        $this->addActionSelect();
    }



    /*
     * Set default grid actions
     */
    public function setDefaultGridActions()
    {
        //Not implemented
    }    
}

?>
