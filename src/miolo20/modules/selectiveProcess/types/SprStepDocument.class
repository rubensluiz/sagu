/**
 * Documentos que devem ser entregues para que esta etapa possa ser validada.
 * @access public
 * @package Processo_seletivo
 */
class SprStepDocument extends SType
{
    /**
     * @var (integer) Identificador único do documento da etapa
     */
    private $stepDocumentId;
    /**
     * @var (integer) Identificador da etapa a qual este documento pertence
     */
    private $stepId;
    /**
     * @var (string) Descrição do documento da etapa
     */
    private $description;
    /**
     * @var (boolean) Define se o candidato poderá anexar uma versão digitalizada do documento.
     */
    private $allowFileAttach;
    
    /**
     * @var (boolean) Define se o documento é de preenchimento obrigatório.
     */
    private $eObrigatorio;

    /**
     * Construtor da classe
     *
     * @param (integer) $stepId Chave primária da tabela
     */
    public function __construct($stepDocumentId = null)
    {
        if ( ! is_null($stepDocumentId) )
        {
            $this->stepDocumentId = $stepDocumentId;
            $this->populate();
        }
    }

    /**
     * Data logic
     */
    public function __get($name)
    {
        return $this->$name;
    }

    public function __set($name, $value)
    {
        $this->$name = $value;
    }

    /*
     * Common methods
     */

    /**
     * Detecta se o salvar deve inserir um novo (no caso de chave primária não definida)
     * ou se deve apenas atualizar um registro já existente (no caso de chave primária já definida)
     *
     * @return TRUE no caso de sucesso. Caso contrário, FALSE.
     */
    public function save()
    {
        $module = SAGU::getFileModule(__FILE__);

        // se chave primária não está definida, assume que deva ser feito insert
        if ( strlen($this->stepDocumentId) == 0 )
        {
            $retVal = $this->insert();
        }
        // se chave primária definida, assume que deva ser feito update
        else
        {
            $retVal = $this->update();
        }

        return $retVal;
    }

    /**
     * Exclui da base de dados o objeto atual
     *
     * @return TRUE no caso de sucesso. Caso contrário, FALSE.
     */
    public function delete()
    {
        $sql = 'DELETE FROM spr.stepDocument
                      WHERE stepDocumentId = ?';

        $args = array($this->stepDocumentId);

        $result = SDatabase::execute($sql, $args);

        if ( $result)
        {
            $this->stepDocumentId = null;
        }

        return $result;
    }

    /**
     * Duplica o registro atual.
     *
     * @return TRUE no caso de sucesso. Caso contrário, FALSE.
     */
    public function duplicate()
    {
        $stepDocument = clone($this);
        $stepDocument->stepDocumentId = null;

        return $stepDocument;
    }

    /**
     * Retorna uma lista de objetos do tipo desta classe com os resultados da busca.
     *
     * @param (stdClass) $filters Objeto contendo todos os campos pesquisáveis do objeto atual
     */
    public function search($filters)
    {
        $sql = 'SELECT stepDocumentId
                  FROM spr.stepDocument';

        $where = '';
        foreach ( $filters as $key => $value )
        {
            $where .= ' AND ' . $key . ' = ' . $value;
        }

        if ( strlen($where) > 0 )
        {
            $sql .= ' WHERE ' . substr($where, 5);
        }

        $result = SDatabase::query($sql);

        $retVal = array();
        for ( $i=0; $i<count($result); $i++ )
        {
            $retVal[] = new SprStepDocument($result[$i][0]);
        }

        return $retVal;
    }

    /*
     * Private methods
     */

    /*
     * Chamado pelo construtor, quando este recebe os dados de chave primária
     */
    private function populate()
    {
        $sql = 'SELECT stepDocumentId,
                       stepId,
                       description,
                       allowFileAttach,
                       eobrigatorio,
                       arquivoEobrigatorio
                  FROM spr.stepDocument
                 WHERE stepDocumentId = ?';

        $result = SDatabase::query($sql, $this->stepDocumentId);

        if ( strlen($result[0][0]) <= 0 )
        {
            $module = SAGU::getFileModule(__FILE__);
            throw new Exception(_M('Etapa @1 inexistente.', $module, $this->stepDocumentId));
        }

        list ( $this->stepDocumentId,
               $this->stepId,
               $this->description,
               $this->allowFileAttach,
               $this->eObrigatorio,
               $this->arquivoEobrigatorio) = $result[0];
    }

    /*
     * Insere um novo registro com base nas informações da classe
     */
    private function insert()
    {
        $sql = 'SELECT nextval(\'spr.stepDocument_stepDocumentid_seq\')';

        $result = SDatabase::query($sql);
        $newId = $result[0][0];

        $sql = 'INSERT INTO spr.stepDocument
                                (stepDocumentId,
                                 stepId,
                                 description,
                                 allowFileAttach,
                                 eobrigatorio,
                                 arquivoEobrigatorio)
                     VALUES (?, ?, ?, ?, ?, ?)';

        $args = array($newId,
                      $this->stepId,
                      $this->description,
                      $this->allowFileAttach,
                      $this->eObrigatorio,
                      $this->arquivoEobrigatorio);

        $result = SDatabase::execute($sql, $args);

        if ( $result )
        {
            $this->stepDocumentId = $newId;
        }

        return $result;
    }

    /*
     * Atualiza um registro existente com base nas informações da classe
     */
    private function update()
    {
        $sql = 'UPDATE spr.stepDocument
                   SET stepId = ?,
                       description = ?,
                       allowFileAttach = ?,
                       eobrigatorio = ?,
                       arquivoEobrigatorio = ?
                 WHERE stepDocumentId = ?';

        $args = array($this->stepId,
                      $this->description,
                      $this->allowFileAttach,
                      $this->eObrigatorio,
                      $this->arquivoEobrigatorio,
                      $this->stepDocumentId);

        return SDatabase::execute($sql, $args);
    }
}

?>
