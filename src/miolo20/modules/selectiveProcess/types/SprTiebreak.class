/**
 * Lista de todos os possíveis critérios de desempate que podem ser utilizados, tais como "Por idade", "Por nota", "Por isso", "Por aquilo".
 */
class SprTiebreak extends SType
{
    
    const BY_AGE_DESCENDING = 1;
    const BY_AGE_ASCENDIG = 2;
    const BY_SUBSCRIPTION_DATE = 3;
    const BY_SORT = 4;
    const BY_EVALUATION_PRIORITY= 5;
    const BY_BEST_PUNCTUATION_IN_STEP = 6;

    /*
     * Table fields
     */
    private $tiebreakId;
    private $description;

    /**
     * Construtor da classe
     *
     * @param (integer) $tiebreakId Chave primária da tabela
     */
    public function __construct($tiebreakId = null)
    {
        if ( ! is_null($tiebreakId) )
        {
            $this->tiebreakId = $tiebreakId;
            $this->populate();
        }
    }

    /**
     * Data logic
     */
    public function __get($name)
    {
        return $this->$name;
    }

    public function __set($name, $value)
    {
        $this->$name = $value;
    }


    /*
     * Common methods
     */

    /**
     * Detecta se o salvar deve inserir um novo (no caso de chave primária não definida)
     * ou se deve apenas atualizar um registro já existente (no caso de chave primária já definida)
     *
     * @return TRUE no caso de sucesso. Caso contrário, FALSE.
     */
    public function save()
    {
        // se chave primária não está definida, assume que deva ser feito insert
        if ( strlen($this->tiebreakId) <= 0 )
        {
            $retVal = $this->insert();
        }
        // se chave primária definida, assume que deva ser feito update
        else
        {
            $retVal = $this->update();
        }

        return $retVal;
    }

    /**
     * Exclui da base de dados o objeto atual
     *
     * @return TRUE no caso de sucesso. Caso contrário, FALSE.
     */
    public function delete()
    {
        $sql = 'DELETE FROM spr.tiebreak
                      WHERE tiebreakId = ?';

        $args = array($this->tiebreakId);

        $result = SDatabase::execute($sql, $args);
        
        if ( $result)
        {
            $this->tiebreakId = null;
        }

        return $result;
    }

    /**
     * Duplica o registro atual.
     *
     * @return TRUE no caso de sucesso. Caso contrário, FALSE.
     */
    public function duplicate()
    {
        $tiebreak = clone($this);
        $tiebreak->tiebreakId = null;

        return $tiebreak;
    }

    /**
     * Retorna uma lista de objetos do tipo desta classe com os resultados da busca.
     *
     * @param (stdClass) $filters Objeto contendo todos os campos pesquisáveis do objeto atual
     */
    public function search($filters, $returnList=false)
    {
        $sql = 'SELECT tiebreakId,
                       description
                  FROM spr.tiebreak';

        $where = '';

        if ( is_array($filters) )
        {
            foreach ( $filters as $key => $value )
            {
                $where .= ' AND ' . $key . ' = ' . $value;
            }
        }

        if ( strlen($where) > 0 )
        {
            $sql .= ' WHERE ' . substr($where, 5);
        }

        $result = SDatabase::query($sql);

        $retVal = array();

        if ( !$returnList )
        {
            for ( $i=0; $i<count($result); $i++ )
            {
                $retVal[] = new SprTiebreak($result[$i][0]);
            }
        }
        else
        {
            if( is_array($result) )
            {
                foreach( $result  as $r )
                {
                    $retVal[$r[0]] = $r[1];
                }
            }
        }

        return $retVal;
    }

    /*
     * Private methods
     */

    /*
     * Chamado pelo construtor, quando este recebe os dados de chave primária
     */
    private function populate()
    {
        $sql = 'SELECT tiebreakId,
                       description
                  FROM spr.tiebreak
                 WHERE tiebreakId = ?';

        $result = SDatabase::query($sql, $this->tiebreakId);

        if ( strlen($result[0][0]) <= 0 )
        {
            $module = SAGU::getFileModule(__FILE__);
            throw new Exception(_M('Critério de desempate @1 inexistente.', $module, $this->tiebreakId));
        }

        list ( $this->tiebreakId,
               $this->description ) = $result[0];
    }

    /*
     * Insere um novo registro com base nas informações da classe
     */
    private function insert()
    {
        $sql = 'SELECT nextval(\'spr.tiebreak_tiebreakid_seq\')';

        $result = SDatabase::query($sql);
        $newId = $result[0][0];

        $sql = 'INSERT INTO spr.tiebreak
                            (tiebreakId,
                             description)
                     VALUES (?, ?)';

        $args = array($newId, $this->description);

        $result = SDatabase::execute($sql, $args);

        if ( $result )
        {
            $this->tiebreakId = $newId;
        }

        return $result;
    }

    /*
     * Atualiza um registro existente com base nas informações da classe
     */
    private function update()
    {
        $sql = 'UPDATE spr.tiebreak
                   SET description = ?
                 WHERE tiebreakId = ?';

        $args = array($this->description, $this->tiebreakId);

        return SDatabase::execute($sql, $args);
    }
}

?>
