/**
 * Grid used by form to display search results
 **/


class GrdPayRollDiscountSearch extends MGrid
{
/**
     * Class constructor
     **/
    public function __construct($values)
    {
        $MIOLO = MIOLO::getInstance();

        $home   = 'main:register:payrolldiscount';
        $module = MIOLO::_request('module');


        $columns = array(
new MGridColumn( _M('Cód. desconto em folha',          $module), 'left', true, '7%', false, null, true ),
new MGridColumn( _M('Data',                 $module), 'left', true, '20%', true, null, true ),
new MGridColumn( _M('Ramal',               $module), 'left', true, '6%', true, null, true ),
new MGridColumn( _M('Código do setor',            $module), 'left', true, '5%', false, null, true ),
new MGridColumn( _M('Setor',               $module), 'left', true, '14%', true, null, true ),
new MGridColumn( _M('Código de serviço',           $module), 'left', true, '5%', false, null, true ),
new MGridColumn( _M('Serviço',              $module), 'left', true,  '10%', true, null, true ),
new MGridColumn( _M('Quantidade',               $module), 'left', true,  '4%', true, null, true ),
new MGridColumn( _M('Valor unitário',        $module), 'right', true, '5%', true, null, true ),
new MGridColumn( _M('Código da pessoa',            $module), 'right', true,  '8%', false, null, true ),
new MGridColumn( _M('Pessoa',               $module), 'right', true,  '8%', true, null, true ),
new MGridColumn( _M('Operador',             $module), 'right', true,  '13%', true, null, true ),
new MGridColumn( _M('Código do setor do operador',        $module), 'right', true,  '5%', false, null, true ),
new MGridColumn( _M('Setor op.',        $module), 'right', true,  '5%', true, null, true ),
                        );
        $opts = array('function'=>'update','payRollDiscountId' =>'%0%');
        $href_edit = $MIOLO->getActionURL( $module, $home, null, $opts );
        $opts = array('function'=>'delete', 'payRollDiscountId'=>'%0%', 'event'=> 'tbBtnDelete_click');
        $href_delete = $MIOLO->getActionURL( $module, $home, null, $opts );
        unset($opts); //destroy the variable opts
        $url = $MIOLO->getActionURL($module,"$home:search",null,$opts);
        parent::__construct( null, $columns, $url, SAGU::getParameter('BASIC', 'LISTING_NREGS'), 0, 'gridPayRollDiscount' );
        $this->setIsScrollable();
        $this->addActionUpdate( $href_edit );
        $this->addActionDelete( $href_delete );
        $this->eventHandler();
    }

}
?>
