/**
 * Class to manipulate the ccpPrinter table
 **/
class BusinessControlCopiesBusSectorPrinter extends sBusiness
{
    public $MSQL, $MIOLO, $tables, $columns, $columnsId, $id;


    /**
    * construct
    */
    public function __construct()
    {
        $this->MIOLO        = MIOLO::getInstance();
        $this->MIOLO        ->getClass('basic','sagu');
        $module             = is_null($module) ? 'controlCopies' : $module;
        $this->MSQL         = new MSQL();
        $this->MSQL         ->setDb($this->getDatabase());
        $this->tables       = 'ccpSectorPrinter';
        $this->id           = 'personSectorId';
        $this->columns      = 'printerId, sectorId';
        $this->columnsId    = $this->id.','.$this->columns;
        
        parent::__construct();
    }


    /**
     * Return a specific record from the database
     *
     * @param $id (integer): Primary key of the record to be retrieved
     *
     * @return (object): Return an object of the type handled by the class
     *
     **/
    public function getSectorPrinter($id)
    {
        $this->MSQL->clear();
        $this->MSQL->setTables($this->tables);
        $this->MSQL->setColumns($this->columnsId);
        $this->MSQL->setWhere("$this->id = ?");
        $sql                            = $this->MSQL->select($id);
        $query                          = $this->getDatabase()->query($sql);
        $data->personSectorId           = $query[0][0];
        $data->printerId                = $query[0][1];
        $data->sectorId                 = $query[0][2];
        return $data;
    }


    /**
     * Do a search on the database table handled by the class
     *
     * @param $filters (object): Search filters
     *
     * @return (array): An array containing the search results
     **/
    public function searchSectorPrinter($data, $object = false)
    {
        $this->MSQL->clear();
        $this->MSQL->setTables(
                                "ccpSectorPrinter SP
                       LEFT JOIN ccpSector S
                              ON SP.sectorId = S.sectorId
                       LEFT JOIN ccpPrinter P
                              ON P.printerId = SP.printerId
                                ");
        $this->MSQL->setColumns("SP.personSectorId, SP.printerId, SP.sectorId, S.description,P.name");
        if ($data->personSectorId)
        {
            $this->MSQL->setWhere('SP.personSectorId = ?');
            $args[] = $data->personSectorId;
        }
        if ($data->printerId)
        {
            $this->MSQL->setWhere('SP.printerId = ?');
            $args[] = $data->printerId;
        }
        if ($data->sectorId)
        {
            $this->MSQL->setWhere('SP.sectorId = ?');
            $args[] = $data->sectorId;
        }
        $sql    = $this->MSQL->select($args);
        $query  = $this->getDatabase()->query($sql);
        if (!$object)
        {
            return $query;
        }
        else
        {
            if ($query)
            {
                foreach ($query as $line => $info)
                {
                    $result[$line]->personSectorId   = $info[0];
                    $result[$line]->printerId        = $info[1];
                    $result[$line]->sectorId         = $info[2];
                    $result[$line]->sdescription     = $info[3];
                    $result[$line]->printerName      = $info[4];
                }
                return $result;
            }
        }
    }


    /**
     * Insert a new record
     *
     * @param $data (object): An object of the type handled by the class
     *
     * @return True if succed, otherwise False
     *
     **/
    public function insertSectorPrinter($data, $printerId=NULL, $sectorId=NULL)
    {
        if (is_array($data))
        {
            foreach ($data as $line => $info)
            {
                $ok = $this->insertSectorPrinter($info, $printerId);
            }
            return $ok;
        }
        else
        {
            if ($printerId)
            {
                $data->printerId = $printerId;
            }
            if ($sectorId)
            {
                $data->sectorId  = $sectorId;
            }
            $this->MSQL->clear();
            $this->MSQL->setTables($this->tables);
            $this->MSQL->setColumns($this->columns);
            $args = array(
                            $data->printerId,
                            $data->sectorId
                         );
            $sql  = $this->MSQL->insert($args);
            return $this->getDatabase()->execute($sql);
        }
    }


    /**
     * Update data from a specific record
     *
     * @param $data (object): Data which will replace the old record data
     *
     * @return (boolean): True if succeed, otherwise False
     *
     **/
    public function updateSectorPrinter($data)
    {
        if (is_array($data) )
        {
            foreach ($data as $line => $info)
            {
                $ok = $this->updateSectorPrinter($info);
            }
            return $ok;
        }
        else
        {
            if ($data->remove)
            {
                return $this->deleteSectorPrinter($data->personSectorId);
            }
            else if (!$data->personSectorId)
            {
                return $this->insertSectorPrinter($data);
            }
            else
            {
                $this->MSQL->clear();
                $this->MSQL->setTables($this->tables);
                $this->MSQL->setColumns($this->columns);
                $args = array(
                                $data->printerId,
                                $data->sectorId,
                                $data->personSectorId
                            );
                $this->MSQL->setWhere("$this->id = ?");
                $sql  = $this->MSQL->update($args);
                return $this->getDatabase()->execute($sql);
            }
        }
    }


    /**
     * Delete a record
     *
     * @param $id (string): Primary key for deletion
     *
     * @return (boolean): True if succeed, otherwise False
     *
     **/
    public function deleteSectorPrinter($id)
    {
        $this->MSQL->clear();
        $this->MSQL->setTables($this->tables);
        $this->MSQL->setWhere( $this->id. ' = ? ');
        return $this->getDatabase()->execute( $this->MSQL->delete($id) );
    }
}
?>
