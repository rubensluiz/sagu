/**
 * Class to manipulate the ccpPrinter table
 **/
class BusinessControlCopiesBusSectorPeriod extends sBusiness
{
    public $MSQL, $MIOLO, $tables, $columns, $columnsId, $id;


    /**
    * construct
    */
    public function __construct()
    {
        $this->MIOLO        = MIOLO::getInstance();
        $this->MIOLO        ->getClass('basic','sagu');
        $module             = is_null($module) ? 'controlCopies' : $module;
        $this->MSQL         = new MSQL();
        $this->MSQL         ->setDb($this->getDatabase());
        $this->tables       = 'ccpSectorPeriod';
        $this->id           = 'sectorPeriodId';
        $this->columns      = 'sectorId, periodId, copiesNumber, availableCopies';
        $this->columnsId    = $this->id.','.$this->columns;
        
        parent::__construct();
    }


    /**
     * Return a specific record from the database
     *
     * @param $id (integer): Primary key of the record to be retrieved
     *
     * @return (object): Return an object of the type handled by the class
     *
     **/
    public function getSectorPeriod($id)
    {
        $this->MSQL->clear();
        $this->MSQL->setTables($this->tables);
        $this->MSQL->setColumns($this->columnsId);
        $this->MSQL->setWhere("$this->id = ?");
        $sql                            = $this->MSQL->select($id);
        $query                          = $this->getDatabase()->query($sql);
        $data->sectorPeriodId           = $query[0][0];
        $data->sectorId                 = $query[0][1];
        $data->periodId                 = $query[0][2];
        $data->copiesNumber             = $query[0][3];
        $data->availableCopies          = $query[0][4];
        return $data;
    }


    /**
     * Do a search on the database table handled by the class
     *
     * @param $filters (object): Search filters
     *
     * @return (array): An array containing the search results
     **/
    public function searchSectorPeriod($data, $object = false)
    {
        $this->MSQL->clear();
        $this->MSQL->setTables(
                                "ccpSectorPeriod SP
                    LEFT JOIN ccpSector S
                            ON SP.sectorId = S.sectorId"
                            );
        $this->MSQL->setColumns("SP.sectorPeriodId, SP.periodId, SP.sectorId, copiesNumber, availableCopies, S.description");
        if ($data->sectorPeriodId)
        {
            $this->MSQL->setWhere('SP.sectorPeriodId = ?');
            $args[] = $data->sectorPeriodId;
        }
        if ($data->periodId)
        {
            $this->MSQL->setWhere('SP.periodId = ?');
            $args[] = $data->periodId;
        }
        if ($data->sectorId)
        {
            $this->MSQL->setWhere('SP.sectorId = ?');
            $args[] = $data->sectorId;
        }
        if ($data->copiesNumber)
        {
            $this->MSQL->setWhere('SP.copiesNumber= ?');
            $args[] = $data->copiesNumber;
        }
        if ($data->availableCopies)
        {
            $this->MSQL->setWhere('SP.availableCopies = ?');
            $args[] = $data->availableCopies;
        }
        $this->MSQL->setOrderBy('SP.sectorPeriodId');
        $sql    = $this->MSQL->select($args);
        $query  = $this->getDatabase()->query($sql);
        if (!$object)
        {
            return $query;
        }
        else
        {
            if ($query)
            {
                foreach ($query as $line => $info)
                {
                    $result[$line]->sectorPeriodId      = $info[0];
                    $result[$line]->periodId            = $info[1];
                    $result[$line]->sectorId            = $info[2];
                    $result[$line]->copiesNumber        = $info[3];
                    $result[$line]->availableCopies     = $info[4];
                    $result[$line]->sdescription        = $info[5];
                }
                return $result;
            }
        }
    }


    /**
     * Insert a new record
     *
     * @param $data (object): An object of the type handled by the class
     *
     * @return True if succed, otherwise False
     *
     **/
    public function insertSectorPeriod($data, $periodId=null )
    {
        if (is_array($data))
        {
            foreach ($data as $line => $info)
            {
                $ok = $this->insertSectorPeriod($info, $periodId);
            }
            return $ok;
        }
        else
        {
            //put printerId if dont has it
            if ($periodId)
            {
                $data->periodId = $periodId;
            }
            $this->MSQL->clear();
            $this->MSQL->setTables($this->tables);
            $this->MSQL->setColumns($this->columns);
            $args = array(
                            $data->sectorId,
                            $data->periodId,
                            $data->copiesNumber,
                            $data->availableCopies
                         );
            $sql  = $this->MSQL->insert($args);
            return $this->getDatabase()->execute($sql);
        }
    }


    /**
     * Update data from a specific record
     *
     * @param $data (object): Data which will replace the old record data
     *
     * @return (boolean): True if succeed, otherwise False
     *
     **/
    public function updateSectorPeriod($data)
    {
        if (is_array($data) )
        {
            foreach ($data as $line => $info)
            {
                $ok = $this->updateSectorPeriod($info);
            }
            return $ok;
        }
        else
        {
            if (!$data->availableCopies)
            {
                $data->availableCopies = 1;
            }
            if ($data->remove)
            {
                return $this->deleteSectorPeriod($data->sectorPeriodId);
            }
            else if (!$data->sectorPeriodId)
            {
                return $this->insertSectorPeriod($data);
            }
            else
            {
                $this->MSQL->clear();
                $this->MSQL->setTables($this->tables);
                $this->MSQL->setColumns($this->columns);
                $args = array(
                                $data->sectorId,
                                $data->periodId,
                                $data->copiesNumber,
                                $data->availableCopies,
                                $data->sectorPeriodId
                             );
                $this->MSQL->setWhere("$this->id = ?");
                $sql  = $this->MSQL->update($args);
                return $this->getDatabase()->execute($sql);
            }
        }
    }


    /**
     * Delete a record
     *
     * @param $id (string): Primary key for deletion
     *
     * @return (boolean): True if succeed, otherwise False
     *
     **/
    public function deleteSectorPeriod($id)
    {
        $this->MSQL->clear();
        $this->MSQL->setTables($this->tables);
        $this->MSQL->setWhere( $this->id. ' = ? ');
        return $this->getDatabase()->execute( $this->MSQL->delete($id) );
    }
}
?>
