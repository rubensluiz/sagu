/**
 * Class to manipulate the ccpPrinter table
 **/
class BusinessControlCopiesBusPrinter extends sBusiness
{
    public $MSQL, $MIOLO, $tables, $columns, $columnsId, $id;

    /**
    * construct
    */
    public function __construct()
    {
        $this->MIOLO        = MIOLO::getInstance();
        $this->MIOLO        ->getClass('basic','sagu');
        $module             = is_null($module) ? 'controlCopies' : $module;
        $this->MSQL         = new MSQL();
        $this->MSQL         ->setDb($this->getDatabase());
        $this->tables       = 'ccpPrinter';
        $this->id           = 'printerId';
        $this->columns      = 'name, physicalResourceId, physicalResourceVersion';
        $this->columnsId    = $this->id.','.$this->columns;
        
        parent::__construct();
    }


    /**
     * Return a specific record from the database
     *
     * @param $id (integer): Primary key of the record to be retrieved
     *
     * @return (object): Return an object of the type handled by the class
     *
     **/
    public function getPrinter($id)
    {
        $this->MSQL->clear();
        $this->MSQL->setTables($this->tables);
        $this->MSQL->setColumns($this->columnsId);
        $this->MSQL->setWhere("$this->id = ?");
        $sql                            = $this->MSQL->select($id);
        $query                          = $this->getDatabase()->query($sql);
        $data->printerId                = $query[0][0];
        $data->name                     = $query[0][1];
        $data->printerName              = $query[0][1];
        $data->physicalResourceId       = $query[0][2];
        $data->physicalResourceVersion  = $query[0][3];
        return $data;
    }


    /**
    * Return the next sequence to printer id.
    *
    */
    public function getNextVal()
    {
        $sql    = "select nextval('seq_printerId')";
        $query  = $this->getDatabase()->query($sql);
        return  $query[0][0];
    }

    /**
     * Do a search on the database table handled by the class
     *
     * @param $filters (object): Search filters
     *
     * @return (array): An array containing the search results
     **/
    public function searchPrinter($data)
    {
        $this->MSQL->clear();
        $this->MSQL->setTables($this->tables);
        $this->MSQL->setColumns($this->columnsId);
        if ($data->printerId)
        {
            $this->MSQL->setWhere('printerId = ?');
            $args[] = $data->printerId;
        }
        if ($data->physicalResourceId)
        {
            $this->MSQL->setWhere('physicalResourceId = ?');
            $args[] = $data->physicalResourceId;
        }
        if ($data->printerName)
        {
            $this->MSQL->setWhere('name ilike ?');
            $args[] = '%'.$data->printerName.'%';
        }
        $this->MSQL->setOrderBy('name');
        $sql    = $this->MSQL->select($args);
        $query  = $this->getDatabase()->query($sql);
        return $query;
    }


    /**
     * Insert a new record
     *
     * @param $data (object): An object of the type handled by the class
     *
     * @return True if succed, otherwise False
     *
     **/
    public function insertPrinter($data)
    {
        // if has printerId
        if ($data->printerId)
        {
            $this->MSQL->clear();
            $this->MSQL->setTables($this->tables);
            $this->MSQL->setColumns($this->columnsId);
            $args = array(
                            $data->printerId,
                            $data->printerName,
                            $data->physicalResourceId,
                            $data->physicalResourceVersion
                        );
            $sql  = $this->MSQL->insert($args);
            return $this->getDatabase()->execute($sql);
        }
        else
        {
            $this->MSQL->clear();
            $this->MSQL->setTables($this->tables);
            $this->MSQL->setColumns($this->columns);
            $args = array(
                            $data->printerName,
                            $data->physicalResourceId,
                            $data->physicalResourceVersion
                        );
            $sql  = $this->MSQL->insert($args);
            return $this->getDatabase()->execute($sql);
        }
    }


    /**
     * Update data from a specific record
     *
     * @param $data (object): Data which will replace the old record data
     *
     * @return (boolean): True if succeed, otherwise False
     *
     **/
    public function updatePrinter($data)
    {
        $this->MSQL->clear();
        $this->MSQL->setTables($this->tables);
        $this->MSQL->setColumns($this->columns);
        $args = array(
                        $data->printerName,
                        $data->physicalResourceId,
                        $data->physicalResourceVersion,
                        $data->printerId
                     );
        $this->MSQL->setWhere("$this->id = ?");
        $sql  = $this->MSQL->update($args);
        return $this->getDatabase()->execute($sql);
    }


    /**
     * Delete a record
     *
     * @param $id (string): Primary key for deletion
     *
     * @return (boolean): True if succeed, otherwise False
     *
     **/
    public function deletePrinter($id)
    {
        $this->MSQL->clear();
        $this->MSQL->setTables($this->tables);
        $this->MSQL->setWhere( $this->id. ' = ? ');
        return $this->getDatabase()->execute( $this->MSQL->delete($id) );
    }
}
