class FrmRequestFaxSearch extends MForm
{
    private $home;
    private $module;

    public function __construct($data)
    {
        $this->module = 'basic';
        $module = $this->module;

        $this->home   = $data->home;

        parent::__construct(_M('Localizar',$module));

        // hide the 'Submit' button
        $this->setShowPostButton(false);

        $this->setHelp(get_class($this), MIOLO::getCurrentModule(), MIOLO::getCurrentAction());

        $this->eventHandler();
    }
    
    public function createFields()
    {
    $MIOLO   = MIOLO::getInstance();
    $module  = MIOLO::getCurrentModule();
    $toolBar = new MToolBar('toolBar',$MIOLO->getActionURL($module,'main:register:requestfax'));
    $toolBar->disableButton('tbBtnDelete');
    $toolBar->disableButton('tbBtnSave');
    $toolBar->disableButton('tbBtnPrint');

     //favoritos
        $enabledImage  = $MIOLO->getUI()->GetImageTheme($MIOLO->theme->id, 'bookmark-20x20.png');
        $disabledImage = $MIOLO->getUI()->GetImageTheme($MIOLO->theme->id, 'bookmark-disabled-20x20.png');
        $url           = $MIOLO->getActionURL($module, $this->home, null, array('function' => 'search', 'event' => 'bookmark'));
        

        if ( MIOLO::_request('event') == 'bookmark' )
        {
            $MIOLO->getClass('basic', 'access');
            access::insert('Request Fax', $this->home, 'physicalPerson-16x16.png', true);
        }
      //fim favoritos

   $fields[]   = $toolBar;
   $requestID = new MTextField('request', $this->getFormValue('request',$data->request), _M('Código de requisição') , 14);
   $fields[]   = $requestID;

   $requestFax = new MTextField('telephone', $this->getFormValue('telephone',$data->telephone), _M('Telefone') , 14);
   $fields[]   = $requestFax;

   $sendedLabelS = new MText('sendedLabelS', _M('Enviado',$module) . '?');
   $sendedLabelS->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
   $flds[] = $sendedLabelS;

   
   $sendedS    = new MRadioButtonGroup('sended', null, SAGU::listYesNo(1), $data->sended, null, 'horizontal');
   $sendedS->setShowLabel(false);
   $flds[]     = $sendedS;
   $tariff     = new MTextField('tariff', $this->getFormValue('tariff',$data->tariff), _M('Tarifa'), 14);
   $fields[]   = $tariff;


   $hctSent = new MHContainer(null,$flds);
   $fields[]  = $hctSent; 
   unset ($flds);

   $fields[]  = new MButton('btnSearch',_M('Localizar',$module));
   $this->setLabelWidth(SAGU::getParameter('BASIC', 'FIELD_LABEL_SIZE'));

   $this->setFields($fields);
    
    //get values of createFields
    $filters->request    = $this->request  ->value;
    $filters->telephone  = $this->telephone->value;
    $filters->sended     = $this->sended   ->value;
    $filters->tariff     = $this->tariff   ->value;

    // create the grid without values, 
    $grdResults = $MIOLO->getUI()->getGrid($module,'GrdRequestFaxSearch', $values);
    $business   = new BusinessControlCopiesBusRequestFax();
    $data       = $business->searchRequestFax($filters);
    $grdResults->setData($data);
    $this->addField($grdResults);
    }
}

