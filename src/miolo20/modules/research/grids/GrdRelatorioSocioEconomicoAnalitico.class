/**
 * Description of GrdRelatorioSocioEconomicoAnalitico
 *
 * @author augusto
 */
class GrdRelatorioSocioEconomicoAnalitico extends SGrid
{
    /**
     * Class constructor
     */
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);
        
        $columns = array();
        
        if ( $filters->codePessoa == DB_TRUE )
        {
            $columns[] = new MGridColumn(_M('Código da pessoa', $module), 'right', true, null, true, null, true);
        }
        if ( $filters->namePessoa == DB_TRUE )
        {
            $columns[] = new MGridColumn(_M('Nome', $module), 'left', true, null, true, null, true);
        }
        if ( $filters->phone == DB_TRUE )
        {
            $columns[] = new MGridColumn(_M('Telefone', $module), 'left', true, null, true, null, true);
        }
        if ( $filters->email == DB_TRUE )
        {
            $columns[] = new MGridColumn(_M('E-mail', $module), 'left', true, null, true, null, true);
        }
        if ( $filters->endereco == DB_TRUE )
        {
            $columns[] = new MGridColumn(_M('Endereço', $module), 'left', true, null, true, null, true);
        }
        if ( $filters->sexo == DB_TRUE )
        {
            $columns[] = new MGridColumn(_M('Sexo', $module), 'center', true, null, true, null, true);
        }
        if ( $filters->rg == DB_TRUE )
        {
            $columns[] = new MGridColumn(_M('RG', $module), 'left', true, null, true, null, true);
        }
        if ( $filters->cpf == DB_TRUE )
        {
            $columns[] = new MGridColumn(_M('CPF', $module), 'left', true, null, true, null, true);
        }
        if ( $filters->questao == DB_TRUE )
        {
            $columns[] = new MGridColumn(_M('Questão', $module), 'left', true, null, true, null, true);
        }
        if ( $filters->resposta == DB_TRUE )
        {
            $columns[] = new MGridColumn(_M('Resposta', $module), 'left', true, null, true, null, true);
        }
        
        $columns[] = new MGridColumn(_M('Hidden', $module), 'left', true, null, false, null, true);

        parent::__construct($filters, $columns, __CLASS__);

        $this->setIsScrollable(true,'99%','500px');
        $this->clearActions();
    }
}

?>
