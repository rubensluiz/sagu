<?php
class MDataGridColumn extends MGridColumn
{
    var $field; // field of query ("field" or "table.field")
    var $table; // owner of field

    function __construct($field,          $title = '',    $align = 'left', $nowrap = false, $width = 0, $visible = true,
                         $options = null, $order = false, $filter = false)
    {
        parent::__construct($title, $align, $nowrap, $width, $visible, $options, $order, $filter);
        $this->field = $field;
        $f = explode('.', $field);

        if (count($f) == 2)
        {
            $this->field = $f[1];
            $this->table = $f[0];
        }
    }
}

