<?php

class trimcaseconverter implements IConverter
{
   private $case;

   function trimcaseconverter()
   {
   }

   function init($properties)
   {
      $this->case = $properties['case'];
   } 

   function convertFrom($object)
   {
       switch ($this->case)
       {
           case 'upper': $o = strtoupper(trim((string)$object)); break;
           case 'lower': $o = strtolower(trim((string)$object)); break;
       } 
       return $o;
   }

   function convertTo($object)
   {
       return strtoupper(trim((string)$object));
   }

   function convertColumn($object)
   {
       return $object;
   }

   function convertWhere($object)
   {
       return $object;
   }

}
?>